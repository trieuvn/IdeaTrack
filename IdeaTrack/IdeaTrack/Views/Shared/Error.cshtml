@model ErrorViewModel
@{
    ViewData["Title"] = "UEF LMS";
    Layout = "_Layout";
}

<div class="container">

    <!-- Home -->
    <div class="mt-3">
        <a href="/" class="nav-home">Home</a>
    </div>

    <!-- Title -->
    <h1 class="page-title">UEF LMS</h1>

    <!-- Error message -->
    <div class="alert alert-danger mt-4">
        <div class="fw-bold">
            An error occurred while processing your request.
        </div>

        @if (Model.ShowRequestId)
        {
            <div class="mt-2">
                <small>
                    <strong>Request ID:</strong>
                    <code>@Model.RequestId</code>
                </small>
            </div>
        }

        <div class="mt-2">
            <a href="#" class="text-decoration-none fw-semibold text-danger">
                More information about this error
            </a>
        </div>
    </div>

    <!-- Continue button -->
    <div class="text-end mt-5">
        <a href="/Identity/Account/Login" class="btn btn-primary btn-continue">
            Continue
        </a>
    </div>

</div>
