@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IdeaTrack</title>
    <link rel="icon" type="image/x-icon" href="/icons/logo-uef.ico">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/guildline.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Google Fonts + Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/page.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />
</head>

<body>

    <!-- HEADER -->
    <header class="app-header">
        <div class="app-title">
            <img src="/images/logo-uef.png" height="32" class="me-2" />
            <span>IdeaTrack</span>
        </div>
    </header>

    <div class="app-layout">

        <!-- SIDEBAR -->
        <aside class="sidebar d-flex flex-column">
            
            <!-- U1. LOGIN / PROFILE (Moved to Top) -->
            <partial name="_LoginPartial" />

            <!-- MENU -->
            <div class="sidebar-nav">

                <a asp-controller="Home"
                   asp-action="Index"
                   id="nav-home"
                   class="@(currentController == "Home" && currentAction == "Index" ? "active" : "")">
                    <span class="material-icons">home</span> Home
                </a>

                <a href="/#leaderboard-section"
                   id="nav-leaderboard">
                    <span class="material-icons">leaderboard</span> Leaderboard
                </a>

                <a asp-controller="Home"
                   asp-action="About"
                   class="@(currentController == "Home" && currentAction == "About" ? "active" : "")">
                    <span class="material-icons">info</span> About
                </a>

                <a asp-controller="Home"
                   asp-action="Privacy"
                   class="@(currentController == "Home" && currentAction == "Privacy" ? "active" : "")">
                    <span class="material-icons">menu_book</span> Guidelines
                </a>

            </div>

            <!-- U3. PORTAL BUTTON (Fixed at Bottom) -->
            @if (ViewBag.PortalUrl != null)
            {
                <div class="p-3 border-top mt-auto bg-white">
                    <a href="@ViewBag.PortalUrl" class="btn-portal mb-0 w-100 text-decoration-none">
                        <span class="material-icons" style="font-size: 18px;">dashboard</span>
                        Go to @ViewBag.PortalName
                    </a>
                </div>
            }
        </aside>

        <!-- MAIN -->
        <main class="main-content">
            @RenderBody()
        </main>

    </div>
    


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Only run on Home/Index page
            if (window.location.pathname === '/' || window.location.pathname.toLowerCase() === '/home/index' || window.location.pathname.toLowerCase() === '/home') {
                const navHome = document.getElementById('nav-home');
                const navLeaderboard = document.getElementById('nav-leaderboard');
                const leaderboardSection = document.getElementById('leaderboard-section');

                function updateActiveState() {
                    if (!leaderboardSection) return;

                    const rect = leaderboardSection.getBoundingClientRect();
                    // Check if leaderboard section is largely in view or scrolled past header
                    // Use a threshold: if top of leaderboard is within top 50% of viewport
                    const isLeaderboardActive = (rect.top <= window.innerHeight / 2);

                    if (isLeaderboardActive) {
                        navHome.classList.remove('active');
                        navLeaderboard.classList.add('active');
                    } else {
                        navLeaderboard.classList.remove('active');
                        navHome.classList.add('active');
                    }
                }

                // Initial check
                updateActiveState();

                // Listen on scroll
                window.addEventListener('scroll', updateActiveState);
                
                // Handle click on Leaderboard link to ensure smooth active update
                if (navLeaderboard) {
                    navLeaderboard.addEventListener('click', function() {
                        // Allow default anchor jump, but force update state slightly delayed to handle smooth scroll
                        setTimeout(updateActiveState, 100);
                    });
                }
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
