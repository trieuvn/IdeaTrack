@model IdeaTrack.Models.ViewModels.LeaderboardViewModel
@{
    ViewData["Title"] = "Leaderboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">
            <i class="fas fa-trophy me-2"></i>Leaderboard
        </h1>
        <p class="lead text-muted">Honoring outstanding initiatives and authors</p>
    </div>

    <!-- Period Filter -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-4">
            <form method="get" class="d-flex gap-2">
                <select name="periodId" class="form-select" onchange="this.form.submit()">
                    @foreach (var period in Model.Periods)
                    {
                        <option value="@period.Id" selected="@(period.Id == Model.SelectedPeriodId)">
                            @period.Name @(period.IsActive ? "(Current)" : "")
                        </option>
                    }
                </select>
            </form>
        </div>
    </div>

    <div class="row g-4">
        <!-- Top Initiatives -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-gradient bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-lightbulb me-2"></i>Top Initiatives
                    </h5>
                    <a asp-action="TopInitiatives" asp-route-periodId="@Model.SelectedPeriodId" class="btn btn-light btn-sm">
                        View All
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (Model.TopInitiatives.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 50px">#</th>
                                        <th>Initiative</th>
                                        <th style="width: 100px" class="text-end">Score</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.TopInitiatives)
                                    {
                                        <tr>
                                            <td>
                                                @if (item.Rank <= 3)
                                                {
                                                    var medalColor = item.Rank == 1 ? "gold" : item.Rank == 2 ? "silver" : "#CD7F32";
                                                    <i class="fas fa-medal fa-lg" style="color: @medalColor"></i>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">@item.Rank</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="fw-semibold">@item.Title</div>
                                                <small class="text-muted">@item.AuthorName - @item.DepartmentName</small>
                                            </td>
                                            <td class="text-end">
                                                <span class="badge bg-success fs-6">@item.AverageScore.ToString("F1")</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="fas fa-clipboard-list fa-3x mb-3"></i>
                            <p>No ranking data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Top Authors -->
        <div class="col-lg-6">
            <div class="card shadow-sm h-100 border-0">
                <div class="card-header bg-gradient bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-user-graduate me-2"></i>Top Authors
                    </h5>
                    <a asp-action="TopAuthors" asp-route-periodId="@Model.SelectedPeriodId" class="btn btn-light btn-sm">
                        View All
                    </a>
                </div>
                <div class="card-body p-0">
                    @if (Model.TopAuthors.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 50px">#</th>
                                        <th>Author</th>
                                        <th style="width: 80px" class="text-center">Count</th>
                                        <th style="width: 100px" class="text-end">Total Score</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.TopAuthors)
                                    {
                                        <tr>
                                            <td>
                                                @if (item.Rank <= 3)
                                                {
                                                    var medalColor = item.Rank == 1 ? "gold" : item.Rank == 2 ? "silver" : "#CD7F32";
                                                    <i class="fas fa-medal fa-lg" style="color: @medalColor"></i>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">@item.Rank</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="fw-semibold">@item.AuthorName</div>
                                                <small class="text-muted">@item.DepartmentName</small>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-info">@item.TotalInitiatives</span>
                                            </td>
                                            <td class="text-end">
                                                <span class="badge bg-success fs-6">@item.TotalScore.ToString("F1")</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="fas fa-users fa-3x mb-3"></i>
                            <p>No ranking data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="row mt-5">
        <div class="col-12 text-center">
            <a asp-action="ReferenceForms" class="btn btn-outline-primary btn-lg me-3">
                <i class="fas fa-download me-2"></i>Download Reference Forms
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                <i class="fas fa-home me-2"></i>Back to Home
            </a>
        </div>
    </div>
</div>
