@model List<IdeaTrack.Models.ViewModels.TopInitiativeItem>
@{
    ViewData["Title"] = "Top Initiatives";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var periods = ViewBag.Periods as List<IdeaTrack.Models.ViewModels.PeriodSelectItem>;
    var selectedPeriodId = ViewBag.SelectedPeriodId as int?;
    var currentPage = (int)ViewBag.CurrentPage;
    var totalPages = (int)ViewBag.TotalPages;
    var totalCount = (int)ViewBag.TotalCount;
}

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">
            <i class="fas fa-lightbulb me-2"></i>Top Initiatives
        </h2>
        <form method="get" class="d-flex gap-2">
            <select name="periodId" class="form-select" style="width: 250px" onchange="this.form.submit()">
                @if (periods != null)
                {
                    @foreach (var period in periods)
                    {
                        <option value="@period.Id" selected="@(period.Id == selectedPeriodId)">
                            @period.Name @(period.IsActive ? "(Current)" : "")
                        </option>
                    }
                }
            </select>
        </form>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 60px">Rank</th>
                                <th>Code</th>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Author</th>
                                <th>Department</th>
                                <th class="text-end">Avg Score</th>
                                <th class="text-center">Result</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (item.Rank <= 3)
                                        {
                                            var medalColor = item.Rank == 1 ? "gold" : item.Rank == 2 ? "silver" : "#CD7F32";
                                            <i class="fas fa-medal fa-lg" style="color: @medalColor"></i>
                                        }
                                        else
                                        {
                                            <span class="fw-bold">@item.Rank</span>
                                        }
                                    </td>
                                    <td><code>@item.InitiativeCode</code></td>
                                    <td class="fw-semibold">@item.Title</td>
                                    <td><span class="badge bg-secondary">@item.CategoryName</span></td>
                                    <td>@item.AuthorName</td>
                                    <td>@item.DepartmentName</td>
                                    <td class="text-end">
                                        <span class="badge bg-success fs-6">@item.AverageScore.ToString("F2")</span>
                                    </td>
                                    <td class="text-center">
                                        @if (item.Status == IdeaTrack.Models.InitiativeStatus.Approved)
                                        {
                                            <span class="badge bg-success">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Rejected</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <nav aria-label="Page navigation" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="TopInitiatives" asp-route-periodId="@selectedPeriodId" asp-route-page="@(currentPage - 1)">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>
                            @for (int i = 1; i <= totalPages; i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" asp-action="TopInitiatives" asp-route-periodId="@selectedPeriodId" asp-route-page="@i">@i</a>
                                </li>
                            }
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="TopInitiatives" asp-route-periodId="@selectedPeriodId" asp-route-page="@(currentPage + 1)">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <p class="text-center text-muted">Showing @Model.Count / @totalCount initiatives</p>
                }
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-clipboard-list fa-4x mb-3"></i>
                    <p>No ranking data available</p>
                </div>
            }
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>Back
        </a>
    </div>
</div>
