@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Faculty Manager (Dean)</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/facultyleader/main.css" />
    <link rel="icon" type="image/x-icon" href="/lib/favicon.ico">
</head>
<body>
    <header class="header">
        <div class="header-left">
            <a href="/Faculty" class="logo-container">
                <i class="bi bi-mortarboard-fill logo-icon"></i>
                <span class="logo-text">Faculty Manager <span class="logo-sub">(Dean)</span></span>
            </a>

            <nav>
                <ul class="nav-custom">
                    <li>
                        <a href="/Faculty/Dashboard"
                           class="nav-link @(currentController == "Dashboard" && currentAction == "Index" ? "active" : "")">
                            Initiative List
                        </a>
                    </li>

                    <li>
                        <a href="/Faculty/Dashboard/Progress"
                           class="nav-link @(currentAction == "Progress" ? "active" : "")">
                            Statistics
                        </a>
                    </li>

                    <li>
                        <a href="/Faculty/Dashboard/Review"
                           class="nav-link @(currentAction == "Review" ? "active" : "")">
                            Revision Requests
                        </a>
                    </li>
                    <li>
                        <a href="/Faculty/Dashboard/Profile"
                           class="nav-link @(currentAction == "Profile" ? "active" : "")">
                            User Profile
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

        <div class="header-right">
            <button class="notification-btn" aria-label="Notifications">
                <i class="bi bi-bell-fill"></i>
            </button>

            <div class="divider"></div>

            <div class="user-profile">
                <div class="user-info text-end">
                    <span class="user-name">Nguyen Van A</span>
                    <span class="user-role">Dean of Faculty</span>
                </div>
                <div class="avatar-wrapper">
                    <img src="https://i.pravatar.cc/100?img=11" alt="Avatar" class="avatar" />
                </div>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {

            // 1. Check if Status Chart exists
            const statusChartEl = document.getElementById('statusChart');
            if (statusChartEl) {
                const statusCtx = statusChartEl.getContext('2d');
                new Chart(statusCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Pending', 'Forwarded to R&D', 'Revision Required'],
                        datasets: [{
                            data: [18.5, 69.2, 12.3],
                            backgroundColor: ['#ffc107', '#198754', '#dc3545'],
                            borderWidth: 0,
                            cutout: '80%'
                        }]
                    },
                    options: {
                        plugins: { legend: { display: false } },
                        maintainAspectRatio: false
                    }
                });
            }

            // 2. Check if Trend Chart exists
            const trendChartEl = document.getElementById('trendChart');
            if (trendChartEl) {
                const trendCtx = trendChartEl.getContext('2d');

                // Create Gradient
                const gradient = trendCtx.createLinearGradient(0, 0, 0, 220);
                gradient.addColorStop(0, 'rgba(59, 130, 246, 0.4)'); // light blue
                gradient.addColorStop(1, 'rgba(59, 130, 246, 0)');

                new Chart(trendCtx, {
                    type: 'line',
                    data: {
                        labels: ['20/10', '21/10', '22/10', '23/10', '24/10'],
                        datasets: [{
                            label: 'Submissions',
                            data: [3, 7, 5, 9, 6],
                            fill: true,
                            backgroundColor: gradient,
                            borderColor: '#3b82f6',
                            borderWidth: 2,
                            tension: 0.4,
                            pointRadius: 4,
                            pointBackgroundColor: '#3b82f6'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: {
                            x: { grid: { display: false } },
                            y: {
                                beginAtZero: true,
                                grid: { display: false },
                                ticks: { stepSize: 2 }
                            }
                        }
                    }
                });
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>