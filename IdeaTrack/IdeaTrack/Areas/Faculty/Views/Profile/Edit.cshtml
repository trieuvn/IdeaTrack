@model IdeaTrack.Areas.Faculty.Models.ProfileEditVM

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-1">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Profile", new { area = "Faculty" })" class="text-decoration-none">Profile</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Edit</li>
                        </ol>
                    </nav>
                    <h2 class="fw-bold mb-0">Edit Personal Profile</h2>
                </div>
                <a href="@Url.Action("Index", "Profile", new { area = "Faculty" })" class="btn btn-outline-secondary rounded-pill px-4">
                    <i class="bi bi-arrow-left me-2"></i>Back
                </a>
            </div>

            <!-- Edit Form Card -->
            <div class="card border-0 shadow-sm" style="border-radius: 16px;">
                <div class="card-body p-4">
                    <form asp-action="Edit" asp-controller="Profile" asp-area="Faculty" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="Email" />

                        <!-- Avatar Section -->
                        <div class="text-center mb-4">
                            <div class="position-relative d-inline-block">
                                <img src="@(string.IsNullOrEmpty(Model.AvatarUrl) ? "https://i.pravatar.cc/150?img=32" : Model.AvatarUrl)" 
                                     alt="Avatar" 
                                     class="rounded-circle border border-3 shadow-sm" 
                                     style="width: 120px; height: 120px; object-fit: cover;"
                                     id="avatarPreview">
                                <button type="button" class="position-absolute bottom-0 end-0 btn btn-sm btn-primary rounded-circle" 
                                        style="width: 36px; height: 36px;" 
                                        data-bs-toggle="modal" data-bs-target="#avatarModal">
                                    <i class="bi bi-camera"></i>
                                </button>
                            </div>
                            <input type="hidden" asp-for="AvatarUrl" id="avatarUrlInput" />
                        </div>

                        <!-- Personal Info -->
                        <h5 class="fw-bold mb-3 border-bottom pb-2">
                            <i class="bi bi-person me-2 text-primary"></i>Personal Information
                        </h5>
                        
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label fw-medium">Full Name</label>
                                <input asp-for="FullName" class="form-control form-control-lg rounded-3" placeholder="Enter your full name" />
                                <span asp-validation-for="FullName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-medium">Email (cannot be changed)</label>
                                <input type="email" class="form-control form-control-lg rounded-3 bg-light" 
                                       value="@Model.Email" disabled />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-medium">Phone Number</label>
                                <input asp-for="PhoneNumber" class="form-control form-control-lg rounded-3" placeholder="Enter phone number" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Position" class="form-label fw-medium">Position</label>
                                <input asp-for="Position" class="form-control form-control-lg rounded-3" placeholder="Enter your position" />
                            </div>
                        </div>

                        <!-- Academic Info -->
                        <h5 class="fw-bold mb-3 border-bottom pb-2">
                            <i class="bi bi-mortarboard me-2 text-primary"></i>Academic Information
                        </h5>
                        
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="AcademicRank" class="form-label fw-medium">Academic Rank</label>
                                <select asp-for="AcademicRank" class="form-select form-select-lg rounded-3">
                                    <option value="">-- Select Academic Rank --</option>
                                    <option value="Professor">Professor</option>
                                    <option value="Associate Professor">Associate Professor</option>
                                    <option value="Senior Lecturer">Senior Lecturer</option>
                                    <option value="Principal Lecturer">Principal Lecturer</option>
                                    <option value="Lecturer">Lecturer</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Degree" class="form-label fw-medium">Degree</label>
                                <select asp-for="Degree" class="form-select form-select-lg rounded-3">
                                    <option value="">-- Select Degree --</option>
                                    <option value="Doctor of Science">Doctor of Science</option>
                                    <option value="Ph.D.">Ph.D.</option>
                                    <option value="Doctoral Candidate">Doctoral Candidate</option>
                                    <option value="Master's Degree">Master's Degree</option>
                                    <option value="Bachelor's Degree">Bachelor's Degree</option>
                                </select>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-end gap-3 pt-3 border-top">
                            <a href="@Url.Action("Index", "Profile", new { area = "Faculty" })" class="btn btn-light px-4 py-2 rounded-3">
                                <i class="bi bi-x-lg me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-5 py-2 rounded-3 fw-medium">
                                <i class="bi bi-check-lg me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Avatar Modal -->
<div class="modal fade" id="avatarModal" tabindex="-1" aria-labelledby="avatarModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold" id="avatarModalLabel">Update Avatar</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Enter Avatar URL:</label>
                    <input type="url" class="form-control rounded-3" id="avatarUrlTemp" placeholder="https://example.com/avatar.jpg">
                    <small class="text-muted">You can use image links from Gravatar, Google Photos, or any image URL.</small>
                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light rounded-3" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary rounded-3" onclick="updateAvatar()">Update</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateAvatar() {
            const url = document.getElementById('avatarUrlTemp').value;
            if (url) {
                document.getElementById('avatarPreview').src = url;
                document.getElementById('avatarUrlInput').value = url;
            }
            // Close modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('avatarModal'));
            modal.hide();
        }
    </script>
}
