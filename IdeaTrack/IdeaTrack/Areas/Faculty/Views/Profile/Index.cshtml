@model IdeaTrack.Areas.Faculty.Models.FacultyProfileVM

@{
    ViewData["Title"] = "User Profile";
}

<div class="container-fluid py-4">
    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Header Section -->
    <section class="card border-0 shadow-sm mb-4" style="border-radius: 16px; background: linear-gradient(135deg, #b91c1c 0%, #991b1b 100%);">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div class="d-flex align-items-center">
                    <div class="position-relative">
                        <img src="@Model.AvatarUrl" alt="Avatar" class="rounded-circle border border-3 border-white shadow-sm" style="width: 100px; height: 100px; object-fit: cover;">
                        <span class="position-absolute bottom-0 end-0 bg-success border border-2 border-white rounded-circle" style="width: 18px; height: 18px;" title="Online"></span>
                    </div>
                    <div class="ms-4 text-white">
                        <h2 class="fw-bold mb-1">@Model.FullName</h2>
                        <p class="mb-2 opacity-75">@Model.Position, @Model.DepartmentName</p>
                        <div class="d-flex gap-2">
                            @if (!string.IsNullOrEmpty(Model.AcademicRank))
                            {
                                <span class="badge rounded-pill px-3 py-2" style="background-color: rgba(255,255,255,0.2); color: white;">@Model.AcademicRank</span>
                            }
                            @if (!string.IsNullOrEmpty(Model.Degree))
                            {
                                <span class="badge rounded-pill px-3 py-2" style="background-color: rgba(255,255,255,0.2); color: white;">@Model.Degree</span>
                            }
                        </div>
                    </div>
                </div>
                <div class="d-flex gap-2 mt-3 mt-md-0">
                    <a href="@Url.Action("Edit", "Profile", new { area = "Faculty" })" class="btn btn-light border px-4 rounded-3 fw-medium">
                        <i class="bi bi-pencil me-2"></i>Edit Profile
                    </a>
                    <form asp-area="Faculty" asp-controller="Profile" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-warning text-dark px-4 rounded-3 fw-medium">
                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <div class="row g-4">
        <!-- Contact Info Sidebar -->
        <aside class="col-lg-4">
            <div class="card border-0 shadow-sm p-4 h-100" style="border-radius: 16px;">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="fw-bold m-0">Contact Information</h5>
                    <a href="@Url.Action("Edit", "Profile", new { area = "Faculty" })" class="btn btn-sm text-primary p-0">
                        <i class="bi bi-pencil-square fs-5"></i>
                    </a>
                </div>

                <div class="vstack gap-4">
                    <div class="d-flex align-items-start">
                        <div class="bg-light p-2 rounded-3 me-3 text-secondary"><i class="bi bi-envelope"></i></div>
                        <div>
                            <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Email</small>
                            <span>@(Model.Email ?? "Not updated")</span>
                        </div>
                    </div>
                    <div class="d-flex align-items-start">
                        <div class="bg-light p-2 rounded-3 me-3 text-secondary"><i class="bi bi-telephone"></i></div>
                        <div>
                            <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Phone</small>
                            <span>@(Model.PhoneNumber ?? "Not updated")</span>
                        </div>
                    </div>
                    <div class="d-flex align-items-start">
                        <div class="bg-light p-2 rounded-3 me-3 text-secondary"><i class="bi bi-building"></i></div>
                        <div>
                            <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Department</small>
                            <span>@(Model.DepartmentName ?? "Not updated")</span>
                        </div>
                    </div>
                    <div class="d-flex align-items-start">
                        <div class="bg-light p-2 rounded-3 me-3 text-secondary"><i class="bi bi-person-badge"></i></div>
                        <div>
                            <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Position</small>
                            <span>@(Model.Position ?? "Not updated")</span>
                        </div>
                    </div>
                </div>

                <div class="row g-3 mt-4">
                    <div class="col-6">
                        <div class="p-3 border rounded-4">
                            <small class="text-muted">Initiatives</small>
                            <h3 class="fw-bold my-1">@Model.InitiativeCount</h3>
                            <div class="progress" style="height: 4px;"><div class="progress-bar bg-primary" style="width: 65%"></div></div>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 border rounded-4">
                            <small class="text-muted">Achievements</small>
                            <h3 class="fw-bold my-1">@Model.AchievementCount</h3>
                            <div class="progress" style="height: 4px;"><div class="progress-bar bg-success" style="width: 40%"></div></div>
                        </div>
                    </div>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <section class="col-lg-8">
            <div class="card border-0 shadow-sm h-100" style="border-radius: 16px; overflow: hidden;">
                <div class="p-4 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold m-0">Access Log</h5>
                    <button class="btn btn-link btn-sm text-decoration-none p-0 text-primary">
                        <i class="bi bi-box-arrow-up-right me-1"></i>Export Log
                    </button>
                </div>

                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="table-light text-muted small">
                            <tr>
                                <th class="ps-4 py-3 border-0">TIMESTAMP</th>
                                <th class="py-3 border-0">DEVICE</th>
                                <th class="py-3 border-0">IP ADDRESS</th>
                                <th class="py-3 border-0">STATUS</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="ps-4 small">Today, @DateTime.Now.ToString("HH:mm")</td>
                                <td><i class="bi bi-pc-display me-2 text-secondary"></i>Chrome - Windows</td>
                                <td class="small">192.168.1.45</td>
                                <td><span class="badge bg-success-subtle text-success rounded-pill px-3">Success</span></td>
                            </tr>
                            <tr>
                                <td class="ps-4 small">@DateTime.Now.AddDays(-1).ToString("dd/MM/yyyy")</td>
                                <td><i class="bi bi-phone me-2 text-secondary"></i>Safari - iPhone</td>
                                <td class="small">Mobile Data</td>
                                <td><span class="badge bg-info-subtle text-info rounded-pill px-3">Verified</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="mt-auto p-3 text-center border-top">
                    <button class="btn btn-link btn-sm text-muted text-decoration-none fw-medium">View All History</button>
                </div>
            </div>
        </section>
    </div>
</div>
