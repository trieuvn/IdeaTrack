@using IdeaTrack.Models
@model IEnumerable<IdeaTrack.Models.Initiative>

@{
    ViewData["Title"] = "Quản lý Hồ sơ Khoa";
}

<style>
    /* Màu nền nhạt & chữ đậm cho Icon/Badge */
    .bg-blue-light {
        background-color: #e3f2fd;
        color: #0d6efd;
    }

    .bg-yellow-light {
        background-color: #fff9c4;
        color: #ffc107;
    }

    .bg-green-light {
        background-color: #d1e7dd;
        color: #198754;
    }

    .bg-purple-light {
        background-color: #e0cffc;
        color: #6f42c1;
    }

    .bg-light-gray {
        background-color: #f8f9fa;
    }

    /* Định dạng Icon hình vuông bo góc */
    .icon-box {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    /* Định dạng Icon file nhỏ trong bảng */
    .file-icon {
        width: 40px;
        height: 40px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }

    /* Badge trạng thái hình viên thuốc */
    .badge-custom {
        padding: 8px 16px;
        border-radius: 50rem;
        font-weight: 600;
        font-size: 0.8rem;
    }

    /* Nút hành động */
    .btn-action-view {
        border-radius: 50rem;
        font-size: 0.85rem;
        padding: 4px 16px;
    }

    /* Tinh chỉnh bảng */
    .table > :not(caption) > * > * {
        padding: 1rem 0.5rem;
        border-bottom-color: #f0f0f0;
    }
</style>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <h2 class="fw-bold mb-1">Quản lý Hồ sơ Khoa</h2>
            <p class="text-secondary">Xem, duyệt và quản lý các đề tài nghiên cứu từ giảng viên.</p>
        </div>
        <button class="btn btn-outline-secondary btn-sm bg-white shadow-sm">
            <i class="bi bi-download me-2"></i>Xuất Excel
        </button>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <form method="get" action="@Url.Action("Index")">
            <div class="card-body p-3">
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-secondary"></i></span>
                            <input type="text" name="searchString" class="form-control border-start-0 ps-0" placeholder="Tìm kiếm tên đề tài, mã hồ sơ..." value="@ViewBag.CurrentSearch">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" name="statusFilter" asp-items="Html.GetEnumSelectList<InitiativeStatus>()">
                            <option value="">Tất cả trạng thái</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select">
                            <option>Tất cả giảng viên</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-info w-100 text-white fw-medium">Lọc dữ liệu</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3 h-100">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-blue-light me-3">
                        <i class="bi bi-hourglass-split"></i>
                    </div>
                    <div>
                        <small class="text-secondary d-block">Chờ duyệt Khoa</small>
                        <div class="d-flex align-items-center">
                            <span class="fs-3 fw-bold me-2 text-primary">@ViewBag.CountPending</span>
                            @if (ViewBag.CountPending > 0)
                            {
                                <span class="text-danger small fw-bold"><i class="bi bi-arrow-up"></i> Mới</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3 h-100">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-yellow-light me-3">
                        <i class="bi bi-pencil-square"></i>
                    </div>
                    <div>
                        <small class="text-secondary d-block">Yêu cầu chỉnh sửa</small>
                        <span class="fs-3 fw-bold text-warning">@ViewBag.CountRevision</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3 h-100">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-green-light me-3">
                        <i class="bi bi-check-circle-fill"></i>
                    </div>
                    <div>
                        <small class="text-secondary d-block">Đã duyệt (PKHCN)</small>
                        <span class="fs-3 fw-bold text-success">@ViewBag.CountApproved</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm p-3 h-100">
                <div class="d-flex align-items-center">
                    <div class="icon-box bg-purple-light me-3">
                        <i class="bi bi-folder-fill"></i>
                    </div>
                    <div>
                        <small class="text-secondary d-block">Tổng số hồ sơ</small>
                        <span class="fs-3 fw-bold" style="color: #6f42c1">@ViewBag.Total</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="bg-light">
                    <tr class="text-secondary small fw-bold text-uppercase">
                        <th class="ps-4 py-3">Tên đề tài / Mã hồ sơ</th>
                        <th>Giảng viên</th>
                        <th>Ngày nộp</th>
                        <th>Trạng thái</th>
                        <th class="text-end pe-4">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            // --- LOGIC MÀU SẮC CHO TABLE ---
                            string badgeClass = "bg-light text-secondary";
                            string statusText = item.Status.ToString();
                            string iconClass = "bg-light text-secondary";
                            string iconHtml = "<i class='bi bi-file-earmark-text'></i>";

                            switch (item.Status)
                            {
                                case InitiativeStatus.Pending:
                                    badgeClass = "bg-blue-light text-primary";
                                    statusText = "Chờ duyệt Khoa";
                                    iconClass = "bg-blue-light text-primary";
                                    iconHtml = "<i class='bi bi-file-earmark-text-fill'></i>";
                                    break;
                                case InitiativeStatus.Revision_Required:
                                    badgeClass = "bg-yellow-light text-warning";
                                    statusText = "Yêu cầu chỉnh sửa";
                                    iconClass = "bg-yellow-light text-warning";
                                    iconHtml = "<i class='bi bi-broadcast-pin'></i>";
                                    break;
                                case InitiativeStatus.Approved:
                                case InitiativeStatus.Dept_Review:
                                    badgeClass = "bg-green-light text-success";
                                    statusText = "Đã duyệt - Chuyển PKHCN";
                                    iconClass = "bg-green-light text-success";
                                    iconHtml = "<i class='bi bi-shield-check'></i>";
                                    break;
                            }

                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="file-icon @iconClass me-3">
                                            @Html.Raw(iconHtml)
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@item.Title</div>
                                            <small class="text-secondary">Mã: @item.InitiativeCode</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="fw-bold text-dark">@item.Proposer?.FullName</div>
                                    <small class="text-secondary">@(item.Proposer?.Degree ?? "GV")</small>
                                </td>
                                <td class="text-secondary">@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge-custom @badgeClass">@statusText</span>
                                </td>
                                <td class="text-end pe-4">
                                    @if (item.Status == InitiativeStatus.Pending)
                                    {
                                        <a href="@Url.Action("Details", "Dashboard", new { area = "Faculty", id = item.Id })"
                                           class="text-decoration-none fw-bold me-2 p-0 text-primary">Duyệt nhanh</a>
                                    }
                                    else if (item.Status == InitiativeStatus.Revision_Required)
                                    {
                                        <span class="text-secondary small me-2">Đã gửi YC</span>
                                    }

                                    <a href="@Url.Action("Details", "Dashboard", new { area = "Faculty", id = item.Id })"
                                       class="btn btn-outline-secondary btn-action-view">
                                        Xem chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                Hiện chưa có hồ sơ nào.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card-footer bg-white border-0 d-flex justify-content-between align-items-center p-4">
            @{
                int currentPage = ViewBag.CurrentPage;
                int totalPages = ViewBag.TotalPages;
                int totalItems = ViewBag.TotalItems;
                int pageSize = ViewBag.PageSize;
                int startItem = totalItems == 0 ? 0 : (currentPage - 1) * pageSize + 1;
                int endItem = Math.Min(currentPage * pageSize, totalItems);
            }

            <span class="text-secondary small">
                Hiển thị @startItem đến @endItem trong số @totalItems kết quả
            </span>

            <nav>
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { pageNumber = currentPage - 1, searchString = ViewBag.CurrentSearch, statusFilter = ViewBag.CurrentStatus })">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, searchString = ViewBag.CurrentSearch, statusFilter = ViewBag.CurrentStatus })">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item @(currentPage == totalPages || totalPages == 0 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { pageNumber = currentPage + 1, searchString = ViewBag.CurrentSearch, statusFilter = ViewBag.CurrentStatus })">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>