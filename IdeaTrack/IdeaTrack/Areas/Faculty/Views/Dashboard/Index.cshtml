@using IdeaTrack.Models
@model IdeaTrack.Areas.Faculty.Models.FacultyDashboardVM

@{
    ViewData["Title"] = "Faculty Dashboard";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row align-items-center mb-4">
        <div class="col-md-8">
            <h2 class="fw-bold mb-1 border-start border-4 border-primary ps-3">Faculty Dashboard</h2>
            <p class="text-muted ms-3 mb-0">Overview of faculty initiatives and approvals</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="badge bg-light text-dark p-3 rounded-pill border">
                <i class="bi bi-calendar-event me-2 text-primary"></i>
                Today: @DateTime.Now.ToString("dd MMMM yyyy")
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm border-start border-4 border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted small text-uppercase mb-1">Pending Approval</p>
                            <h3 class="fw-bold mb-0">@Model.PendingCount</h3>
                        </div>
                        <div class="icon-box bg-warning bg-opacity-10 text-warning rounded-circle p-3">
                            <i class="bi bi-hourglass-split fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm border-start border-4 border-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted small text-uppercase mb-1">Faculty Approved</p>
                            <h3 class="fw-bold mb-0">@Model.FacultyApprovedCount</h3>
                        </div>
                        <div class="icon-box bg-info bg-opacity-10 text-info rounded-circle p-3">
                            <i class="bi bi-check2-all fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm border-start border-4 border-secondary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted small text-uppercase mb-1">Evaluation</p>
                            <h3 class="fw-bold mb-0">@Model.EvaluationCount</h3>
                        </div>
                        <div class="icon-box bg-secondary bg-opacity-10 text-secondary rounded-circle p-3">
                            <i class="bi bi-clipboard-data fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm border-start border-4 border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted small text-uppercase mb-1">Pending Final</p>
                            <h3 class="fw-bold mb-0">@Model.PendingFinalCount</h3>
                        </div>
                        <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-circle p-3">
                            <i class="bi bi-award fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm border-start border-4 border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted small text-uppercase mb-1">Approved</p>
                            <h3 class="fw-bold mb-0">@Model.ApprovedCount</h3>
                        </div>
                        <div class="icon-box bg-success bg-opacity-10 text-success rounded-circle p-3">
                            <i class="bi bi-trophy fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card h-100 border-0 shadow-sm border-start border-4 border-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-muted small text-uppercase mb-1">Rejected</p>
                            <h3 class="fw-bold mb-0">@Model.RejectedCount</h3>
                        </div>
                        <div class="icon-box bg-danger bg-opacity-10 text-danger rounded-circle p-3">
                            <i class="bi bi-x-circle fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
             <!-- Spacer or Additional Card if needed -->
        </div>
    </div>

    <!-- Filter & Search -->
    <div class="card border-0 shadow-sm mb-4">
        <form method="get" action="@Url.Action("Index")">
            <div class="card-body p-3">
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-secondary"></i></span>
                            <input type="text" name="searchString" class="form-control border-start-0 ps-0" placeholder="Search by title, code..." value="@ViewBag.CurrentSearch">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select" name="statusFilter">
                            <option value="">All Statuses</option>
                            <option value="Pending" selected="@(ViewBag.CurrentStatus == "Pending")">Pending</option>
                            <option value="Faculty_Approved" selected="@(ViewBag.CurrentStatus == "Faculty_Approved")">Faculty Approved</option>
                            <option value="Evaluation" selected="@(ViewBag.CurrentStatus == "Evaluation")">Evaluation (Scoring)</option>
                            <option value="Pending_Final" selected="@(ViewBag.CurrentStatus == "Pending_Final")">Pending Final</option>
                            <option value="Approved" selected="@(ViewBag.CurrentStatus == "Approved")">Approved</option>
                            <option value="Rejected" selected="@(ViewBag.CurrentStatus == "Rejected")">Rejected</option>
                            <option value="Revision_Required" selected="@(ViewBag.CurrentStatus == "Revision_Required")">Revision Required</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-filter me-2"></i>Filter
                        </button>
                    </div>
                     <div class="col-md-2">
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary w-100">Reset</a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- Table -->
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Initiative</th>
                        <th>Author</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th>Submitted</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Initiatives.Any())
                    {
                        @foreach (var item in Model.Initiatives)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@item.Title</div>
                                    <small class="text-muted">@item.InitiativeCode</small>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle bg-primary bg-opacity-10 text-primary me-2">
                                            @item.ProposerName.Substring(0, 1)
                                        </div>
                                        <div>
                                            <span>@item.ProposerName</span>
                                            <small class="text-muted d-block">(@item.MemberCount member@(item.MemberCount > 1 ? "s" : ""))</small>
                                        </div>
                                    </div>
                                </td>
                                <td><span class="badge bg-light text-secondary border">@item.Category.Name</span></td>
                                <td>
                                    @{
                                        string statusClass = "bg-secondary";
                                        string statusLabel = item.Status.ToString();

                                        switch (item.Status)
                                        {
                                            case InitiativeStatus.Pending:
                                                statusClass = "bg-warning text-dark";
                                                statusLabel = "Pending Review";
                                                break;
                                            case InitiativeStatus.Faculty_Approved:
                                                statusClass = "bg-info text-dark";
                                                statusLabel = "Faculty Approved";
                                                break;
                                            case InitiativeStatus.Evaluating:
                                            case InitiativeStatus.Re_Evaluating:
                                                statusClass = "bg-secondary";
                                                statusLabel = "Evaluation";
                                                break;
                                            case InitiativeStatus.Pending_Final:
                                                statusClass = "bg-primary";
                                                statusLabel = "Pending Final";
                                                break;
                                            case InitiativeStatus.Approved:
                                                statusClass = "bg-success";
                                                statusLabel = "Approved";
                                                break;
                                            case InitiativeStatus.Rejected:
                                                statusClass = "bg-danger";
                                                statusLabel = "Rejected";
                                                break;
                                            case InitiativeStatus.Revision_Required:
                                                statusClass = "bg-danger bg-opacity-75";
                                                statusLabel = "Revision Required";
                                                break;
                                        }
                                    }
                                    <span class="badge @statusClass rounded-pill">@statusLabel</span>
                                </td>
                                <td>@item.SubmittedDate.ToString("dd/MM/yyyy")</td>
                                <td class="text-end pe-4">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                        Details
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5">
                                <div class="text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                                    No initiatives found
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer bg-white border-top-0 d-flex justify-content-between align-items-center p-4">
            @{
                int currentPage = ViewBag.CurrentPage; 
                int totalPages = ViewBag.TotalPages;
                int totalItems = ViewBag.TotalItems; 
                int pageSize = ViewBag.PageSize;
                int startItem = totalItems == 0 ? 0 : (currentPage - 1) * pageSize + 1;
                int endItem = Math.Min(currentPage * pageSize, totalItems);
                string currentSearch = ViewBag.CurrentSearch;
                string currentStatus = ViewBag.CurrentStatus;
            }
            <span class="text-secondary small">Showing @startItem to @endItem of @totalItems results</span>
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { pageNumber = currentPage - 1, searchString = currentSearch, statusFilter = currentStatus })"><i class="bi bi-chevron-left"></i></a>
                    </li>
                    @for (int i = 1; i <= totalPages; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, searchString = currentSearch, statusFilter = currentStatus })">@i</a>
                        </li>
                    }
                    <li class="page-item @(currentPage >= totalPages || totalPages == 0 ? "disabled" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { pageNumber = currentPage + 1, searchString = currentSearch, statusFilter = currentStatus })"><i class="bi bi-chevron-right"></i></a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
