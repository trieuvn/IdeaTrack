@model IdeaTrack.Areas.Faculty.Models.FacultyInitiativeDetailVM

@{
    ViewData["Title"] = "Initiative Details";
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>

    <div class="row g-4">
        <div class="col-lg-8">
            <!-- Main Content -->
            <div class="card border-0 shadow-sm p-4 rounded-4 mb-4">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <h2 class="fw-bold text-primary mb-0">@Model.Title</h2>
                    <span class="badge bg-primary rounded-pill fs-6 px-3">@Model.Status</span>
                </div>
                
                <div class="row g-3 mb-4">
                    <div class="col-md-6">
                        <label class="text-secondary small d-block mb-1">Code</label>
                        <div class="fw-bold">@Model.InitiativeCode</div>
                    </div>
                    <div class="col-md-6">
                         <label class="text-secondary small d-block mb-1">Category</label>
                        <div class="fw-bold">@(Model.Category?.Name ?? "N/A")</div>
                    </div>
                </div>

                <div class="mb-4">
                    <h5 class="fw-bold border-bottom pb-2 mb-3">Description</h5>
                    <p class="text-dark" style="text-align: justify; line-height: 1.6;">@Model.Description</p>
                </div>
                
                <div>
                     <h5 class="fw-bold border-bottom pb-2 mb-3">Attachments</h5>
                     @if(Model.Files != null && Model.Files.Any())
                     {
                         <div class="list-group">
                             @foreach(var file in Model.Files)
                             {
                                var relativePath = file.FileUrl.Replace("/uploads/initiatives/", "");
                                <a href="/Faculty/ViewerPage?file=@Uri.EscapeDataString(relativePath)" target="_blank" class="list-group-item list-group-item-action d-flex align-items-center attachment-link">
                                     <i class="bi bi-file-earmark-text me-3 fs-4 text-secondary"></i>
                                     <div>
                                         <div class="fw-medium">@file.FileName</div>
                                         <small class="text-muted">Click to view</small>
                                     </div>
                                 </a>
                             }
                         </div>
                     }
                     else
                     {
                         <p class="text-muted">No attachments.</p>
                     }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Sidebar / Actions -->
             @if (Model.Status == IdeaTrack.Models.InitiativeStatus.Pending || 
                  Model.Status == IdeaTrack.Models.InitiativeStatus.Faculty_Approved || 
                  Model.Status == IdeaTrack.Models.InitiativeStatus.Rejected)
             {
                 <div class="card border-0 shadow-sm p-4 rounded-4 mb-4">
                     <h5 class="fw-bold mb-3">Review Action</h5>
                     <p class="text-muted small">Faculty Head Review</p>
                     
                     <form method="post">
                         <input type="hidden" name="InitiativeId" value="@Model.Id" />
                         
                         <div class="mb-3">
                             <label class="form-label fw-medium">Comments</label>
                             <textarea name="Comments" class="form-control" rows="4" placeholder="Enter comments for approval/rejection..."></textarea>
                         </div>
                         
                        <div class="d-grid gap-2 review-buttons">
                             <button type="submit" asp-controller="Dashboard" asp-action="Accept" class="btn btn-success text-white" >
                                 <i class="bi bi-check-circle me-2"></i> Accept
                             </button>
                             <button type="submit" asp-controller="Dashboard" asp-action="RequestRevision" class="btn btn-warning text-dark" >
                                 <i class="bi bi-pencil-square me-2"></i> Request Revision
                             </button>
                             <button type="submit" asp-controller="Dashboard" asp-action="Reject" class="btn btn-danger text-white">
                                 <i class="bi bi-x-circle me-2"></i> Reject
                             </button>
                         </div>
                     </form>
                 </div>
             }

             <div class="card border-0 shadow-sm p-4 rounded-4">
                 <h5 class="fw-bold mb-3">Information</h5>
                 <div class="mb-3">
                     <label class="small text-muted d-block">Author</label>
                     <div class="fw-medium">@Model.ProposerName</div>
                 </div>
                 <div class="mb-3">
                     <label class="small text-muted d-block">Submitted Date</label>
                     <div class="fw-medium">@Model.SubmittedDate.ToString("dd/MM/yyyy HH:mm")</div>
                 </div>
                 <div class="mb-3">
                     <label class="small text-muted d-block">Budget</label>
                     <div class="fw-bold text-success">@Model.Budget.ToString("N0") VND</div>
                 </div>
             </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const buttonsDiv = document.querySelector(".review-buttons");
            const buttons = buttonsDiv ? buttonsDiv.querySelectorAll("button") : [];
            const attachmentLinks = document.querySelectorAll(".attachment-link");

            // Nếu có file, disable tất cả nút
            if (attachmentLinks.length > 0) {
                buttons.forEach(btn => btn.disabled = true);

                // Khi người dùng click vào bất kỳ file nào → enable nút
                attachmentLinks.forEach(link => {
                    link.addEventListener("click", function () {
                        buttons.forEach(btn => btn.disabled = false);
                    });
                });
            }
        });
    </script>
}
