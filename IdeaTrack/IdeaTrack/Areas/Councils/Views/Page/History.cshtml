@using IdeaTrack.Models
@model IdeaTrack.Areas.Councils.Models.AssignedListVM

@{
    ViewData["Title"] = "Evaluation History";
    Layout = "~/Areas/Councils/Views/Shared/_LayoutCouncils.cshtml";
    int fromItem = (Model.CurrentPage - 1) * Model.PageSize + 1;
    int toItem = Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount);
}

<style>
    /* Page Header */
    .page-header-section {
        background: linear-gradient(135deg, var(--brand-primary) 0%, var(--brand-dark) 100%);
        border-radius: var(--radius-xl);
        padding: 2rem 2.5rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }
    
    .page-header-section::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
    }
    
    .page-header-section h4 {
        color: #fff;
        font-weight: 700;
        margin-bottom: 0.5rem;
        font-size: 1.75rem;
    }
    
    .page-header-section p {
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 0;
    }
    
    .stats-badge {
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        color: #fff;
        padding: 0.75rem 1.5rem;
        border-radius: var(--radius-lg);
        font-weight: 600;
        font-size: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .stats-badge i {
        font-size: 1.25rem;
    }
    
    /* Filter Card */
    .filter-card {
        background: var(--bg-card);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-sm);
        padding: 1.25rem 1.5rem;
        margin-bottom: 1.5rem;
        border: 1px solid var(--border-color);
    }
    
    .filter-card .form-control,
    .filter-card .form-select {
        border-radius: var(--radius-md);
        border: 1px solid var(--border-color);
        padding: 0.625rem 1rem;
        transition: all 0.2s ease;
    }
    
    .filter-card .form-control:focus,
    .filter-card .form-select:focus {
        border-color: var(--brand-primary);
        box-shadow: 0 0 0 3px rgba(69, 10, 10, 0.1);
    }
    
    .filter-card .input-group-text {
        background: var(--bg-light);
        border: 1px solid var(--border-color);
        border-right: none;
        border-radius: var(--radius-md) 0 0 var(--radius-md);
        color: var(--text-secondary);
    }
    
    .filter-card .input-group .form-control {
        border-radius: 0 var(--radius-md) var(--radius-md) 0;
    }
    
    /* Enhanced Table Card */
    .table-card {
        background: var(--bg-card);
        border-radius: var(--radius-lg);
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
        overflow: hidden;
    }
    
    .table-card .table {
        margin-bottom: 0;
    }
    
    .table-card .table thead {
        background: linear-gradient(180deg, #f8fafc, #f1f5f9);
    }
    
    .table-card .table thead th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.7rem;
        letter-spacing: 0.75px;
        color: var(--text-secondary);
        padding: 1rem 1.25rem;
        border-bottom: 2px solid var(--border-color);
        white-space: nowrap;
    }
    
    .table-card .table tbody td {
        padding: 1rem 1.25rem;
        vertical-align: middle;
        border-bottom: 1px solid var(--border-color);
        transition: all 0.15s ease;
    }
    
    .table-card .table tbody tr:last-child td {
        border-bottom: none;
    }
    
    .table-card .table tbody tr {
        transition: all 0.15s ease;
    }
    
    .table-card .table tbody tr:hover {
        background: linear-gradient(90deg, rgba(190,18,60,0.03) 0%, rgba(255,255,255,0) 100%);
    }
    
    .table-card .table tbody tr:hover td:first-child {
        border-left: 3px solid var(--brand-primary);
        padding-left: calc(1.25rem - 3px);
    }
    
    .initiative-title {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.25rem;
    }
    
    .initiative-code {
        color: var(--text-muted);
        font-size: 0.8125rem;
    }
    
    .category-badge {
        background: var(--brand-light);
        color: var(--brand-primary);
        padding: 0.375rem 0.875rem;
        border-radius: var(--radius-full);
        font-size: 0.8125rem;
        font-weight: 500;
        border: 1px solid rgba(190, 18, 60, 0.15);
    }
    
    /* Score Column */
    .score-display {
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }
    
    .score-value {
        font-weight: 700;
        font-size: 1rem;
        color: var(--success);
    }
    
    .score-max {
        font-size: 0.75rem;
        color: var(--text-muted);
    }
    
    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.375rem 0.875rem;
        border-radius: var(--radius-full);
        font-size: 0.8125rem;
        font-weight: 500;
    }
    
    .status-badge.success {
        background: var(--success-light);
        color: var(--success);
    }
    
    /* Action Button */
    .btn-view {
        background: transparent;
        color: var(--brand-primary);
        border: 1.5px solid var(--brand-primary);
        padding: 0.5rem 1rem;
        border-radius: var(--radius-md);
        font-weight: 600;
        font-size: 0.8125rem;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        text-decoration: none;
    }
    
    .btn-view:hover {
        background: var(--brand-primary);
        color: #fff;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(190,18,60,0.25);
    }
    
    /* Empty State */
    .empty-state {
        padding: 4rem 2rem;
        text-align: center;
    }
    
    .empty-state i {
        font-size: 4rem;
        color: var(--text-muted);
        opacity: 0.5;
        margin-bottom: 1rem;
    }
    
    .empty-state p {
        color: var(--text-secondary);
        font-size: 1rem;
    }
    
    /* Pagination */
    .pagination-wrapper {
        padding: 1.25rem 1.5rem;
        background: linear-gradient(180deg, #f8fafc, #fff);
        border-top: 1px solid var(--border-color);
    }
    
    .pagination .page-link {
        border-radius: var(--radius-md);
        margin: 0 0.125rem;
        border: 1px solid var(--border-color);
        color: var(--text-primary);
        padding: 0.5rem 0.875rem;
        transition: all 0.2s ease;
    }
    
    .pagination .page-link:hover {
        background: var(--brand-primary);
        color: #fff;
        border-color: var(--brand-primary);
        transform: translateY(-1px);
    }
    
    .pagination .page-item.active .page-link {
        background: var(--brand-primary);
        border-color: var(--brand-primary);
        color: #fff;
    }
    
    .pagination .page-item.disabled .page-link {
        background: var(--bg-light);
        color: var(--text-muted);
    }
</style>

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="page-header-section">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div>
                <h4><i class="bi bi-clock-history me-2"></i>Evaluation History</h4>
                <p>Review your past evaluations and scores for completed initiatives.</p>
            </div>
            <div class="stats-badge">
                <i class="bi bi-check-circle-fill"></i>
                <span>@Model.TotalCount Completed</span>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <form method="get" action="/Councils/Page/History" class="filter-card">
        <div class="d-flex flex-wrap gap-3 align-items-center">
            <div class="flex-grow-1">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="keyword" value="@Model.Keyword" class="form-control" placeholder="Search by initiative name or code...">
                </div>
            </div>
            <select name="sortOrder" class="form-select" style="width: auto; min-width: 160px;" onchange="this.form.submit()">
                <option value="Newest" selected="@(Model.SortOrder == "Newest")">Newest First</option>
                <option value="Oldest" selected="@(Model.SortOrder == "Oldest")">Oldest First</option>
            </select>
            <button type="submit" class="btn btn-brand">
                <i class="bi bi-funnel me-1"></i>Apply Filter
            </button>
        </div>
    </form>

    <!-- Results Table -->
    <div class="table-card">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Initiative</th>
                        <th>Category</th>
                        <th>Score</th>
                        <th>Date Completed</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <div class="initiative-title">@item.Title</div>
                                    <div class="initiative-code"><i class="bi bi-hash"></i>@item.InitiativeCode</div>
                                </td>
                                <td>
                                    <span class="category-badge">@item.CategoryName</span>
                                </td>
                                <td>
                                    @if (item.FinalScore.HasValue)
                                    {
                                        <div class="score-display">
                                            <span class="score-value">@item.FinalScore.Value.ToString("0.#")</span>
                                            <span class="score-max">/ 100</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td>
                                    <span class="text-muted">
                                        <i class="bi bi-calendar3 me-1"></i>@item.AssignedDate.ToString("MMM dd, yyyy")
                                    </span>
                                </td>
                                <td>
                                    <span class="status-badge success">
                                        <i class="bi bi-check-circle-fill"></i>Completed
                                    </span>
                                </td>
                                <td>
                                    <a href="/Councils/Page/Details/@item.AssignmentId" class="btn-view">
                                        <i class="bi bi-eye"></i>View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6">
                                <div class="empty-state">
                                    <i class="bi bi-inbox"></i>
                                    <p>No evaluation history found. Complete your first initiative to see it here!</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="pagination-wrapper d-flex justify-content-between align-items-center">
                <small class="text-muted">Showing @fromItem - @toItem of @Model.TotalCount results</small>
                <nav>
                    <ul class="pagination mb-0">
                        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                            <a class="page-link" href="?page=@(Model.CurrentPage - 1)&keyword=@Model.Keyword&sortOrder=@Model.SortOrder">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                        @for (int p = 1; p <= Model.TotalPages; p++)
                        {
                            <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" href="?page=@p&keyword=@Model.Keyword&sortOrder=@Model.SortOrder">@p</a>
                            </li>
                        }
                        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                            <a class="page-link" href="?page=@(Model.CurrentPage + 1)&keyword=@Model.Keyword&sortOrder=@Model.SortOrder">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>
