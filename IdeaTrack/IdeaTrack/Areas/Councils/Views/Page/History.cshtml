@using IdeaTrack.Models
@model IdeaTrack.Areas.Councils.Models.AssignedListVM

@{
    ViewData["Title"] = "Evaluation History";
    Layout = "~/Areas/Councils/Views/Shared/_LayoutCouncils.cshtml";
    int fromItem = (Model.CurrentPage - 1) * Model.PageSize + 1;
    int toItem = Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount);
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">Evaluation History</h4>
            <p class="text-muted mb-0">Review your past evaluations and scores.</p>
        </div>
        <div class="d-flex align-items-center gap-2">
            <span class="badge bg-success fs-6">@Model.TotalCount Completed</span>
        </div>
    </div>

    <!-- Filters -->
    <form method="get" action="/Councils/Page/History" class="card border-0 shadow-sm mb-4">
        <div class="card-body d-flex flex-wrap gap-3 align-items-center">
            <div class="flex-grow-1">
                <div class="input-group">
                    <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                    <input type="text" name="keyword" value="@Model.Keyword" class="form-control" placeholder="Search by initiative name...">
                </div>
            </div>
            <select name="sortOrder" class="form-select" style="width:auto;" onchange="this.form.submit()">
                <option value="Newest" selected="@(Model.SortOrder == "Newest")">Newest First</option>
                <option value="Oldest" selected="@(Model.SortOrder == "Oldest")">Oldest First</option>
            </select>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-filter me-1"></i>Filter
            </button>
        </div>
    </form>

    <!-- Table -->
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>INITIATIVE</th>
                        <th>CATEGORY</th>
                        <th>DATE COMPLETED</th>
                        <th>STATUS</th>
                        <th>ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <div class="fw-semibold">@item.Title</div>
                                    <small class="text-muted">Code: @item.InitiativeCode</small>
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border">@item.CategoryName</span>
                                </td>
                                <td>@item.AssignedDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Completed</span>
                                </td>
                                <td>
                                    <a href="/Councils/Page/Details/@item.AssignmentId" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye me-1"></i>View
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-2 opacity-50"></i>
                                No evaluation history found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-between align-items-center mt-4">
            <small class="text-muted">Showing @fromItem - @toItem of @Model.TotalCount</small>
            <nav>
                <ul class="pagination mb-0">
                    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                        <a class="page-link" href="?page=@(Model.CurrentPage - 1)&keyword=@Model.Keyword&sortOrder=@Model.SortOrder">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    @for (int p = 1; p <= Model.TotalPages; p++)
                    {
                        <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="?page=@p&keyword=@Model.Keyword&sortOrder=@Model.SortOrder">@p</a>
                        </li>
                    }
                    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                        <a class="page-link" href="?page=@(Model.CurrentPage + 1)&keyword=@Model.Keyword&sortOrder=@Model.SortOrder">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>
