@model IdeaTrack.Areas.Councils.Models.GradingVM

<div class="d-flex flex-wrap justify-content-between align-items-start gap-3 mb-4">
    <div>
        <h1 class="fw-bold mb-1">Phiếu Chấm Điểm Đồ Án</h1>
        <p class="text-muted mb-0">Hội đồng đánh giá: @Model.InitiativeTitle</p>
    </div>
    <span class="badge bg-primary-subtle text-primary px-3 py-2 d-flex align-items-center">
        <i class="fa-solid fa-pen me-1"></i> Đang chấm
    </span>
</div>

<form method="post" asp-action="SubmitGrading" id="gradingForm">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="AssignmentId" />

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4 border-0 rounded-3">
                <div class="card-header bg-light d-flex justify-content-between align-items-center border-bottom">
                    <h6 class="fw-bold mb-0">Tiêu chí đánh giá</h6>
                    <span class="text-muted small">Thang điểm 100</span>
                </div>
                <div class="card-body p-0">
                    @for (int i = 0; i < Model.CriteriaItems.Count; i++)
                    {
                        <div class="p-4 border-bottom criterion">
                            <div class="d-flex justify-content-between align-items-start gap-3">
                                <div>
                                    <h6 class="fw-bold mb-1">
                                        @(i + 1). @Model.CriteriaItems[i].CriteriaName
                                        <span class="badge bg-secondary-subtle text-secondary ms-2">
                                            Max @Model.CriteriaItems[i].MaxScore
                                        </span>
                                    </h6>
                                    <p class="text-muted small mb-0">
                                        @Model.CriteriaItems[i].Description
                                    </p>
                                </div>
                                <div class="input-group input-group-sm w-auto">
                                    <input type="number"
                                           asp-for="CriteriaItems[i].ScoreGiven"
                                           class="form-control text-end fw-bold score-input"
                                           max="@Model.CriteriaItems[i].MaxScore"
                                           min="0"
                                           data-max="@Model.CriteriaItems[i].MaxScore" />
                                    <span class="input-group-text">/@Model.CriteriaItems[i].MaxScore</span>
                                </div>
                            </div>
                            <textarea asp-for="CriteriaItems[i].Note"
                                  class="form-control form-control-sm mt-3"
                                  rows="2"
                                  placeholder="Nhận xét (tùy chọn)"></textarea>
                            <input type="hidden" asp-for="CriteriaItems[i].CriteriaId" />
                            <input type="hidden" asp-for="CriteriaItems[i].CriteriaName" />
                            <input type="hidden" asp-for="CriteriaItems[i].MaxScore" />
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light">
                    <h6 class="fw-bold mb-0">Nhận xét chung & Câu hỏi</h6>
                </div>
                <div class="card-body">
                    <textarea asp-for="GeneralComment"
                              class="form-control"
                              rows="4"
                              placeholder="Nhận xét chung cho sinh viên..."></textarea>
                </div>
            </div>
        </div>

        <div class="col-lg-4 d-flex flex-column gap-3">
            <div class="card shadow-sm border-0 rounded-3 text-center">
                <div class="card-body">
                    <img src="https://i.pravatar.cc/120" class="rounded-circle mb-3" width="96" height="96" />
                    <h5 class="fw-bold mb-0">@Model.ProposerName</h5>
                    <p class="text-muted small mb-3">@Model.DepartmentName</p>
                    <div class="text-start small mb-3">
                        <div class="fw-semibold">Mã Đề tài</div>
                        <div class="text-muted">@Model.InitiativeCode</div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light">
                    <h6 class="fw-bold mb-0">
                        <i class="fa-solid fa-folder-open me-2"></i> Quản lý File
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush file-list">
                        @if (Model.Files != null && Model.Files.Any())
                        {
                            foreach (var f in Model.Files)
                            {
                                <li class="list-group-item d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center text-truncate" style="max-width:calc(100% - 50px);">
                                        <i class="fa-solid fa-file text-primary fs-5 me-2"></i>
                                        <span class="text-truncate">@f.FileName</span>
                                    </div>
                                    <a href="@f.FilePath" target="_blank"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="fa-solid fa-download"></i>
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="list-group-item text-muted">Không có file.</li>
                        }
                    </ul>
                </div>
            </div>

            <div class="card shadow-sm border-primary rounded-3 mt-2">
                <div class="card-body text-center">
                    <div class="text-muted small mb-1">Tổng điểm tạm tính</div>
                    <div class="display-5 fw-bold text-primary mb-3">
                        <span id="totalScoreDisplay">0</span>
                        <span class="fs-5 text-muted">/100</span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit"
                                name="SubmitAction"
                                value="Submit"
                                class="btn btn-primary btn-hover"
                                onclick="return confirm('Nộp điểm?');">
                            <i class="fa-solid fa-save me-1"></i> Lưu kết quả
                        </button>
                        @* <button type="submit"
                                name="SubmitAction"
                                value="SaveDraft"
                                class="btn btn-outline-secondary">
                            Lưu nháp
                        </button> *@
                        <a href="/Councils/Page/AssignedInitiatives"
                           class="btn btn-link text-danger text-decoration-none">
                            Hủy & Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        (function () {
            function recalcTotal() {
                var inputs = document.querySelectorAll('.score-input');
                var total = 0;
                inputs.forEach(function (el) {
                    var val = parseFloat(el.value);
                    if (!isNaN(val)) {
                        var max = parseFloat(el.getAttribute('data-max')) || 100;
                        if (val > max) { el.value = max; val = max; }
                        if (val < 0) { el.value = 0; val = 0; }
                        total += val;
                    }
                });
                var display = document.getElementById('totalScoreDisplay');
                if (display) display.textContent = total.toFixed(0);
            }

            document.addEventListener('input', function (e) {
                if (e.target && e.target.classList.contains('score-input')) {
                    recalcTotal();
                }
            });

            recalcTotal();
        })();
    </script>
}