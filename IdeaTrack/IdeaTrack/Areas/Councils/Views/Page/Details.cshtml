@model IdeaTrack.Areas.Councils.Models.GradingVM
@{
    ViewData["Title"] = "Grading";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<div class="container-fluid h-100 p-0 d-flex flex-column">
    <!-- Header -->
    <div class="bg-white border-bottom p-3 d-flex justify-content-between align-items-center shadow-sm" style="z-index: 10;">
        <div class="d-flex align-items-center">
            <a asp-action="Index" class="btn btn-outline-secondary rounded-circle me-3">
                <i class="bi bi-arrow-left"></i>
            </a>
            <div>
                <h5 class="fw-bold mb-0">@Model.InitiativeTitle</h5>
                <small class="text-muted">Code: @Model.InitiativeCode | Author: @Model.ProposerName</small>
            </div>
        </div>
        <div>
             <span class="badge bg-primary px-3 py-2">Round @Model.RoundNumber</span>
        </div>
    </div>

    <!-- Split View -->
    <div class="row g-0 flex-grow-1 overflow-hidden" style="height: calc(100vh - 70px);">
        
        <!-- Left: Initiative Content (Scrollable) -->
        <div class="col-lg-6 h-100 border-end bg-light overflow-auto p-4 custom-scrollbar">
            <div class="card shadow-sm border-0 mb-4 rounded-3">
                <div class="card-body">
                    <h6 class="fw-bold text-uppercase text-secondary mb-3 small">Description</h6>
                    <p class="text-dark" style="text-align: justify; line-height: 1.7;">
                        @Model.Description
                    </p>
                </div>
            </div>

            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light">
                    <h6 class="fw-bold mb-0">
                        <i class="fa-solid fa-folder-open me-2"></i> Attachments
                    </h6>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush file-list">
                        @if (Model.Files != null && Model.Files.Any())
                        {
                            foreach (var f in Model.Files)
                            {
                                <li class="list-group-item d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-file-earmark-text fs-4 text-primary me-3"></i>
                                        <span>@f.FileName</span>
                                    </div>
                                    <a href="@f.FilePath" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                                </li>
                            }
                        }
                        else 
                        {
                            <li class="list-group-item text-muted">No attachments</li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Right: Grading Form (Scrollable) -->
        <div class="col-lg-6 h-100 overflow-auto p-4 custom-scrollbar bg-white">
            <form asp-action="SubmitGrading" method="post" id="gradingForm">
                <input type="hidden" name="AssignmentId" value="@Model.AssignmentId" />
                
                <h5 class="fw-bold mb-4">Evaluation Criteria</h5>
                
                @if (Model.CriteriaItems != null)
                {
                    <div class="accordion mb-4" id="criteriaAccordion">
                        @for (int i = 0; i < Model.CriteriaItems.Count; i++)
                        {
                            var criterion = Model.CriteriaItems[i];
                            <input type="hidden" name="Grades[@i].CriteriaId" value="@criterion.CriteriaId" />
                            
                            <div class="accordion-item border-0 shadow-sm mb-3 rounded-3 overflow-hidden">
                                <h2 class="accordion-header">
                                    <button class="accordion-button @(i==0?"":"collapsed") fw-semibold" type="button" data-bs-toggle="collapse" data-bs-target="#c-@i">
                                        @criterion.CriteriaName <span class="badge bg-secondary ms-auto">Max: @criterion.MaxScore</span>
                                    </button>
                                </h2>
                                <div id="c-@i" class="accordion-collapse collapse @(i==0?"show":"")">
                                    <div class="accordion-body bg-light">
                                        <p class="small text-muted mb-2">@criterion.Description</p>
                                        
                                        <div class="mb-3">
                                            <label class="form-label fw-medium">Score (0-@criterion.MaxScore)</label>
                                            <input type="number" name="Grades[@i].Score" class="form-control score-input" 
                                                   min="0" max="@criterion.MaxScore" required placeholder="0" />
                                        </div>
                                        <div>
                                            <label class="form-label fw-medium">Comment</label>
                                            <textarea name="Grades[@i].Comment" class="form-control" rows="2" placeholder="Specific feedback..."></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }

                <div class="card bg-light border-0 p-3 mb-4 rounded-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-bold">Total Score</span>
                        <span class="fs-4 fw-bold text-primary" id="totalScore">0 / @Model.MaxTotalScore</span>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="button" class="btn btn-outline-secondary flex-grow-1 py-2">Save Draft</button>
                    <button type="submit" class="btn btn-primary flex-grow-1 py-2 fw-bold" onclick="return confirm('Submit evaluation? You cannot edit after submitting.');">
                        Submit Evaluation
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Simple Total Score Calculator
    document.addEventListener('input', function (e) {
        if (e.target.classList.contains('score-input')) {
            calculateTotal();
        }
    });

    function calculateTotal() {
        let total = 0;
        document.querySelectorAll('.score-input').forEach(input => {
            total += Number(input.value) || 0;
        });
        document.getElementById('totalScore').innerText = total + " / @Model.MaxTotalScore";
    }
</script>

<style>
    .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
    }
    .custom-scrollbar::-webkit-scrollbar-track {
        background: #f1f1f1;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 3px;
    }
</style>
