@model IdeaTrack.Areas.Councils.Models.AssignedListVM
@{
    ViewData["Title"] = "Assigned Initiatives";
    Layout = "~/Areas/Councils/Views/Shared/_LayoutCouncils.cshtml";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-1">Assigned Initiatives</h4>
            <p class="text-muted mb-0">Track and evaluate initiatives assigned to you.</p>
        </div>
        <div class="d-flex align-items-center gap-3">
            <span class="badge bg-warning text-dark fs-6">@Model.Items.Count(i => i.Status != IdeaTrack.Models.AssignmentStatus.Completed) Pending</span>
            <span class="badge bg-success fs-6">@Model.Items.Count(i => i.Status == IdeaTrack.Models.AssignmentStatus.Completed) Completed</span>
        </div>
    </div>

    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-center">
                <div class="col-md-4">
                    <form method="get" class="input-group">
                        <input type="hidden" name="status" value="@Model.Status" />
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input type="text" name="keyword" value="@Model.Keyword" class="form-control" placeholder="Search initiatives...">
                    </form>
                </div>
                <div class="col-md-8 d-flex gap-2 justify-content-end">
                    <a href="/Councils/Page/AssignedInitiatives?status=All&keyword=@Model.Keyword" 
                       class="btn @(Model.Status == "All" ? "btn-primary" : "btn-outline-secondary")">All</a>
                    <a href="/Councils/Page/AssignedInitiatives?status=Assigned&keyword=@Model.Keyword" 
                       class="btn @(Model.Status == "Assigned" ? "btn-primary" : "btn-outline-secondary")">Pending</a>
                    <a href="/Councils/Page/AssignedInitiatives?status=Completed&keyword=@Model.Keyword" 
                       class="btn @(Model.Status == "Completed" ? "btn-primary" : "btn-outline-secondary")">Completed</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="card border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>INITIATIVE</th>
                        <th>ID</th>
                        <th>DATE ASSIGNED</th>
                        <th>DUE DATE</th>
                        <th>STATUS</th>
                        <th>ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            var isDueSoon = item.DueDate.HasValue && item.DueDate.Value <= DateTime.Now.AddDays(3);
                            <tr>
                                <td>
                                    <div class="fw-semibold">@item.Title</div>
                                    <small class="text-muted">@item.CategoryName</small>
                                </td>
                                <td class="text-muted">#@item.InitiativeCode</td>
                                <td>@item.AssignedDate.ToString("MMM dd, yyyy")</td>
                                <td class="@(isDueSoon ? "text-danger fw-bold" : "")">
                                    @(item.DueDate?.ToString("MMM dd, yyyy") ?? "-")
                                </td>
                                <td>
                                    @if (item.Status == IdeaTrack.Models.AssignmentStatus.Completed)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Completed</span>
                                    }
                                    else if (item.Status == IdeaTrack.Models.AssignmentStatus.InProgress)
                                    {
                                        <span class="badge bg-info"><i class="bi bi-pencil me-1"></i>In Progress</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-clock me-1"></i>Assigned</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Status == IdeaTrack.Models.AssignmentStatus.Completed)
                                    {
                                        <a href="/Councils/Page/Details/@item.AssignmentId" class="btn btn-sm btn-outline-success">
                                            <i class="bi bi-eye me-1"></i>View Result
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="/Councils/Page/Details/@item.AssignmentId" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil-square me-1"></i>Evaluate
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="bi bi-check-circle fs-1 d-block mb-2 opacity-50"></i>
                                No initiatives found. You're all caught up!
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-between align-items-center mt-4">
            <small class="text-muted">Page @Model.CurrentPage of @Model.TotalPages</small>
            <nav>
                <ul class="pagination mb-0">
                    <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                        <a class="page-link" href="/Councils/Page/AssignedInitiatives?status=@Model.Status&keyword=@Model.Keyword&page=@(Model.CurrentPage - 1)">
                            <i class="bi bi-chevron-left"></i>
                        </a>
                    </li>
                    @for (var p = 1; p <= Model.TotalPages; p++)
                    {
                        <li class="page-item @(p == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="/Councils/Page/AssignedInitiatives?status=@Model.Status&keyword=@Model.Keyword&page=@p">@p</a>
                        </li>
                    }
                    <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" href="/Councils/Page/AssignedInitiatives?status=@Model.Status&keyword=@Model.Keyword&page=@(Model.CurrentPage + 1)">
                            <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>
