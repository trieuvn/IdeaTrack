@model IdeaTrack.Models.ApplicationUser

@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Areas/Councils/Views/Shared/_LayoutCouncils.cshtml";
}

<style>
    .page-header-section {
        background: linear-gradient(135deg, var(--brand-primary) 0%, var(--brand-dark) 100%);
        border-radius: var(--radius-xl);
        padding: 2.5rem;
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }
    
    .page-header-section::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 50%;
    }
    
    .profile-header {
        display: flex;
        align-items: center;
        gap: 1.5rem;
    }
    
    .profile-avatar {
        width: 90px;
        height: 90px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.2);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        color: rgba(255, 255, 255, 0.9);
        border: 3px solid rgba(255, 255, 255, 0.3);
    }
    
    .profile-info h2 {
        color: #fff;
        font-weight: 700;
        margin: 0 0 0.25rem;
        font-size: 1.75rem;
    }
    
    .profile-info p {
        color: rgba(255, 255, 255, 0.8);
        margin: 0;
        font-size: 0.95rem;
    }
    
    .role-badge {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        color: #fff;
        padding: 0.375rem 0.875rem;
        border-radius: var(--radius-full);
        font-size: 0.8rem;
        font-weight: 600;
        margin-top: 0.75rem;
        display: inline-block;
    }
    
    .profile-card {
        background: var(--bg-card);
        border-radius: var(--radius-lg);
        padding: 2rem;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border-color);
    }
    
    .profile-card h5 {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 1.5rem;
        padding-bottom: 0.75rem;
        border-bottom: 1px solid var(--border-color);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .profile-card h5 i {
        color: var(--brand-primary);
    }
    
    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }
    
    .info-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }
    
    .info-item label {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-muted);
    }
    
    .info-item span {
        font-size: 1rem;
        color: var(--text-primary);
        font-weight: 500;
    }
    
    .action-buttons {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--border-color);
        display: flex;
        gap: 1rem;
    }
    
    .btn-change-password {
        background: var(--brand-light);
        color: var(--brand-primary);
        border: 1px solid var(--brand-primary);
        padding: 0.75rem 1.5rem;
        border-radius: var(--radius-md);
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .btn-change-password:hover {
        background: var(--brand-primary);
        color: #fff;
    }
    
    @@media (max-width: 768px) {
        .info-grid {
            grid-template-columns: 1fr;
        }
        
        .profile-header {
            flex-direction: column;
            text-align: center;
        }
    }
</style>

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="page-header-section">
        <div class="profile-header">
            <div class="profile-avatar">
                @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                {
                    <img src="@Model.AvatarUrl" alt="Avatar" style="width: 100%; height: 100%; border-radius: 50%; object-fit: cover;">
                }
                else
                {
                    <i class="bi bi-person-fill"></i>
                }
            </div>
            <div class="profile-info">
                <h2>@(Model.FullName ?? Model.UserName)</h2>
                <p><i class="bi bi-envelope me-1"></i>@Model.Email</p>
                <span class="role-badge">
                    <i class="bi bi-shield-check me-1"></i>@ViewBag.UserRoles
                </span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Personal Information -->
            <div class="profile-card mb-4">
                <h5><i class="bi bi-person-vcard"></i> Personal Information</h5>
                <div class="info-grid">
                    <div class="info-item">
                        <label>Full Name</label>
                        <span>@(Model.FullName ?? "Not set")</span>
                    </div>
                    <div class="info-item">
                        <label>Username</label>
                        <span>@Model.UserName</span>
                    </div>
                    <div class="info-item">
                        <label>Email Address</label>
                        <span>@Model.Email</span>
                    </div>
                    <div class="info-item">
                        <label>Phone Number</label>
                        <span>@(Model.PhoneNumber ?? "Not set")</span>
                    </div>
                    <div class="info-item">
                        <label>Department</label>
                        <span>@(Model.Department?.Name ?? "Not assigned")</span>
                    </div>
                    <div class="info-item">
                        <label>Position</label>
                        <span>@(Model.Position ?? "Not set")</span>
                    </div>
                    <div class="info-item">
                        <label>Academic Rank</label>
                        <span>@(Model.AcademicRank ?? "Not set")</span>
                    </div>
                    <div class="info-item">
                        <label>Degree</label>
                        <span>@(Model.Degree ?? "Not set")</span>
                    </div>
                </div>
                
                <div class="action-buttons">
                    <a href="/Identity/Account/Manage/ChangePassword" class="btn-change-password">
                        <i class="bi bi-key"></i>
                        Change Password
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <!-- Account Status -->
            <div class="profile-card">
                <h5><i class="bi bi-shield-lock"></i> Account Status</h5>
                <div class="info-item mb-3">
                    <label>Account Status</label>
                    <span>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </span>
                </div>
                <div class="info-item mb-3">
                    <label>Email Verified</label>
                    <span>
                        @if (Model.EmailConfirmed)
                        {
                            <span class="badge bg-success"><i class="bi bi-check me-1"></i>Verified</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Not Verified</span>
                        }
                    </span>
                </div>
                <div class="info-item">
                    <label>Last Active</label>
                    <span>@(Model.LastActive?.ToString("dd MMM yyyy, HH:mm") ?? "N/A")</span>
                </div>
            </div>
        </div>
    </div>
</div>
