@{
    var currentArea = ViewContext.RouteData.Values["area"]?.ToString();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IdeaTrack</title>

    <link rel="icon" type="image/x-icon" href="~/lib/favicon.ico">

    <!-- Bootstrap (CHỈ LOAD 1 LẦN) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <!-- Custom CSS (SAU Bootstrap) -->
    <link href="~/css/councils/main.css" rel="stylesheet" />
    <link href="~/css/councils/details.css" rel="stylesheet" />
</head>

<body>

    <div class="app-layout">

        <!-- SIDEBAR -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <img src="~/images/logo-uef.png" class="brand-logo" />
                <div class="brand-info">
                    <span class="brand-name">EvalManager</span>
                    <span class="brand-subtext">Reviewer Portal</span>
                </div>
            </div>

            <nav class="sidebar-nav">
                <div class="nav-group">

                    <!-- DASHBOARD -->
                    <a href="/Councils/Page/Index"
                       class="nav-link @(currentArea == "Councils" && currentController == "Page" && currentAction == "Index" ? "active" : "")">
                        <span class="material-icons">dashboard</span>
                        Dashboard
                    </a>

                    <!-- ASSIGNED INITIATIVES -->
                    <a href="/Councils/Page/AssignedInitiatives"
                       class="nav-link @(currentArea == "Councils" && currentAction == "AssignedInitiatives" ? "active" : "")">
                        <span class="material-icons">folder</span>
                        Assigned Initiatives
                    </a>

                    <!-- HISTORY -->
                    <a href="/Councils/Page/History"
                       class="nav-link @(currentArea == "Councils" && currentAction == "History" ? "active" : "")">
                        <span class="material-icons">history</span>
                        History
                    </a>

                </div>

                <div class="nav-footer">
                    <hr class="sidebar-divider">

                    <a href="/Account/Logout" class="nav-link">
                        <span class="material-icons">logout</span>
                        Log Out
                    </a>
                </div>
            </nav>

            </aside>

        <main class="main-content">
            @RenderBody()
        </main>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
