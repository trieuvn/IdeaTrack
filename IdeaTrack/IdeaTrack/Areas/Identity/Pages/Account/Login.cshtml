@page
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login | UEF Teacher Portal";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/icons/logo-uef.ico">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: 'Roboto', sans-serif;
            background-color: #f5f7fa;
        }

        .background-container {
            background-image: url('/images/login-background.jpg');
            background-size: cover;
            background-position: center;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }
        
        .background-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.25); 
        }

        .login-card {
            background: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.25);
            width: 100%;
            max-width: 440px;
            position: relative;
            z-index: 2;
        }

        .logos {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            margin-bottom: 25px;
        }

        .uef-logo {
            height: 70px; 
            width: auto;
        }

        .qs-logo {
            height: 45px; 
            width: auto;
            /* Ensure no background interference */
            background-color: transparent; 
        }

        .portal-title {
            color: #0065b3; /* UEF Blue */
            font-weight: 700;
            font-size: 1.5rem;
            text-align: center;
            margin-bottom: 15px;
        }

        .portal-alert {
            background-color: #e3f2fd; /* Light Blue */
            color: #0d6efd; 
            border: none;
            border-radius: 6px;
            font-size: 0.95rem;
            text-align: center;
            padding: 15px;
            margin-bottom: 25px;
            line-height: 1.4;
        }
        
        .portal-alert a {
            font-weight: 600;
            text-decoration: none;
            color: inherit;
        }

        .form-control-lg {
            border-radius: 6px;
            font-size: 0.95rem;
            height: 48px;
            border: 1px solid #dee2e6;
            padding-left: 15px;
            color: #495057;
        }

        .form-control-lg:focus {
            box-shadow: none;
            border-color: #86b7fe;
        }

        .password-toggle {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            border: none;
            background: none;
            color: #adb5bd;
            cursor: pointer;
            padding: 0;
        }

        .btn-signin {
            background-color: #0065b3;
            border: none;
            border-radius: 6px;
            height: 48px;
            font-weight: 700;
            font-size: 0.95rem;
            width: 100%;
            color: white;
            text-transform: uppercase;
            margin-top: 15px;
        }

        .btn-signin:hover {
            background-color: #005091;
        }

        .divider {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 25px 0;
            color: #6c757d;
            font-size: 0.9rem;
        }

        .divider::before, .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #e9ecef;
        }

        .divider::before {
            margin-right: 15px;
        }

        .divider::after {
            margin-left: 15px;
        }

        .btn-google {
            background-color: white;
            border: 1px solid #dee2e6;
            border-radius: 6px;
            height: 48px;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            font-weight: 500;
            color: #0065b3; /* Blue text for Google */
            transition: all 0.2s;
        }

        .btn-google:hover {
            background-color: #f8f9fa;
        }
        
        .google-icon {
            height: 24px;
            width: auto;
        }

        .help-box {
            background-color: #e9ecef;
            border-radius: 6px;
            padding: 12px;
            text-align: center;
            margin-top: 30px;
            color: #6c757d;
            font-size: 0.9rem;
        }
        
        .help-box a {
            color: #0065b3;
            text-decoration: none;
        }

        .help-box a:hover {
            text-decoration: underline;
        }

        .link-forgot {
            color: #28a745; /* Standard Green */
            text-decoration: none;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .link-forgot:hover {
            text-decoration: underline;
            color: #157347;
        }
        
        .language-container {
             text-align: center;
             margin-top: 30px;
             position: absolute;
             bottom: 30px;
             left: 0; 
             right: 0;
             z-index: 2;
        }
        
        .lang-dropdown-btn {
            background: white;
            border: none;
            padding: 8px 20px;
            border-radius: 4px;
            font-size: 0.9rem;
            color: #495057;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

    </style>
</head>
<body>
    <div class="background-container">
        <div class="background-overlay"></div>
        
        <div class="login-card">
            <!-- Logos -->
            <div class="logos">
                <img src="https://upload.wikimedia.org/wikipedia/en/7/77/Ho_Chi_Minh_City_University_of_Economics_and_Finance_UEF_Logo.png" alt="UEF Logo" class="uef-logo">
                <img src="/images/logo-qsstar.png" alt="QS Stars" class="qs-logo">
            </div>

            <!-- Title -->
            <h3 class="portal-title">UEF ID</h3>

            <!-- Alert Box -->
            <div class="portal-alert">
                Sign in to your UEF ID account to access <br> <strong>UEF Teacher Portal</strong>
            </div>

            <!-- Login Form -->
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small text-center mb-3"></div>

                <div class="mb-3">
                    <input asp-for="Input.UsernameOrEmail" class="form-control form-control-lg" placeholder="Username or email" required />
                    <span asp-validation-for="Input.UsernameOrEmail" class="text-danger small"></span>
                </div>

                <div class="mb-3 position-relative">
                    <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="Password" required />
                    <button type="button" id="togglePassword" class="password-toggle">
                        <i class="far fa-eye"></i>
                    </button>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" id="rememberMe">
                        <label class="form-check-label text-muted small" for="rememberMe">
                            Remember me
                        </label>
                    </div>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="link-forgot">Forgot Password?</a>
                </div>

                <button type="submit" class="btn btn-signin">SIGN IN</button>
            </form>

            <!-- Divider -->
            <div class="divider">Or sign in with</div>

            <!-- Google Button -->
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <button type="submit" name="provider" value="Google" class="btn btn-google" title="Log in using your Google account">
                   <span>Google</span>
                   <img src="/images/logo-google.png" alt="G" class="google-icon">
                </button>
            </form>

            <!-- Footer Help -->
            <div class="help-box">
                If you need help, visit <a href="https://help.uef.edu.vn" target="_blank">help.uef.edu.vn</a>.
            </div>
        </div>

        <!-- Language Selector -->
        <div class="language-container">
            <div class="dropdown d-inline-block">
                <button class="lang-dropdown-btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    English
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">English</a></li>
                    <li><a class="dropdown-item" href="#">Vietnamese</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle password
        document.getElementById('togglePassword')?.addEventListener('click', function () {
            const pwd = document.querySelector('input[type="password"], input[type="text"][placeholder="Password"]');
            const icon = this.querySelector('i');
            if (pwd.type === 'password') {
                pwd.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                pwd.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });
    </script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>
