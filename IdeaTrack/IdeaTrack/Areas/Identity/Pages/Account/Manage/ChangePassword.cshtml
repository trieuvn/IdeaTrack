@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu cá nhân";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <!-- HEADER -->
            <div class="text-center mb-4">
                <h2 class="fw-bold mb-1 font-display">@ViewData["Title"]</h2>
                <p class="text-muted">Cập nhật mật khẩu thường xuyên để bảo vệ tài khoản của bạn</p>
            </div>

            <partial name="_StatusMessage" for="StatusMessage" />

            <!-- CARD FRAME -->
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <form id="change-password-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <!-- OLD PASSWORD -->
                        <div class="mb-3">
                            <label asp-for="Input.OldPassword" class="form-label fw-bold text-secondary text-uppercase small">Mật khẩu hiện tại</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted">
                                    <i class="fa-solid fa-key"></i>
                                </span>
                                <input asp-for="Input.OldPassword" class="form-control border-start-0 bg-light" autocomplete="current-password" aria-required="true" placeholder="Nhập mật khẩu cũ..." />
                            </div>
                            <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
                        </div>

                        <!-- NEW PASSWORD -->
                        <div class="mb-3">
                            <label asp-for="Input.NewPassword" class="form-label fw-bold text-secondary text-uppercase small">Mật khẩu mới</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted">
                                    <i class="fa-solid fa-lock"></i>
                                </span>
                                <input asp-for="Input.NewPassword" class="form-control border-start-0 bg-light" autocomplete="new-password" aria-required="true" placeholder="Mật khẩu mới (tối thiểu 6 ký tự)" />
                            </div>
                            <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                        </div>

                        <!-- CONFIRM PASSWORD -->
                        <div class="mb-4">
                            <label asp-for="Input.ConfirmPassword" class="form-label fw-bold text-secondary text-uppercase small">Xác nhận mật khẩu</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0 text-muted">
                                    <i class="fa-solid fa-circle-check"></i>
                                </span>
                                <input asp-for="Input.ConfirmPassword" class="form-control border-start-0 bg-light" autocomplete="new-password" aria-required="true" placeholder="Nhập lại mật khẩu mới" />
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="w-100 btn btn-danger fw-bold py-2 rounded-3 shadow-sm">
                            <i class="fa-solid fa-floppy-disk me-2"></i> Update Password
                        </button>
                    </form>
                </div>
            </div>
            
            <div class="text-center mt-3">
                <a href="/" class="text-muted small text-decoration-none">
                    <i class="fa-solid fa-arrow-left me-1"></i> Quay về trang chủ
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
