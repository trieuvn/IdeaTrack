<main class="flex-grow-1 overflow-auto p-4 bg-light">
    <div class="container-fluid">

        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb bg-transparent p-0 m-0">
                <li class="breadcrumb-item"><a href="#" class="text-decoration-none text-secondary">Dashboard</a></li>
                <li class="breadcrumb-item text-muted">User & Role Management</li>
            </ol>
        </nav>

        <!-- Title + Action Button -->
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-start mb-5 gap-3">
            <div>
                <h1 class="h2 fw-bold mb-1">User & Role Management</h1>
                <p class="text-muted mb-0">Manage user accounts, assign roles, and configure system permissions.</p>
            </div>
            <button class="btn btn-primary d-flex align-items-center gap-2 shadow-sm">
                <span class="material-symbols-outlined">add</span> Add New User
            </button>
        </div>

        <!-- Stats Cards -->
        <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
            <div class="col">
                <div class="card h-100 shadow-sm border-0 rounded-4">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted small mb-1">Total Users</p>
                            <h3 class="fw-bold mb-0">142</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 text-primary p-3 rounded-circle">
                            <span class="material-symbols-outlined fs-3">group</span>
                        </div>
                    </div>
                    <div class="card-footer d-flex align-items-center gap-2 small bg-white border-0">
                        <span class="badge bg-success py-1">+5%</span>
                        <span class="text-muted">new this week</span>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100 shadow-sm border-0 rounded-4">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted small mb-1">Active Lecturers</p>
                            <h3 class="fw-bold mb-0">89</h3>
                        </div>
                        <div class="bg-purple bg-opacity-10 text-purple p-3 rounded-circle">
                            <span class="material-symbols-outlined fs-3">school</span>
                        </div>
                    </div>
                    <div class="card-footer small bg-white border-0 text-muted">
                        Submitters of ideas
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100 shadow-sm border-0 rounded-4">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted small mb-1">Council Members</p>
                            <h3 class="fw-bold mb-0">12</h3>
                        </div>
                        <div class="bg-warning bg-opacity-10 text-warning p-3 rounded-circle">
                            <span class="material-symbols-outlined fs-3">gavel</span>
                        </div>
                    </div>
                    <div class="card-footer small bg-white border-0 text-muted">
                        Approvers & reviewers
                    </div>
                </div>
            </div>
        </div>

        <!-- Users Table -->
        <div class="card shadow-sm border-0 rounded-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col"><input type="checkbox"></th>
                            <th scope="col">User</th>
                            <th scope="col">Role</th>
                            <th scope="col">Department</th>
                            <th scope="col">Status</th>
                            <th scope="col">Last Active</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- User Row Sample -->
                        <tr onclick="openRoleModal('Dr. Sarah Smith','Council Member')" style="cursor:pointer;">
                            <td><input type="checkbox"></td>
                            <td class="d-flex align-items-center gap-3">
                                <img src="https://i.pravatar.cc/50?img=15" alt="Dr. Sarah Smith" class="rounded-circle" width="50" height="50">
                                <div>
                                    <div class="fw-bold">Dr. Sarah Smith</div>
                                    <small class="text-muted">sarah.smith@uni.edu</small>
                                </div>
                            </td>
                            <td><span class="badge bg-success">Council Member</span></td>
                            <td>Science & Tech</td>
                            <td><span class="badge bg-success">Active</span></td>
                            <td>2 hours ago</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" onclick="openRoleModal('Dr. Sarah Smith','Council Member'); event.stopPropagation();"><span class="material-symbols-outlined">edit</span></button>
                                <button class="btn btn-sm btn-outline-danger"><span class="material-symbols-outlined">delete</span></button>
                            </td>
                        </tr>

                        <tr onclick="openRoleModal('John Doe','Lecturer')" style="cursor:pointer;">
                            <td><input type="checkbox"></td>
                            <td class="d-flex align-items-center gap-3">
                                <img src="https://i.pravatar.cc/50?img=16" alt="John Doe" class="rounded-circle" width="50" height="50">
                                <div>
                                    <div class="fw-bold">John Doe</div>
                                    <small class="text-muted">john.doe@uni.edu</small>
                                </div>
                            </td>
                            <td><span class="badge bg-primary">Lecturer</span></td>
                            <td>Engineering</td>
                            <td><span class="badge bg-success">Active</span></td>
                            <td>1 day ago</td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" onclick="openRoleModal('John Doe','Lecturer'); event.stopPropagation();"><span class="material-symbols-outlined">edit</span></button>
                                <button class="btn btn-sm btn-outline-danger"><span class="material-symbols-outlined">delete</span></button>
                            </td>
                        </tr>

                        <!-- Add more users here -->
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</main>

<!-- Modal Bootstrap -->
<div class="modal fade" id="roleModal" tabindex="-1" aria-labelledby="roleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 shadow-sm">
            <div class="modal-header">
                <h5 class="modal-title" id="roleModalLabel">Change Role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="modalUserName" class="fw-bold"></p>
                <label for="roleSelect" class="form-label">Select new role:</label>
                <select id="roleSelect" class="form-select">
                    <option value="Student">Student</option>
                    <option value="Lecturer">Lecturer</option>
                    <option value="Council Member">Council Member</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveRole()">Save</button>
            </div>
        </div>
    </div>
</div>
