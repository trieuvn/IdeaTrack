@{
    var currentArea = ViewContext.RouteData.Values["area"]?.ToString();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

    bool isDashboard =
        currentArea == "Admin" &&
        currentController == "Intro" &&
        (currentAction == "Dashboard" || string.IsNullOrEmpty(currentAction));
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Audit Log View</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="~/css/admin/main.css" rel="stylesheet" >
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body class="bg-light text-dark">

    <div class="d-flex min-vh-100">
        <!-- Sidebar -->
        <nav class="sidebar bg-white border-end d-none d-lg-flex flex-column p-3">
            <div class="mb-4 d-flex align-items-center">
                <img src="~/images/logo-uef.png"  style="width:60px;height:50px;" alt="Logo">
                <div>
                    <h6 class="mb-0">Admin System</h6>
                    <small class="text-muted">University Council</small>
                </div>
            </div>
            <ul class="nav nav-pills flex-column gap-1">
                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-2 @(isDashboard ? "active" : "")"
                       href="/Admin">
                        <span class="material-symbols-outlined">dashboard</span>
                        Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-2
       @(currentArea == "Admin" && currentController == "Intro" && currentAction == "User" ? "active" : "")"
                       href="/Admin/User">
                        <span class="material-symbols-outlined">group</span>
                        Users
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link d-flex align-items-center gap-2
       @(currentArea == "Admin" && currentController == "Intro" && currentAction == "AuditLog" ? "active" : "")"
                       href="/Admin/AuditLog">
                        <span class="material-symbols-outlined">fact_check</span>
                        Audit Logs
                    </a>
                </li>

            </ul>
            <div class="mt-auto pt-3 border-top">
                <div class="d-flex align-items-center gap-2">
                    <img src="https://lh3.googleusercontent.com/aida-public/AB6AXuBG3gjtl8rwIFKmlyBkszo5_nT8BFcC9XS4GmRBv_E65rPvzfjwgk-ohk6fFUaBBrWOpuZqgseFQlPjaD8Xc_QpU-cKVA0SZ05vhS-2BFukYL5N2AWYNJRJtqgLA74iQEFF-p8YAy3rxQGhRQ81HDjwisvQEIkYiEavlmKq4CE9c4bmelFhJ5tDf6pR5q6Kv4buOVGKs9IcNBKZp2DTFCZceYfVeNKhEafohVaDzne2lbBQw1Gu3gRgrrhFOI7NjqYlAH1maPp2di98" class="rounded-circle border" style="width:40px;height:40px;" alt="Jane Admin">
                    <div>
                        <div class="fw-semibold">Jane Admin</div>
                        <small class="text-muted">Super Admin</small>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main content -->
        
                @RenderBody()
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
