@model IdeaTrack.Areas.Author.ViewModels.InitiativeCreateViewModel

<main class="container py-5">

    <!-- Hero Section -->
    <section class="hero-section text-white p-4 mb-4 shadow" style="border-radius: 15px; min-height: auto;">
        <div class="row">
            <div class="col-12">
                <span class="badge rounded-pill bg-success text-white mb-2 p-2 px-3">
                    <span class="material-icons align-middle me-1" style="font-size: 16px;">add_circle</span> NEW INITIATIVE
                </span>
                <h1 class="fw-bold display-6 mb-2">Create Initiative</h1>
                <p class="fs-6 mb-0 opacity-75" style="line-height: 1.6;">
                    Registered your new research initiative.
                </p>
            </div>
        </div>
    </section>

    <!-- Form Card -->
    <div class="card card-custom shadow-sm" style="border-radius: 15px;">
        <div class="card-header bg-white border-0 pt-4 px-4">
            <h5 class="fw-bold mb-0">
                <span class="material-icons align-middle me-2 text-info">edit_note</span>
                Initiative Information
            </h5>
        </div>
        <div class="card-body p-4">
            <form asp-controller="Initiative" asp-action="Create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Row 1: Academic Year & Category (Dependent Dropdowns) -->
                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label class="form-label fw-medium">
                            <span class="material-icons align-middle me-1 text-primary" style="font-size: 18px;">school</span>
                            Academic Year <span class="text-danger">*</span>
                        </label>
                        <select id="AcademicYearId" name="SelectedAcademicYearId" asp-items="Model.AcademicYears" class="form-select">
                            <option value="">-- Select academic year --</option>
                        </select>
                        <small class="text-muted">Select year first to see available categories</small>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Initiative.CategoryId" class="form-label fw-medium">
                            <span class="material-icons align-middle me-1 text-success" style="font-size: 18px;">category</span>
                            Category <span class="text-danger">*</span>
                        </label>
                        <select asp-for="Initiative.CategoryId" id="CategoryId" class="form-select">
                            <option value="">-- Select academic year first --</option>
                            @if (Model.Categories != null)
                            {
                                @foreach (var item in Model.Categories)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="Initiative.CategoryId" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Row 2: Department & Budget -->
                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Initiative.DepartmentId" class="form-label fw-medium">
                            <span class="material-icons align-middle me-1 text-info" style="font-size: 18px;">business</span>
                            Department <span class="text-danger">*</span>
                        </label>
                        <select asp-for="Initiative.DepartmentId" asp-items="Model.Departments" class="form-select">
                            <option value="">-- Select department --</option>
                        </select>
                        <span asp-validation-for="Initiative.DepartmentId" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Initiative.Budget" class="form-label fw-medium">
                            <span class="material-icons align-middle me-1 text-warning" style="font-size: 18px;">payments</span>
                            Budget (VND)
                        </label>
                        <input asp-for="Initiative.Budget" type="number" step="1000" placeholder="Enter estimated budget" class="form-control" />
                        <span asp-validation-for="Initiative.Budget" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Title -->
                <div class="mb-4">
                    <label asp-for="Initiative.Title" class="form-label fw-medium">
                        <span class="material-icons align-middle me-1 text-danger" style="font-size: 18px;">title</span>
                        Initiative Title <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Initiative.Title" placeholder="Enter a brief title for the initiative" class="form-control form-control-lg" />
                    <span asp-validation-for="Initiative.Title" class="text-danger small"></span>
                </div>

                <!-- Description -->
                <div class="mb-4">
                    <label asp-for="Initiative.Description" class="form-label fw-medium">
                        <span class="material-icons align-middle me-1 text-secondary" style="font-size: 18px;">notes</span>
                        Detailed Description
                    </label>
                    <textarea asp-for="Initiative.Description" placeholder="Describe the initiative, objectives, and expected outcomes..." rows="6" class="form-control"></textarea>
                    <span asp-validation-for="Initiative.Description" class="text-danger small"></span>
                </div>

                <!-- Modern Drag & Drop File Upload -->
                <div class="mb-4">
                    <label class="form-label fw-medium">
                        <span class="material-icons align-middle me-1 text-primary" style="font-size: 18px;">attach_file</span>
                        Attachments
                    </label>
                    
                    <!-- File input - use CSS to hide instead of hidden attribute for better browser compatibility -->
                    <input type="file" id="ProjectFiles" name="ProjectFiles" multiple accept=".pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx" 
                           style="position: absolute; width: 1px; height: 1px; padding: 0; margin: -1px; overflow: hidden; clip: rect(0,0,0,0); border: 0;" />
                    
                    <!-- Drop Zone -->
                    <div id="dropZone" class="drop-zone border border-2 border-dashed rounded-4 p-5 text-center bg-light position-relative" 
                         style="border-color: #dee2e6 !important; cursor: pointer; transition: all 0.3s ease;">
                        <div class="drop-zone-content">
                            <span class="material-icons text-primary mb-3" style="font-size: 48px;">cloud_upload</span>
                            <h6 class="fw-bold text-dark mb-2">Drag and drop files here</h6>
                            <p class="text-muted mb-3">or click to upload</p>
                            <span class="badge bg-light text-muted border">PDF, Word, Excel, PowerPoint • Max 10MB</span>
                        </div>
                    </div>
                    
                    <!-- File List -->
                    <div id="fileMessage" class="mb-2"></div>
                    <div id="fileList" class="mt-3"></div>
                </div>

                <!-- Action Buttons -->
                <hr class="my-4">
                <div class="d-flex justify-content-between align-items-center">
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <span class="material-icons align-middle me-1" style="font-size: 18px;">arrow_back</span> Dashboard
                    </a>
                    <div class="d-flex gap-3">
                        <button type="submit" name="action" value="Save" class="btn btn-outline-primary rounded-pill px-4">
                            <span class="material-icons align-middle me-1" style="font-size: 18px;">save</span> Save Draft
                        </button>
                        <button type="submit" name="action" value="Submit" class="btn btn-primary rounded-pill px-4 fw-bold shadow">
                            <span class="material-icons align-middle me-1" style="font-size: 18px;">send</span> Submit Initiative
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>

</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <style>
        .drop-zone.drag-over {
            border-color: #0d6efd !important;
            background-color: #e7f1ff !important;
        }
        .drop-zone:hover {
            border-color: #0d6efd !important;
            background-color: #f8f9fa !important;
        }
        .file-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 16px;
            background: #fff;
            border: 1px solid #e9ecef;
            border-radius: 10px;
            margin-bottom: 8px;
            transition: all 0.2s ease;
        }
        .file-item:hover {
            background: #f8f9fa;
            border-color: #dee2e6;
        }
        .file-item .file-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }
        .file-item .file-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
        }
        .file-item .remove-btn {
            background: none;
            border: none;
            color: #dc3545;
            cursor: pointer;
            padding: 4px;
            border-radius: 50%;
            transition: all 0.2s;
        }
        .file-item .remove-btn:hover {
            background: #fee2e2;
        }
    </style>
    
    <!-- Dependent Dropdown AJAX Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const dropZone = document.getElementById('dropZone');
            const fileInput = document.getElementById('ProjectFiles');
            const fileList = document.getElementById('fileList');
            const fileMessage = document.getElementById('fileMessage');
            let selectedFiles = [];

            function showMessage(message, type = 'danger') {
                fileMessage.innerHTML = `<div class="alert alert-${type} py-2" role="alert">${message}</div>`;
            }

            function clearMessage() {
                fileMessage.innerHTML = '';
            }

            // Click để mở file dialog
            dropZone.addEventListener('click', () => fileInput.click());

            // Drag & drop
            dropZone.addEventListener('dragover', (e) => {
                e.preventDefault();
                dropZone.classList.add('drag-over');
            });
            dropZone.addEventListener('dragleave', (e) => {
                e.preventDefault();
                dropZone.classList.remove('drag-over');
            });
            dropZone.addEventListener('drop', (e) => {
                e.preventDefault();
                dropZone.classList.remove('drag-over');
                const files = Array.from(e.dataTransfer.files);
                addFiles(files);
            });

            // Chọn file bằng input
            fileInput.addEventListener('change', (e) => {
                const files = Array.from(e.target.files);
                addFiles(files);
            });

            function addFiles(files) {
                clearMessage();
                const allowedTypes = ['.pdf', '.doc', '.docx', '.xls', '.xlsx', '.ppt', '.pptx'];

                files.forEach(file => {
                    const ext = '.' + file.name.split('.').pop().toLowerCase();
                    if (!allowedTypes.includes(ext)) {
                        showMessage(`File "${file.name}" không hợp lệ. Chỉ PDF, Word, Excel, PowerPoint được phép.`);
                        return;
                    }
                    // Không thêm trùng lặp
                    if (!selectedFiles.some(f => f.name === file.name && f.size === file.size)) {
                        selectedFiles.push(file);
                    }
                });

                updateFileList();
                syncWithInput();
            }

            function removeFile(index) {
                selectedFiles.splice(index, 1);
                updateFileList();
                syncWithInput();
            }

            function updateFileList() {
                if (selectedFiles.length === 0) {
                    fileList.innerHTML = '';
                    return;
                }

                let html = `<div class="small text-muted mb-2"><strong>${selectedFiles.length}</strong> file(s) selected</div>`;

                selectedFiles.forEach((file, index) => {
                    const size = formatFileSize(file.size);
                    const ext = file.name.split('.').pop().toLowerCase();
                    const iconClass = getFileIcon(ext);
                    const iconColor = getFileColor(ext);

                    html += `
                        <div class="file-item">
                            <div class="file-info">
                                <div class="file-icon" style="background: ${iconColor}20;">
                                    <span class="material-icons" style="color: ${iconColor}; font-size: 20px;">${iconClass}</span>
                                </div>
                                <div>
                                    <div class="fw-medium text-truncate" style="max-width: 300px;">${file.name}</div>
                                    <small class="text-muted">${size}</small>
                                </div>
                            </div>
                            <button type="button" class="remove-btn" onclick="window.removeFileAtIndex(${index})" title="Remove">
                                <span class="material-icons" style="font-size: 20px;">close</span>
                            </button>
                        </div>
                    `;
                });

                fileList.innerHTML = html;
            }

            function syncWithInput() {
                const dt = new DataTransfer();
                selectedFiles.forEach(file => dt.items.add(file));
                fileInput.files = dt.files;
            }

            function formatFileSize(bytes) {
                if (bytes < 1024) return bytes + ' B';
                if (bytes < 1048576) return (bytes / 1024).toFixed(1) + ' KB';
                return (bytes / 1048576).toFixed(1) + ' MB';
            }

            function getFileIcon(ext) {
                switch(ext){
                    case 'pdf': return 'picture_as_pdf';
                    case 'doc':
                    case 'docx': return 'description';
                    case 'xls':
                    case 'xlsx': return 'table_chart';
                    case 'ppt':
                    case 'pptx': return 'slideshow';
                    default: return 'insert_drive_file';
                }
            }

            function getFileColor(ext) {
                switch(ext){
                    case 'pdf': return '#dc3545';
                    case 'doc':
                    case 'docx': return '#0d6efd';
                    case 'xls':
                    case 'xlsx': return '#198754';
                    case 'ppt':
                    case 'pptx': return '#fd7e14';
                    default: return '#6c757d';
                }
            }

            window.removeFileAtIndex = removeFile;

            // ---- Validate trước khi submit ----
            const form = document.querySelector('form');
            if(form){
                form.addEventListener('submit', function(e){
                    // Đồng bộ lại từ fileInput
                    selectedFiles = Array.from(fileInput.files);

                    const hasPdf = selectedFiles.some(f => f.name.toLowerCase().endsWith('.pdf'));
                    const hasWord = selectedFiles.some(f => f.name.toLowerCase().endsWith('.doc') || f.name.toLowerCase().endsWith('.docx'));

                    if(!hasPdf || !hasWord){
                        e.preventDefault();
                        showMessage('Bạn phải chọn ít nhất 1 file PDF và 1 file Word trước khi submit.', 'danger');
                        return false; // chắc chắn chặn submit
                    }

                    // Đồng bộ trước khi gửi
                    syncWithInput();
                });
            }
        });
    </script>

}

