@model IdeaTrack.Areas.Author.ViewModels.CoAuthorManageViewModel
@{
    ViewData["Title"] = "Manage Co-Authors";
    Layout = "~/Areas/Author/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-users me-2"></i>Co-Authors
                    </h4>
                    <a asp-action="Detail" asp-route-id="@Model.InitiativeId" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left me-1"></i>Back
                    </a>
                </div>
                
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["WarningMessage"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["WarningMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="mb-4">
                        <h5 class="text-muted">
                            <span class="badge bg-secondary">@Model.InitiativeCode</span>
                            @Model.InitiativeTitle
                        </h5>
                    </div>

                    <!-- Add Co-Author Form -->
                    @if (Model.CanEdit && Model.AvailableUsers.Any())
                    {
                        <div class="card bg-light mb-4">
                            <div class="card-body">
                                <h6 class="card-title mb-3">
                                    <i class="fas fa-user-plus me-1"></i>Add Co-Author
                                </h6>
                                <form asp-action="AddCoAuthor" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="initiativeId" value="@Model.InitiativeId" />
                                    <div class="row g-2 align-items-end">
                                        <div class="col-md-8">
                                            <select name="newCoAuthorId" class="form-select" required>
                                                <option value="">-- Select user --</option>
                                                @foreach (var user in Model.AvailableUsers)
                                                {
                                                    <option value="@user.Value">@user.Text</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="col-md-4">
                                            <button type="submit" class="btn btn-primary w-100">
                                                <i class="fas fa-plus me-1"></i>Add
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    }

                    <!-- Current Co-Authors List -->
                    <h6 class="mb-3">
                        <i class="fas fa-list me-1"></i>Author List (@Model.CoAuthors.Count members)
                    </h6>

                    @if (Model.CoAuthors.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Department</th>
                                        <th>Role</th>
                                        <th>Joined Date</th>
                                        @if (Model.CanEdit)
                                        {
                                            <th style="width: 80px">Actions</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var author in Model.CoAuthors.OrderByDescending(a => a.IsCreator).ThenBy(a => a.JoinedAt))
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 36px; height: 36px;">
                                                        <i class="fas fa-user"></i>
                                                    </div>
                                                    <span class="fw-semibold">@author.AuthorName</span>
                                                </div>
                                            </td>
                                            <td>@author.Email</td>
                                            <td>@(author.Department ?? "-")</td>
                                            <td>
                                                @if (author.IsCreator)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-crown me-1"></i>Primary Author
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">Co-Author</span>
                                                }
                                            </td>
                                            <td>@author.JoinedAt.ToString("dd/MM/yyyy")</td>
                                            @if (Model.CanEdit)
                                            {
                                                <td>
                                                    @if (!author.IsCreator)
                                                    {
                                                        <form asp-action="RemoveCoAuthor" method="post" class="d-inline"
                                                              onsubmit="return confirm('Are you sure you want to remove this co-author?');">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="authorshipId" value="@author.AuthorshipId" />
                                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Remove">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="fas fa-users fa-3x mb-3"></i>
                            <p>No co-authors yet</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 mb-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="fas fa-info-circle me-1"></i>Guidelines</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0 small">
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-1"></i>
                            Primary author cannot be removed
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-1"></i>
                            Co-authors can view and track progress
                        </li>
                        <li>
                            <i class="fas fa-check text-success me-1"></i>
                            Can only add/remove when initiative is in Draft or Pending status
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
