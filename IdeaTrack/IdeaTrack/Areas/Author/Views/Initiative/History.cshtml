@model IEnumerable<IdeaTrack.Models.Initiative>

<main class="container py-5">

    <!-- Hero Section -->
    <section class="hero-section text-white p-5 mb-5 shadow-lg">
        <div class="row">
            <div class="col-lg-8">
                <span class="badge rounded-pill bg-info bg-opacity-25 text-info mb-3 p-2 px-3" style="border: 1px solid rgba(0,255,255,0.2)">
                    <span class="material-icons align-middle me-1" style="font-size: 16px;">history</span> L?CH S? SÁNG KI?N
                </span>
                <h1 class="fw-bold display-5 mb-3">L?ch s? ho?t d?ng</h1>
                <p class="fs-5 mb-0 opacity-75" style="max-width: 600px; line-height: 1.6;">
                    Theo dõi và qu?n lý t?t c? các sáng ki?n b?n dã d? xu?t, t? nháp d?n dã duy?t.
                </p>
            </div>
            <div class="col-lg-4 d-flex align-items-center justify-content-end">
                <div class="text-center">
                    <div class="display-3 fw-bold">@Model.Count()</div>
                    <div class="opacity-75">T?ng sáng ki?n</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Filter Tabs -->
    <div class="card card-custom shadow-sm mb-4" style="border-radius: 15px;">
        <div class="card-body py-3">
            <ul class="nav nav-pills" id="historyTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active rounded-pill" data-filter="all" type="button">
                        <span class="material-icons align-middle me-1" style="font-size: 16px;">apps</span>
                        T?t c? <span class="badge bg-secondary ms-1">@Model.Count()</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link rounded-pill" data-filter="approved" type="button">
                        <span class="material-icons align-middle me-1" style="font-size: 16px;">check_circle</span>
                        Ðã duy?t <span class="badge bg-success ms-1">@Model.Count(i => i.Status == IdeaTrack.Models.InitiativeStatus.Approved)</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link rounded-pill" data-filter="pending" type="button">
                        <span class="material-icons align-middle me-1" style="font-size: 16px;">pending</span>
                        Ch? duy?t <span class="badge bg-warning text-dark ms-1">@Model.Count(i => i.Status == IdeaTrack.Models.InitiativeStatus.Pending || i.Status == IdeaTrack.Models.InitiativeStatus.Evaluating)</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link rounded-pill" data-filter="draft" type="button">
                        <span class="material-icons align-middle me-1" style="font-size: 16px;">edit_note</span>
                        Nháp <span class="badge bg-secondary ms-1">@Model.Count(i => i.Status == IdeaTrack.Models.InitiativeStatus.Draft)</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link rounded-pill" data-filter="rejected" type="button">
                        <span class="material-icons align-middle me-1" style="font-size: 16px;">cancel</span>
                        T? ch?i <span class="badge bg-danger ms-1">@Model.Count(i => i.Status == IdeaTrack.Models.InitiativeStatus.Rejected)</span>
                    </button>
                </li>
            </ul>
        </div>
    </div>

    <!-- History Table -->
    <div class="card card-custom shadow-sm" style="border-radius: 15px;">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-borderless align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4 py-3">Tiêu d?</th>
                                <th class="py-3">Danh m?c</th>
                                <th class="py-3">Ngày t?o</th>
                                <th class="py-3">Tr?ng thái</th>
                                <th class="pe-4 py-3 text-end">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var statusClass = item.Status switch
                                {
                                    IdeaTrack.Models.InitiativeStatus.Approved => "approved",
                                    IdeaTrack.Models.InitiativeStatus.Rejected => "rejected",
                                    IdeaTrack.Models.InitiativeStatus.Draft => "draft",
                                    IdeaTrack.Models.InitiativeStatus.Pending => "pending",
                                    _ => "pending"
                                };

                                <tr class="history-row" data-status="@statusClass">
                                    <td class="ps-4">
                                        <div class="fw-medium">@item.Title</div>
                                        <div class="text-muted small text-truncate" style="max-width: 300px;">
                                            @(string.IsNullOrEmpty(item.Description) ? "Chua có mô t?" : (item.Description.Length > 60 ? item.Description.Substring(0, 60) + "..." : item.Description))
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark rounded-pill">
                                            @(item.Category?.Name ?? "Chua phân lo?i")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <span class="material-icons text-muted me-1" style="font-size: 16px;">event</span>
                                            @item.CreatedAt.ToString("dd/MM/yyyy")
                                        </div>
                                    </td>
                                    <td>
                                        @switch (item.Status)
                                        {
                                            case IdeaTrack.Models.InitiativeStatus.Approved:
                                                <span class="badge bg-success rounded-pill">
                                                    <span class="material-icons align-middle me-1" style="font-size: 14px;">check</span> Ðã duy?t
                                                </span>
                                                break;
                                            case IdeaTrack.Models.InitiativeStatus.Rejected:
                                                <span class="badge bg-danger rounded-pill">
                                                    <span class="material-icons align-middle me-1" style="font-size: 14px;">close</span> T? ch?i
                                                </span>
                                                break;
                                            case IdeaTrack.Models.InitiativeStatus.Draft:
                                                <span class="badge bg-secondary rounded-pill">
                                                    <span class="material-icons align-middle me-1" style="font-size: 14px;">edit</span> Nháp
                                                </span>
                                                break;
                                            case IdeaTrack.Models.InitiativeStatus.Pending:
                                            case IdeaTrack.Models.InitiativeStatus.Evaluating:
                                            case IdeaTrack.Models.InitiativeStatus.Faculty_Approved:
                                                <span class="badge bg-warning text-dark rounded-pill">
                                                    <span class="material-icons align-middle me-1" style="font-size: 14px;">schedule</span> Ch? duy?t
                                                </span>
                                                break;
                                            default:
                                                <span class="badge bg-light text-dark rounded-pill">@item.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td class="pe-4 text-end">
                                        <a asp-controller="Initiative" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                            <span class="material-icons align-middle" style="font-size: 16px;">visibility</span> Xem
                                        </a>
                                        @if (item.Status == IdeaTrack.Models.InitiativeStatus.Draft)
                                        {
                                            <a asp-controller="Initiative" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary rounded-pill px-3 ms-1" title="Ch?nh s?a">
                                                <span class="material-icons align-middle" style="font-size: 16px;">edit</span>
                                            </a>

                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <span class="material-icons text-muted" style="font-size: 80px;">inbox</span>
                    <h5 class="text-muted mt-3">Chua có sáng ki?n nào</h5>
                    <p class="text-muted mb-4">B?t d?u b?ng vi?c t?o sáng ki?n d?u tiên c?a b?n</p>
                    <a asp-controller="Initiative" asp-action="Create" class="btn btn-danger rounded-pill px-4">
                        <span class="material-icons align-middle me-1">add_circle</span> T?o sáng ki?n m?i
                    </a>
                </div>
            }
        </div>
    </div>

</main>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const tabs = document.querySelectorAll('#historyTabs .nav-link');
        const rows = document.querySelectorAll('.history-row');

        tabs.forEach(tab => {
            tab.addEventListener('click', function() {
                // Update active tab
                tabs.forEach(t => t.classList.remove('active'));
                this.classList.add('active');

                const filter = this.dataset.filter;

                // Filter rows
                rows.forEach(row => {
                    if (filter === 'all' || row.dataset.status === filter) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });
    });
</script>
}
