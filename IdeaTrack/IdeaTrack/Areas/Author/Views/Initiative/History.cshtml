@model IEnumerable<IdeaTrack.Models.Initiative>

<main class="container py-5">

    <!-- Hero Section -->
    <section class="hero-section text-white p-5 mb-5 shadow-lg">
        <div class="row">
            <div class="col-lg-8">
                <span class="badge rounded-pill bg-info bg-opacity-25 text-info mb-3 p-2 px-3" style="border: 1px solid rgba(0,255,255,0.2)">
                    <span class="material-icons align-middle me-1" style="font-size: 16px;">history</span> INITIATIVE HISTORY
                </span>
                <h1 class="fw-bold display-5 mb-3">Activity History</h1>
                <p class="fs-5 mb-0 opacity-75" style="max-width: 600px; line-height: 1.6;">
                    Track and manage all your proposed initiatives, from drafts to approved ones.
                </p>
            </div>
            <div class="col-lg-4 d-flex align-items-center justify-content-end">
                <div class="text-center">
                    <div class="display-3 fw-bold">@Model.Count()</div>
                    <div class="opacity-75">Total Initiatives</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Filter Tabs -->
    <div class="card card-custom shadow-sm mb-4" style="border-radius: 15px;">
        <div class="card-body py-3">
            <ul class="nav nav-pills" id="historyTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active rounded-pill" data-filter="all" type="button">
                        <span class="material-icons align-middle me-1" style="font-size: 16px;">apps</span>
                        All <span class="badge bg-secondary ms-1">@Model.Count()</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link rounded-pill" data-filter="approved" type="button">
                        <span class="material-icons align-middle me-1" style="font-size: 16px;">check_circle</span>
                        Approved <span class="badge bg-success ms-1">@Model.Count(i => i.Status == IdeaTrack.Models.InitiativeStatus.Approved)</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link rounded-pill" data-filter="pending" type="button">
                        <span class="material-icons align-middle me-1" style="font-size: 16px;">pending</span>
                        Pending <span class="badge bg-warning text-dark ms-1">@Model.Count(i => i.Status == IdeaTrack.Models.InitiativeStatus.Pending || i.Status == IdeaTrack.Models.InitiativeStatus.Evaluating)</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link rounded-pill" data-filter="draft" type="button">
                        <span class="material-icons align-middle me-1" style="font-size: 16px;">edit_note</span>
                        Draft <span class="badge bg-secondary ms-1">@Model.Count(i => i.Status == IdeaTrack.Models.InitiativeStatus.Draft)</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link rounded-pill" data-filter="rejected" type="button">
                        <span class="material-icons align-middle me-1" style="font-size: 16px;">cancel</span>
                        Rejected <span class="badge bg-danger ms-1">@Model.Count(i => i.Status == IdeaTrack.Models.InitiativeStatus.Rejected)</span>
                    </button>
                </li>
            </ul>
        </div>
    </div>

    <!-- History Table with DataTables -->
    <div class="card shadow-sm" style="border-radius: 15px; border: 1px solid rgba(37, 99, 235, 0.12);">
        <div class="card-header bg-white py-3" style="border-radius: 15px 15px 0 0; border-bottom: 1px solid rgba(37, 99, 235, 0.1);">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 fw-bold text-primary">
                    <span class="material-icons align-middle me-2" style="font-size: 20px;">list_alt</span>
                    Initiative List
                </h5>
                <a asp-controller="Initiative" asp-action="Create" class="btn btn-primary btn-sm rounded-pill px-3">
                    <span class="material-icons align-middle me-1" style="font-size: 16px;">add</span> New Initiative
                </a>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive p-3">
                    <table id="basic-datatables" class="display table table-striped table-hover align-middle" style="width:100%">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-3">
                                    <span class="material-icons align-middle me-1" style="font-size: 16px;">title</span>
                                    Title
                                </th>
                                <th>
                                    <span class="material-icons align-middle me-1" style="font-size: 16px;">category</span>
                                    Category
                                </th>
                                <th>
                                    <span class="material-icons align-middle me-1" style="font-size: 16px;">event</span>
                                    Created Date
                                </th>
                                <th>
                                    <span class="material-icons align-middle me-1" style="font-size: 16px;">flag</span>
                                    Status
                                </th>
                                <th class="text-end pe-3">
                                    <span class="material-icons align-middle me-1" style="font-size: 16px;">settings</span>
                                    Actions
                                </th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Title</th>
                                <th>Category</th>
                                <th>Created Date</th>
                                <th>Status</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-3">
                                        <div class="fw-semibold text-dark">@item.Title</div>
                                        <div class="text-muted small text-truncate" style="max-width: 280px;">
                                            @(string.IsNullOrEmpty(item.Description) ? "No description" : (item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description))
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark rounded-pill border">
                                            @(item.Category?.Name ?? "Uncategorized")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center text-muted">
                                            <span class="material-icons me-1" style="font-size: 14px;">calendar_today</span>
                                            @item.CreatedAt.ToString("dd/MM/yyyy")
                                        </div>
                                    </td>
                                    <td>
                                        @switch (item.Status)
                                        {
                                            case IdeaTrack.Models.InitiativeStatus.Approved:
                                                <span class="badge bg-success rounded-pill px-3 py-2">
                                                    <span class="material-icons align-middle me-1" style="font-size: 12px;">check_circle</span> Approved
                                                </span>
                                                break;
                                            case IdeaTrack.Models.InitiativeStatus.Rejected:
                                                <span class="badge bg-danger rounded-pill px-3 py-2">
                                                    <span class="material-icons align-middle me-1" style="font-size: 12px;">cancel</span> Rejected
                                                </span>
                                                break;
                                            case IdeaTrack.Models.InitiativeStatus.Draft:
                                                <span class="badge bg-secondary rounded-pill px-3 py-2">
                                                    <span class="material-icons align-middle me-1" style="font-size: 12px;">edit_note</span> Draft
                                                </span>
                                                break;
                                            case IdeaTrack.Models.InitiativeStatus.Pending:
                                            case IdeaTrack.Models.InitiativeStatus.Evaluating:
                                            case IdeaTrack.Models.InitiativeStatus.Faculty_Approved:
                                                <span class="badge bg-warning text-dark rounded-pill px-3 py-2">
                                                    <span class="material-icons align-middle me-1" style="font-size: 12px;">schedule</span> Pending
                                                </span>
                                                break;
                                            case IdeaTrack.Models.InitiativeStatus.Revision_Required:
                                                <span class="badge bg-info text-white rounded-pill px-3 py-2">
                                                    <span class="material-icons align-middle me-1" style="font-size: 12px;">rate_review</span> Revision
                                                </span>
                                                break;
                                            default:
                                                <span class="badge bg-light text-dark rounded-pill px-3 py-2">@item.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-end pe-3">
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Initiative" asp-action="Detail" asp-route-id="@item.Id" 
                                               class="btn btn-sm btn-outline-primary rounded-start-pill" title="View Details">
                                                <span class="material-icons" style="font-size: 16px;">visibility</span>
                                            </a>
                                            @if (item.Status == IdeaTrack.Models.InitiativeStatus.Draft || item.Status == IdeaTrack.Models.InitiativeStatus.Revision_Required)
                                            {
                                                <a asp-controller="Initiative" asp-action="Edit" asp-route-id="@item.Id" 
                                                   class="btn btn-sm btn-outline-secondary rounded-end-pill" title="Edit Initiative">
                                                    <span class="material-icons" style="font-size: 16px;">edit</span>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <span class="material-icons text-muted" style="font-size: 80px;">inbox</span>
                    </div>
                    <h5 class="text-muted mb-2">No initiatives found</h5>
                    <p class="text-muted mb-4">Start by creating your first initiative</p>
                    <a asp-controller="Initiative" asp-action="Create" class="btn btn-primary rounded-pill px-4 py-2">
                        <span class="material-icons align-middle me-1">add_circle</span> Create New Initiative
                    </a>
                </div>
            }
        </div>
    </div>

</main>



