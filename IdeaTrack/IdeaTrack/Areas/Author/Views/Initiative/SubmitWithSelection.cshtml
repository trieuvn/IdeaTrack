@model IdeaTrack.Areas.Author.ViewModels.SubmitInitiativeViewModel
@{
    ViewData["Title"] = "Nộp sáng kiến";
    Layout = "~/Areas/Author/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-paper-plane me-2"></i>Nộp sáng kiến
                    </h4>
                </div>
                
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="mb-4 p-3 bg-light rounded">
                        <h6 class="mb-2">
                            <span class="badge bg-secondary">@Model.InitiativeCode</span>
                        </h6>
                        <p class="mb-0 fw-semibold">@Model.InitiativeTitle</p>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Vui lòng chọn đợt sáng kiến và danh mục phù hợp trước khi nộp.
                    </div>

                    <form asp-action="SubmitWithSelection" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="InitiativeId" />
                        <input type="hidden" asp-for="InitiativeTitle" />
                        <input type="hidden" asp-for="InitiativeCode" />
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="PeriodId" class="form-label">
                                Đợt sáng kiến <span class="text-danger">*</span>
                            </label>
                            <select asp-for="PeriodId" asp-items="Model.Periods" class="form-select" id="periodSelect">
                                <option value="">-- Chọn đợt --</option>
                            </select>
                            <span asp-validation-for="PeriodId" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="CategoryId" class="form-label">
                                Danh mục <span class="text-danger">*</span>
                            </label>
                            <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select" id="categorySelect">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                            <div class="form-text">
                                Danh mục sẽ được tải dựa trên đợt sáng kiến đã chọn
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success flex-fill">
                                <i class="fas fa-paper-plane me-1"></i>Nộp sáng kiến
                            </button>
                            <a asp-action="Detail" asp-route-id="@Model.InitiativeId" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('periodSelect').addEventListener('change', function() {
            var periodId = this.value;
            var categorySelect = document.getElementById('categorySelect');
            
            // Clear current options
            categorySelect.innerHTML = '<option value="">-- Chọn danh mục --</option>';
            
            if (periodId) {
                // Fetch categories for the selected period
                fetch('@Url.Action("GetCategories")' + '?periodId=' + periodId)
                    .then(response => response.json())
                    .then(data => {
                        data.forEach(function(item) {
                            var option = document.createElement('option');
                            option.value = item.value;
                            option.textContent = item.text;
                            categorySelect.appendChild(option);
                        });
                    })
                    .catch(error => console.error('Error loading categories:', error));
            }
        });
    </script>
}
