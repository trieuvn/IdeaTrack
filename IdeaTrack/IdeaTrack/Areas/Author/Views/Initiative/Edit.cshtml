@model IdeaTrack.Areas.Author.ViewModels.InitiativeCreateViewModel

<main class="container py-3">

    <!-- Hero Section -->
    <section class="hero-section text-white p-4 mb-4 shadow" style="border-radius: 15px; min-height: auto;">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <span class="badge rounded-pill bg-info text-white mb-2 px-3 py-1">
                    <span class="material-icons align-middle me-1" style="font-size: 14px;">edit</span> EDIT INITIATIVE
                </span>
                <h1 class="fw-bold display-6 mb-2">Update Initiative</h1>
                <p class="mb-0 opacity-75">
                    Initiative Code: <strong>@Model.Initiative.InitiativeCode</strong>
                </p>
            </div>
        </div>
    </section>

    <!-- Form Card -->
    <div class="card card-custom shadow-sm" style="border-radius: 15px;">
        <div class="card-header bg-white border-0 pt-4 px-4">
            <h5 class="fw-bold mb-0">
                <span class="material-icons align-middle me-2 text-info">edit_note</span>
                Initiative Information
            </h5>
        </div>
        <div class="card-body p-4">
            <form asp-controller="Initiative" asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Initiative.Id" />
                <input type="hidden" asp-for="Initiative.InitiativeCode" />
                <input type="hidden" asp-for="Initiative.CreatorId" />
                <input type="hidden" asp-for="Initiative.Status" />
                <input type="hidden" asp-for="Initiative.CreatedAt" />
                
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Row 1: Academic Year & Category (Dependent Dropdowns) -->
                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label class="form-label fw-medium">
                            <span class="material-icons align-middle me-1 text-primary" style="font-size: 18px;">school</span>
                            Academic Year <span class="text-danger">*</span>
                        </label>
                        <select id="AcademicYearId" name="SelectedAcademicYearId" asp-items="Model.AcademicYears" class="form-select">
                            <option value="">-- Select academic year --</option>
                        </select>
                        <small class="text-muted">Select year first to see available categories</small>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Initiative.CategoryId" class="form-label fw-medium">
                            <span class="material-icons align-middle me-1 text-success" style="font-size: 18px;">category</span>
                            Category <span class="text-danger">*</span>
                        </label>
                        <select asp-for="Initiative.CategoryId" id="CategoryId" class="form-select">
                            <option value="">-- Select academic year first --</option>
                            @if (Model.Categories != null)
                            {
                                @foreach (var item in Model.Categories)
                                {
                                    <option value="@item.Value" selected="@(item.Value == Model.Initiative.CategoryId.ToString())">@item.Text</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="Initiative.CategoryId" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Row 2: Department (Auto-assigned) & Budget -->
                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label class="form-label fw-medium">
                            <span class="material-icons align-middle me-1 text-info" style="font-size: 18px;">business</span>
                            Department
                        </label>
                        <input type="text" class="form-control bg-light" value="@Model.UserDepartmentName" readonly />
                        <input type="hidden" asp-for="Initiative.DepartmentId" value="@Model.UserDepartmentId" />
                        <small class="text-muted">Auto-assigned from your profile</small>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Initiative.Budget" class="form-label fw-medium">
                            <span class="material-icons align-middle me-1 text-warning" style="font-size: 18px;">payments</span>
                            Budget (VND)
                        </label>
                        <input asp-for="Initiative.Budget" type="number" step="1000" placeholder="Enter estimated budget" class="form-control" />
                        <span asp-validation-for="Initiative.Budget" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Title -->
                <div class="mb-4">
                    <label asp-for="Initiative.Title" class="form-label fw-medium">
                        <span class="material-icons align-middle me-1 text-danger" style="font-size: 18px;">title</span>
                        Initiative Title <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Initiative.Title" placeholder="Enter a brief title for the initiative" class="form-control form-control-lg" />
                    <span asp-validation-for="Initiative.Title" class="text-danger small"></span>
                </div>

                <!-- Co-Authors Section -->
                <div class="mb-4">
                    <label class="form-label fw-medium">
                        <span class="material-icons align-middle me-1 text-success" style="font-size: 18px;">group</span>
                        Co-Authors
                    </label>
                    
                    <!-- Existing Co-Authors -->
                    @if (Model.ExistingCoAuthors != null && Model.ExistingCoAuthors.Any())
                    {
                        <div id="existingCoAuthors" class="d-flex flex-wrap gap-2 mb-3">
                            @foreach (var coAuthor in Model.ExistingCoAuthors)
                            {
                                <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3 py-2 d-flex align-items-center gap-2" data-author-id="@coAuthor.AuthorId">
                                    <span class="material-icons" style="font-size: 16px;">person</span>
                                    @(coAuthor.Author?.FullName ?? coAuthor.Author?.Email)
                                    @if (Model.IsOwner)
                                    {
                                        <button type="button" class="btn-close btn-close-sm" style="font-size: 10px;" 
                                                onclick="removeExistingCoAuthor(@Model.Initiative.Id, @coAuthor.AuthorId, this)"></button>
                                    }
                                </span>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted small mb-2">No co-authors yet.</p>
                    }
                    
                    <!-- Add New Co-Authors (Owner only) -->
                    @if (Model.IsOwner)
                    {
                        <div class="input-group mb-2">
                            <span class="input-group-text bg-light"><span class="material-icons" style="font-size: 18px;">search</span></span>
                            <input type="text" id="coAuthorSearch" class="form-control" placeholder="Search by name or email to add..." autocomplete="off" />
                        </div>
                        <div id="searchResults" class="list-group mb-2" style="max-height: 200px; overflow-y: auto;"></div>
                        <div id="selectedCoAuthors" class="d-flex flex-wrap gap-2"></div>
                        <div id="coAuthorInputs"></div>
                    }
                </div>

                <!-- Description -->
                <div class="mb-4">
                    <label asp-for="Initiative.Description" class="form-label fw-medium">
                        <span class="material-icons align-middle me-1 text-secondary" style="font-size: 18px;">notes</span>
                        Detailed Description
                    </label>
                    <textarea asp-for="Initiative.Description" placeholder="Describe the initiative, objectives, and expected outcomes..." rows="6" class="form-control"></textarea>
                    <span asp-validation-for="Initiative.Description" class="text-danger small"></span>
                </div>

                <!-- Existing Attachments -->
                @if (Model.ExistingFiles != null && Model.ExistingFiles.Any())
                {
                    <div class="mb-4">
                        <label class="form-label fw-medium">
                            <span class="material-icons align-middle me-1 text-success" style="font-size: 18px;">folder</span>
                            Current Attachments (@Model.ExistingFiles.Count)
                        </label>
                        <div class="existing-files-list">
                            @foreach (var file in Model.ExistingFiles)
                            {
                                var iconClass = file.FileType switch {
                                    ".pdf" => "picture_as_pdf",
                                    ".doc" or ".docx" => "description",
                                    ".xls" or ".xlsx" => "table_chart",
                                    ".ppt" or ".pptx" => "slideshow",
                                    _ => "insert_drive_file"
                                };
                                var iconColor = file.FileType switch {
                                    ".pdf" => "#dc3545",
                                    ".doc" or ".docx" => "#0d6efd",
                                    ".xls" or ".xlsx" => "#198754",
                                    ".ppt" or ".pptx" => "#fd7e14",
                                    _ => "#6c757d"
                                };
                                <div class="file-item existing">
                                    <div class="file-info">
                                        <div class="file-icon" style="background: @(iconColor)20;">
                                            <span class="material-icons" style="color: @iconColor; font-size: 20px;">@iconClass</span>
                                        </div>
                                        <div>
                                            <div class="fw-medium text-truncate" style="max-width: 280px;">@file.FileName</div>
                                            <small class="text-muted">@((file.FileSize / 1024.0).ToString("F1")) KB • @file.UploadDate.ToString("MMM dd, yyyy")</small>
                                        </div>
                                    </div>
                                    <div class="d-flex gap-1">
                                        <a href="@file.FilePath" target="_blank" class="btn btn-sm btn-outline-primary" title="View">
                                            <span class="material-icons" style="font-size: 16px;">visibility</span>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" title="Delete"
                                                onclick="if(confirm('Delete this file?')) { document.getElementById('delete-file-@file.Id').submit(); }">
                                            <span class="material-icons" style="font-size: 16px;">delete</span>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    
                    @foreach (var file in Model.ExistingFiles)
                    {
                        <form id="delete-file-@file.Id" asp-area="Author" asp-controller="Initiative" asp-action="DeleteFile" asp-route-fileId="@file.Id" asp-route-initiativeId="@Model.Initiative.Id" method="post" style="display:none;">
                            @Html.AntiForgeryToken()
                        </form>
                    }
                }

                <!-- Modern Drag & Drop File Upload -->
                <div class="mb-4">
                    <label class="form-label fw-medium">
                        <span class="material-icons align-middle me-1 text-primary" style="font-size: 18px;">attach_file</span>
                        Add New Attachments
                    </label>
                    
                    <!-- File input - use CSS to hide instead of hidden attribute for better browser compatibility -->
                    <input type="file" id="ProjectFiles" name="ProjectFiles" multiple accept=".pdf,.doc,.docx,.xls,.xlsx,.ppt,.pptx" 
                           style="position: absolute; width: 1px; height: 1px; padding: 0; margin: -1px; overflow: hidden; clip: rect(0,0,0,0); border: 0;" />
                    
                    <!-- Drop Zone -->
                    <div id="dropZone" class="drop-zone border border-2 border-dashed rounded-4 p-4 text-center bg-light position-relative" 
                         style="border-color: #dee2e6 !important; cursor: pointer; transition: all 0.3s ease;">
                        <div class="drop-zone-content">
                            <span class="material-icons text-primary mb-2" style="font-size: 36px;">cloud_upload</span>
                            <h6 class="fw-bold text-dark mb-1">Drag and drop files here</h6>
                            <p class="text-muted mb-2 small">or click to upload</p>
                            <span class="badge bg-light text-muted border" style="font-size: 11px;">PDF, Word, Excel, PowerPoint • Max 10MB</span>
                        </div>
                    </div>
                    
                    <!-- New File List -->
                    <div id="fileList" class="mt-3"></div>
                </div>

                <!-- Action Buttons -->
                <hr class="my-4">
                <div class="d-flex justify-content-between align-items-center">
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <span class="material-icons align-middle me-1" style="font-size: 18px;">arrow_back</span> Back
                    </a>
                    <div class="d-flex gap-3">
                        <button type="submit" name="action" value="Save" class="btn btn-outline-primary rounded-pill px-4">
                            <span class="material-icons align-middle me-1" style="font-size: 18px;">save</span> Save Changes
                        </button>
                        <button type="submit" name="action" value="Submit" class="btn btn-primary rounded-pill px-4 fw-bold shadow">
                            <span class="material-icons align-middle me-1" style="font-size: 18px;">send</span> Submit Initiative
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>

</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <style>
        .drop-zone.drag-over {
            border-color: #0d6efd !important;
            background-color: #e7f1ff !important;
        }
        .drop-zone:hover {
            border-color: #0d6efd !important;
            background-color: #f8f9fa !important;
        }
        .file-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 12px 16px;
            background: #fff;
            border: 1px solid #e9ecef;
            border-radius: 10px;
            margin-bottom: 8px;
            transition: all 0.2s ease;
        }
        .file-item:hover {
            background: #f8f9fa;
            border-color: #dee2e6;
        }
        .file-item.existing {
            background: #f8fff8;
            border-color: #d4edda;
        }
        .file-item .file-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }
        .file-item .file-icon {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 8px;
        }
        .file-item .remove-btn {
            background: none;
            border: none;
            color: #dc3545;
            cursor: pointer;
            padding: 4px;
            border-radius: 50%;
            transition: all 0.2s;
        }
        .file-item .remove-btn:hover {
            background: #fee2e2;
        }
    </style>
    
    <!-- Dependent Dropdown AJAX Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const yearSelect = document.getElementById('AcademicYearId');
            const categorySelect = document.getElementById('CategoryId');
            const currentCategoryId = '@Model.Initiative.CategoryId';
            
            if (yearSelect && categorySelect) {
                yearSelect.addEventListener('change', function() {
                    const yearId = this.value;
                    
                    // Clear and disable category while loading
                    categorySelect.innerHTML = '<option value="">-- Loading categories... --</option>';
                    categorySelect.disabled = true;
                    
                    if (!yearId) {
                        categorySelect.innerHTML = '<option value="">-- Select academic year first --</option>';
                        categorySelect.disabled = false;
                        return;
                    }
                    
                    // AJAX call to get categories
                    fetch('/Author/Initiative/GetCategoriesByYear?yearId=' + yearId)
                        .then(response => response.json())
                        .then(data => {
                            categorySelect.innerHTML = '<option value="">-- Select category --</option>';
                            if (data.length === 0) {
                                categorySelect.innerHTML = '<option value="">-- No open periods in this year --</option>';
                            } else {
                                data.forEach(item => {
                                    const option = document.createElement('option');
                                    option.value = item.value;
                                    option.textContent = item.text;
                                    // Preserve selection if editing
                                    if (item.value.toString() === currentCategoryId) {
                                        option.selected = true;
                                    }
                                    categorySelect.appendChild(option);
                                });
                            }
                            categorySelect.disabled = false;
                        })
                        .catch(error => {
                            console.error('Error loading categories:', error);
                            categorySelect.innerHTML = '<option value="">-- Error loading categories --</option>';
                            categorySelect.disabled = false;
                        });
                });
            }
        });
    </script>
    
    <!-- File Upload Script -->
    <script>
        (function() {
            const dropZone = document.getElementById('dropZone');
            const fileInput = document.getElementById('ProjectFiles');
            const fileList = document.getElementById('fileList');
            let selectedFiles = [];
            
            // Click to open file dialog
            dropZone.addEventListener('click', () => fileInput.click());
            
            // Drag events
            dropZone.addEventListener('dragover', (e) => {
                e.preventDefault();
                dropZone.classList.add('drag-over');
            });
            
            dropZone.addEventListener('dragleave', (e) => {
                e.preventDefault();
                dropZone.classList.remove('drag-over');
            });
            
            dropZone.addEventListener('drop', (e) => {
                e.preventDefault();
                dropZone.classList.remove('drag-over');
                const files = Array.from(e.dataTransfer.files);
                addFiles(files);
            });
            
            // File input change (for click to upload)
            fileInput.addEventListener('change', (e) => {
                const files = Array.from(e.target.files);
                addFiles(files);
            });
            
            function addFiles(files) {
                const allowedTypes = ['.pdf', '.doc', '.docx', '.xls', '.xlsx', '.ppt', '.pptx'];
                
                files.forEach(file => {
                    const ext = '.' + file.name.split('.').pop().toLowerCase();
                    if (allowedTypes.includes(ext)) {
                        // Avoid duplicates
                        if (!selectedFiles.some(f => f.name === file.name && f.size === file.size)) {
                            selectedFiles.push(file);
                        }
                    } else {
                        alert(`File "${file.name}" is not a supported format.`);
                    }
                });
                
                updateFileList();
                syncWithInput();
            }
            
            function removeFile(index) {
                selectedFiles.splice(index, 1);
                updateFileList();
                syncWithInput();
            }
            
            function updateFileList() {
                if (selectedFiles.length === 0) {
                    fileList.innerHTML = '';
                    return;
                }
                
                let html = '<div class="small text-muted mb-2"><span class="badge bg-primary me-1">' + selectedFiles.length + '</span> new file(s) to upload</div>';
                
                selectedFiles.forEach((file, index) => {
                    const size = formatFileSize(file.size);
                    const ext = file.name.split('.').pop().toLowerCase();
                    const iconClass = getFileIcon(ext);
                    const iconColor = getFileColor(ext);
                    
                    html += `
                        <div class="file-item">
                            <div class="file-info">
                                <div class="file-icon" style="background: ${iconColor}20;">
                                    <span class="material-icons" style="color: ${iconColor}; font-size: 20px;">${iconClass}</span>
                                </div>
                                <div>
                                    <div class="fw-medium text-truncate" style="max-width: 280px;">${file.name}</div>
                                    <small class="text-muted">${size} • <span class="text-primary">New</span></small>
                                </div>
                            </div>
                            <button type="button" class="remove-btn" onclick="window.removeFileAtIndex(${index})" title="Remove">
                                <span class="material-icons" style="font-size: 20px;">close</span>
                            </button>
                        </div>
                    `;
                });
                
                fileList.innerHTML = html;
            }
            
            function syncWithInput() {
                const dt = new DataTransfer();
                selectedFiles.forEach(file => dt.items.add(file));
                fileInput.files = dt.files;
            }
            
            function formatFileSize(bytes) {
                if (bytes < 1024) return bytes + ' B';
                if (bytes < 1048576) return (bytes / 1024).toFixed(1) + ' KB';
                return (bytes / 1048576).toFixed(1) + ' MB';
            }
            
            function getFileIcon(ext) {
                switch(ext) {
                    case 'pdf': return 'picture_as_pdf';
                    case 'doc': case 'docx': return 'description';
                    case 'xls': case 'xlsx': return 'table_chart';
                    case 'ppt': case 'pptx': return 'slideshow';
                    default: return 'insert_drive_file';
                }
            }
            
            function getFileColor(ext) {
                switch(ext) {
                    case 'pdf': return '#dc3545';
                    case 'doc': case 'docx': return '#0d6efd';
                    case 'xls': case 'xlsx': return '#198754';
                    case 'ppt': case 'pptx': return '#fd7e14';
                    default: return '#6c757d';
                }
            }
            
            // Expose removeFile to global scope for onclick
            window.removeFileAtIndex = removeFile;
            
            // CRITICAL: Sync files on form submit
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    // Ensure files are synced right before submit
                    syncWithInput();
                    console.log('[FileUpload] Form submitting with ' + selectedFiles.length + ' files');
                    console.log('[FileUpload] Input files count: ' + fileInput.files.length);
                    if (fileInput.files.length > 0) {
                        console.log('[FileUpload] Files to upload:', Array.from(fileInput.files).map(f => f.name));
                    }
                });
            }
        })();
    </script>
    
    <!-- Co-Author Management Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const initiativeId = @Model.Initiative.Id;
            const coAuthorSearch = document.getElementById('coAuthorSearch');
            const searchResults = document.getElementById('searchResults');
            const selectedCoAuthors = document.getElementById('selectedCoAuthors');
            const coAuthorInputs = document.getElementById('coAuthorInputs');
            let selectedAuthors = [];
            let searchTimeout;

            // Remove existing co-author via AJAX
            window.removeExistingCoAuthor = function(initId, userId, btn) {
                if (!confirm('Remove this co-author?')) return;
                
                fetch('/Author/Initiative/RemoveCoAuthor', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: `initiativeId=${initId}&userId=${userId}`
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        btn.closest('span').remove();
                    } else {
                        alert(data.message || 'Error removing co-author');
                    }
                })
                .catch(err => {
                    console.error(err);
                    alert('Error removing co-author');
                });
            };

            if (coAuthorSearch) {
                coAuthorSearch.addEventListener('input', function() {
                    clearTimeout(searchTimeout);
                    const term = this.value.trim();
                    
                    if (term.length < 2) {
                        searchResults.innerHTML = '';
                        return;
                    }

                    searchTimeout = setTimeout(() => {
                        fetch(`/Author/Initiative/SearchUsers?term=${encodeURIComponent(term)}`)
                            .then(res => res.json())
                            .then(users => {
                                searchResults.innerHTML = '';
                                users.forEach(user => {
                                    if (!selectedAuthors.find(a => a.id === user.id)) {
                                        const item = document.createElement('button');
                                        item.type = 'button';
                                        item.className = 'list-group-item list-group-item-action d-flex justify-content-between align-items-center';
                                        item.innerHTML = `
                                            <div>
                                                <strong>${user.text}</strong>
                                                <small class="text-muted d-block">${user.email} • ${user.department}</small>
                                            </div>
                                            <span class="material-icons text-success">add_circle</span>
                                        `;
                                        item.onclick = () => addCoAuthorViaAjax(user);
                                        searchResults.appendChild(item);
                                    }
                                });
                                if (users.length === 0) {
                                    searchResults.innerHTML = '<div class="list-group-item text-muted">No users found</div>';
                                }
                            });
                    }, 300);
                });
            }

            function addCoAuthorViaAjax(user) {
                fetch('/Author/Initiative/AddCoAuthor', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: `initiativeId=${initiativeId}&userId=${user.id}`
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        // Add badge to existing section
                        const existingDiv = document.getElementById('existingCoAuthors') || createExistingDiv();
                        const badge = document.createElement('span');
                        badge.className = 'badge bg-success bg-opacity-10 text-success rounded-pill px-3 py-2 d-flex align-items-center gap-2';
                        badge.dataset.authorId = user.id;
                        badge.innerHTML = `
                            <span class="material-icons" style="font-size: 16px;">person</span>
                            ${user.text}
                            <button type="button" class="btn-close btn-close-sm" style="font-size: 10px;" 
                                    onclick="removeExistingCoAuthor(${initiativeId}, ${user.id}, this)"></button>
                        `;
                        existingDiv.appendChild(badge);
                        coAuthorSearch.value = '';
                        searchResults.innerHTML = '';
                    } else {
                        alert(data.message || 'Error adding co-author');
                    }
                })
                .catch(err => {
                    console.error(err);
                    alert('Error adding co-author');
                });
            }

            function createExistingDiv() {
                const div = document.createElement('div');
                div.id = 'existingCoAuthors';
                div.className = 'd-flex flex-wrap gap-2 mb-3';
                coAuthorSearch.parentElement.before(div);
                return div;
            }
        });
    </script>
}

