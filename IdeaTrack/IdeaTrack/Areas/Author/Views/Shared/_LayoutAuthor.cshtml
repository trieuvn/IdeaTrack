@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IdeaTrack</title>
    <link rel="icon" type="image/x-icon" href="/icons/logo-uef.ico">
    
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Google Fonts + Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- CSS gi?ng trang Home -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/page.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/guildline.css" asp-append-version="true" />
    
    <!-- Additional Author CSS -->
    <link href="@Url.Content("/css/dailyreport.css")" rel="stylesheet" />
</head>

<body>

    <!-- HEADER - Gi?ng h?t trang Home -->
    <header class="app-header">
        <div class="app-title">
            <img src="/images/logo-uef.png" height="32" class="me-2" />
            <span>IdeaTrack</span>
        </div>
    </header>

    <div class="app-layout">

        <!-- SIDEBAR - C?u trúc gi?ng Home -->
        <aside class="sidebar">

            <!-- LOGIN -->
            <div class="sidebar-header">
                <div class="login-box">
                    <partial name="_LoginPartial" />
                </div>
            </div>

            <!-- MENU - Author specific pages -->
            <div class="sidebar-nav">

                <a asp-area="Author" asp-controller="Dashboard" asp-action="Index"
                   class="@(currentAction == "Index" ? "active" : "")">
                    <span class="material-icons">dashboard</span> Dashboard
                </a>

                <a asp-area="Author" asp-controller="Initiative" asp-action="Create"
                   class="@(currentAction == "Create" ? "active" : "")">
                    <span class="material-icons">add_circle</span> T?o sáng ki?n
                </a>

                <a asp-area="Author" asp-controller="Initiative" asp-action="History"
                   class="@(currentAction == "History" ? "active" : "")">
                    <span class="material-icons">history</span> L?ch s?
                </a>

                <a asp-area="Author" asp-controller="HomePage" asp-action="DailyReport"
                   class="@(currentAction == "DailyReport" ? "active" : "")">
                    <span class="material-icons">insights</span> Th?ng kê
                </a>

                <a asp-area="Author" asp-controller="HomePage" asp-action="Setting"
                   class="@(currentAction == "Setting" ? "active" : "")">
                    <span class="material-icons">settings</span> Cài d?t
                </a>

                <hr class="my-2" />

                <a asp-controller="Home" asp-action="Index" asp-area="">
                    <span class="material-icons">home</span> V? trang ch?
                </a>

            </div>
        </aside>

        <!-- MAIN -->
        <main class="main-content">
            @RenderBody()
        </main>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Author specific scripts -->
    <script>
        // File upload handler
        document.addEventListener("DOMContentLoaded", function () {
            const fileInput = document.getElementById("fileInput");
            const fileList = document.getElementById("fileList");
            const uploadHint = document.getElementById("uploadHint");

            if (!fileInput) return;

            fileInput.addEventListener("change", function () {
                if (this.files.length === 0) return;
                if (uploadHint) uploadHint.style.display = "none";
                if (fileList) {
                    fileList.innerHTML = "";
                    Array.from(this.files).forEach(file => {
                        const div = document.createElement("div");
                        div.className = "file";
                        div.innerHTML = `<i class="bi bi-file-earmark"></i><span>${file.name}</span>`;
                        fileList.appendChild(div);
                    });
                }
            });
        });

        // Filter tabs
        const tabs = document.querySelectorAll('.filter-tabs .tab');
        const cards = document.querySelectorAll('.history-card');
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                const status = tab.textContent.trim().toLowerCase();
                cards.forEach(card => {
                    card.style.display = status === 'all status' || card.classList.contains(status) ? 'flex' : 'none';
                });
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
