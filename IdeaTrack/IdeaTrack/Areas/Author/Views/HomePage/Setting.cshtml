<div class="settings-container">

    <h1 class="page-title">Settings</h1>
    <p class="page-subtitle">Control your account and system preferences</p>

    <div class="settings-panel">
        <div class="settings-item">
            <div class="item-left">
                <i class="bi bi-person-circle"></i>
                <div class="item-info">
                    <h3>Personal Information</h3>
                    <p>View and update your personal details</p>
                </div>
            </div>
            <button class="btn-action">Edit</button>
        </div>
        <div class="settings-item">
            <div class="item-left">
                <i class="bi bi-lock-fill"></i>
                <div class="item-info">
                    <h3>Change Password</h3>
                    <p>Update your account password</p>
                </div>
            </div>
            <button class="btn-action">Update</button>
        </div>

        <div class="settings-item">
            <div class="item-left">
                <i class="bi bi-bell-fill"></i>
                <div class="item-info">
                    <h3>Notifications</h3>
                    <p>Enable system notifications</p>
                </div>
            </div>
            <label class="switch">
                <input type="checkbox" checked>
                <span class="slider"></span>
            </label>
        </div>

        <div class="settings-item">
            <div class="item-left">
                <i class="bi bi-envelope-fill"></i>
                <div class="item-info">
                    <h3>Email Alerts</h3>
                    <p>Receive updates via email</p>
                </div>
            </div>
            <label class="switch">
                <input type="checkbox">
                <span class="slider"></span>
            </label>
        </div>
        <a href="/Author/HomePage/Files" class="settings-item" style="text-decoration:none;">
            <div class="item-left">
                <i class="bi bi-hdd-fill"></i>
                <div class="item-info">
                    <h3>File Storage</h3>
                    <p>Files are stored on the system server</p>
                </div>
            </div>
            <span class="badge completed">Local</span>
        </a>


        <div class="settings-item danger">
            <div class="item-left">
                <i class="bi bi-box-arrow-right"></i>
                <div class="item-info">
                    <h3>Logout</h3>
                    <p>Sign out from this device</p>
                </div>
            </div>
            <button class="btn-danger">Logout</button>
        </div>

    </div>
</div>
