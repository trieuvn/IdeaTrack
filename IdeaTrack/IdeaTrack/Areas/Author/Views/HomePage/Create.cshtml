@model IdeaTrack.Areas.Author.ViewModels.InitiativeCreateViewModel

<main class="container py-5">

    <!-- Hero Section -->
    <section class="hero-section text-white p-5 mb-5 shadow-lg">
        <div class="row">
            <div class="col-lg-8">
                <span class="badge rounded-pill bg-warning text-dark mb-3 p-2 px-3">
                    <span class="material-icons align-middle me-1" style="font-size: 16px;">add_circle</span> T?O SÁNG KI?N M?I
                </span>
                <h1 class="fw-bold display-5 mb-3">Ð? xu?t Sáng ki?n</h1>
                <p class="fs-5 mb-0 opacity-75" style="max-width: 600px; line-height: 1.6;">
                    Ði?n thông tin bên du?i d? d? xu?t sáng ki?n m?i. Sáng ki?n s? du?c g?i d?n h?i d?ng d? xét duy?t.
                </p>
            </div>
        </div>
    </section>

    <!-- Form Card -->
    <div class="card card-custom shadow-sm" style="border-radius: 15px;">
        <div class="card-header bg-white border-0 pt-4 px-4">
            <h5 class="fw-bold mb-0">
                <span class="material-icons align-middle me-2 text-danger">description</span>
                Information sáng ki?n
            </h5>
        </div>
        <div class="card-body p-4">
            <form asp-controller="Initiative" asp-action="Create" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <!-- Row 1: Category & Department -->
                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Initiative.CategoryId" class="form-label fw-medium">
                            <span class="material-icons align-middle me-1 text-success" style="font-size: 18px;">category</span>
                            Danh m?c <span class="text-danger">*</span>
                        </label>
                        <select asp-for="Initiative.CategoryId" asp-items="Model.Categories" class="form-select">
                            <option value="">-- Ch?n danh m?c --</option>
                        </select>
                        <span asp-validation-for="Initiative.CategoryId" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Initiative.DepartmentId" class="form-label fw-medium">
                            <span class="material-icons align-middle me-1 text-info" style="font-size: 18px;">business</span>
                            Khoa/Phòng ban <span class="text-danger">*</span>
                        </label>
                        <select asp-for="Initiative.DepartmentId" asp-items="Model.Departments" class="form-select">
                            <option value="">-- Ch?n khoa/phòng ban --</option>
                        </select>
                        <span asp-validation-for="Initiative.DepartmentId" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Row 2: Budget -->
                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Initiative.Budget" class="form-label fw-medium">
                            <span class="material-icons align-middle me-1 text-warning" style="font-size: 18px;">payments</span>
                            Ngân sách (VND)
                        </label>
                        <input asp-for="Initiative.Budget" type="number" step="1000" placeholder="Nh?p s? ti?n d? ki?n" class="form-control" />
                        <span asp-validation-for="Initiative.Budget" class="text-danger small"></span>
                    </div>
                    @if (Model.ActivePeriodId.HasValue)
                    {
                        <div class="col-md-6">
                            <label class="form-label fw-medium">
                                <span class="material-icons align-middle me-1 text-primary" style="font-size: 18px;">event</span>
                                Ð?t sáng ki?n
                            </label>
                            <div class="form-control bg-light">
                                <span class="badge bg-success me-2">Ðang m?</span> Ð?t hi?n t?i
                            </div>
                            <small class="text-muted">Sáng ki?n s? du?c n?p vào d?t dang m? khi b?n nh?n "N?p sáng ki?n"</small>
                        </div>
                    }
                </div>

                <!-- Title -->
                <div class="mb-4">
                    <label asp-for="Initiative.Title" class="form-label fw-medium">
                        <span class="material-icons align-middle me-1 text-danger" style="font-size: 18px;">title</span>
                        Tiêu d? sáng ki?n <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Initiative.Title" placeholder="Nh?p tiêu d? mô t? ng?n g?n cho sáng ki?n" class="form-control form-control-lg" />
                    <span asp-validation-for="Initiative.Title" class="text-danger small"></span>
                </div>

                <!-- Description -->
                <div class="mb-4">
                    <label asp-for="Initiative.Description" class="form-label fw-medium">
                        <span class="material-icons align-middle me-1 text-secondary" style="font-size: 18px;">notes</span>
                        Mô t? chi ti?t
                    </label>
                    <textarea asp-for="Initiative.Description" placeholder="Mô t? d?y d? v? sáng ki?n, m?c tiêu, và k?t qu? mong d?i..." rows="6" class="form-control"></textarea>
                    <span asp-validation-for="Initiative.Description" class="text-danger small"></span>
                </div>


                <!-- File Upload Section -->
                <div class="mb-4">
                    <label class="form-label fw-medium">
                        <span class="material-icons align-middle me-1 text-primary" style="font-size: 18px;">attach_file</span>
                        Tài li?u dính kèm
                    </label>
                    
                    <div class="border border-2 border-dashed rounded-3 p-5 text-center bg-light" style="cursor: pointer;" onclick="document.getElementById('fileInput').click()">
                        <span class="material-icons text-muted mb-2" style="font-size: 48px;">cloud_upload</span>
                        <p class="mb-1 fw-medium">Nh?p d? t?i lên ho?c kéo th? file</p>
                        <p class="text-muted small mb-0">PDF, DOCX, XLSX (T?i da 10MB)</p>
                        <div id="fileList" class="mt-3"></div>
                    </div>
                    <input type="file" id="fileInput" name="UploadedFiles" accept=".pdf,.docx,.xlsx,.jpg,.jpeg,.png" multiple hidden>
                </div>

                <!-- Action Buttons -->
                <hr class="my-4">
                <div class="d-flex justify-content-between align-items-center">
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <span class="material-icons align-middle me-1" style="font-size: 18px;">arrow_back</span> H?y b?
                    </a>
                    <div class="d-flex gap-3">
                        <button type="submit" name="action" value="Draft" class="btn btn-outline-primary rounded-pill px-4">
                            <span class="material-icons align-middle me-1" style="font-size: 18px;">save</span> Luu nháp
                        </button>
                        <button type="submit" name="action" value="Submit" class="btn btn-primary rounded-pill px-4 fw-bold shadow">
                            <span class="material-icons align-middle me-1" style="font-size: 18px;">send</span> N?p sáng ki?n
                        </button>
                    </div>
                </div>

            </form>
        </div>
    </div>

</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
