@model IdeaTrack.Areas.Author.ViewModels.DailyReportViewModel
@{
    ViewData["Title"] = "Statistics";
}

<div class="container-fluid pb-3">

    <!-- Hero Section -->
    <section class="hero-section text-white p-4 mb-3 shadow" style="border-radius: 15px; min-height: auto;">
        <div class="row">
            <div class="col-12">
                <span class="badge rounded-pill bg-info bg-opacity-25 text-info mb-2 px-3 py-1" style="border: 1px solid rgba(0,255,255,0.2)">
                    <span class="material-icons align-middle me-1" style="font-size: 14px;">insights</span> INITIATIVE STATISTICS
                </span>

                <h1 class="fw-bold display-6 mb-2">Innovation Metrics</h1>

                <p class="mb-0 opacity-75">
                    Track and analyze your initiatives. View distribution by category and approval progress.
                </p>
            </div>
        </div>
    </section>

    <!-- Filter Section -->
    <section class="card border-0 shadow-sm mb-4" style="border-radius: 15px;">
        <div class="card-body p-4">
            <form method="get" asp-action="DailyReport" class="row g-3">
                <!-- Status -->
                <div class="col-md-3">
                    <label class="form-label fw-bold text-muted small">Status</label>
                    <select name="status" asp-items="Model.Statuses" class="form-select rounded-pill">
                        <option value="">-- All Statuses --</option>
                    </select>
                </div>
                
                <!-- Category -->
                <div class="col-md-3">
                    <label class="form-label fw-bold text-muted small">Category</label>
                    <select name="categoryId" asp-items="Model.Categories" class="form-select rounded-pill">
                        <option value="">-- All Categories --</option>
                    </select>
                </div>

                <!-- Year -->
                <div class="col-md-3">
                    <label class="form-label fw-bold text-muted small">Year</label>
                    <select name="yearId" asp-items="Model.Years" class="form-select rounded-pill" onchange="this.form.submit()">
                        <option value="">-- All Years --</option>
                    </select>
                </div>

                <!-- Period -->
                <div class="col-md-3">
                    <label class="form-label fw-bold text-muted small">Period</label>
                    <select name="periodId" asp-items="Model.Periods" class="form-select rounded-pill">
                        <option value="">-- All Periods --</option>
                    </select>
                </div>

                <!-- Date Range From -->
                <div class="col-md-3">
                    <label class="form-label fw-bold text-muted small">From Date</label>
                    <input type="date" name="fromDate" value="@(Model.FromDate?.ToString("yyyy-MM-dd"))" class="form-control rounded-pill" />
                </div>

                <!-- Date Range To -->
                <div class="col-md-3">
                    <label class="form-label fw-bold text-muted small">To Date</label>
                    <input type="date" name="toDate" value="@(Model.ToDate?.ToString("yyyy-MM-dd"))" class="form-control rounded-pill" />
                </div>

                <!-- Buttons -->
                <div class="col-md-6 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-danger rounded-pill px-4 flex-grow-1">
                        <span class="material-icons align-middle me-1" style="font-size: 18px;">filter_alt</span> Apply Filter
                    </button>
                    
                    <a asp-action="DailyReport" class="btn btn-outline-secondary rounded-pill px-3" title="Clear Filters">
                        <span class="material-icons align-middle" style="font-size: 18px;">refresh</span>
                    </a>

                    <button type="submit" asp-action="ExportDailyReport" class="btn btn-outline-danger rounded-pill px-4 flex-grow-1">
                        <span class="material-icons align-middle me-1" style="font-size: 18px;">file_download</span> Export Report
                    </button>
                </div>
            </form>
        </div>
    </section>

    <!-- Stats Cards -->
    <section class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card card-custom h-100 p-3 shadow-sm" style="border-radius: 15px;">
                <div class="icon-circle bg-light-blue mb-2">
                    <span class="material-icons text-primary">inventory_2</span>
                </div>
                <h2 class="fw-bold text-primary mb-1">@Model.TotalInitiatives</h2>
                <p class="text-muted small mb-0">Total Initiatives</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-custom h-100 p-3 shadow-sm" style="border-radius: 15px;">
                <div class="icon-circle bg-light-green mb-2">
                    <span class="material-icons text-success">check_circle</span>
                </div>
                <h2 class="fw-bold text-success mb-1">@Model.MonthlyApproved</h2>
                <p class="text-muted small mb-0">Approved (this month)</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-custom h-100 p-3 shadow-sm" style="border-radius: 15px;">
                <div class="icon-circle bg-light-yellow mb-2">
                    <span class="material-icons text-warning">pending</span>
                </div>
                <h2 class="fw-bold text-warning mb-1">@Model.MonthlyPending</h2>
                <p class="text-muted small mb-0">Pending Approval</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card card-custom h-100 p-3 shadow-sm" style="border-radius: 15px;">
                <div class="icon-circle mb-2">
                    <span class="material-icons" style="color: #be123c;">calendar_month</span>
                </div>
                <h2 class="fw-bold mb-1" style="color: #be123c;">@Model.MonthlyTotal</h2>
                <p class="text-muted small mb-0">This Month</p>
            </div>
        </div>
    </section>

    <!-- Category Distribution -->
    <section class="mb-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="d-flex align-items-center">
                <span class="material-icons text-danger me-2">pie_chart</span>
                <h4 class="fw-bold mb-0">Distribution by Category</h4>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100" style="border-radius: 15px;">
                    <div class="card-body p-3">
                        @if (Model.CategoryDistributions.Any())
                        {
                            @foreach (var cat in Model.CategoryDistributions)
                            {
                                <div class="d-flex justify-content-between align-items-center mb-2 p-2 rounded-3" style="background-color: #f8fafc;">
                                    <div class="d-flex align-items-center gap-2">
                                        <div style="width: 10px; height: 10px; border-radius: 50%; background-color: @cat.Color;"></div>
                                        <span class="fw-medium small">@cat.CategoryName</span>
                                    </div>
                                    <div class="text-end">
                                        <span class="fw-bold small">@cat.Count</span>
                                        <span class="text-muted small ms-1">(@cat.Percentage%)</span>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <span class="material-icons text-muted" style="font-size: 36px;">donut_large</span>
                                <p class="text-muted mt-2 small">No distribution data</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card border-0 shadow-sm h-100" style="border-radius: 15px;">
                    <div class="card-body p-3 d-flex align-items-center justify-content-center">
                        <div class="text-center">
                            <div class="position-relative d-inline-block">
                                <div class="rounded-circle d-flex align-items-center justify-content-center" 
                                     style="width: 150px; height: 150px; background: conic-gradient(
                                          @if(Model.CategoryDistributions.Any())
                                          {
                                              var gradientParts = new List<string>();
                                              decimal currentDeg = 0;
                                              foreach(var cat in Model.CategoryDistributions)
                                              {
                                                  var nextDeg = currentDeg + (cat.Percentage * 3.6m);
                                                  gradientParts.Add($"{cat.Color} {currentDeg}deg {nextDeg}deg");
                                                  currentDeg = nextDeg;
                                              }
                                              @string.Join(", ", gradientParts)
                                          }
                                          else
                                          {
                                              @:#e5e7eb 0deg 360deg
                                          }
                                     );">
                                    <div class="rounded-circle bg-white d-flex flex-column align-items-center justify-content-center" 
                                         style="width: 100px; height: 100px;">
                                        <span class="fs-3 fw-bold text-primary">@Model.TotalInitiatives</span>
                                        <span class="text-muted small" style="font-size: 10px;">Total</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Recent Submissions -->
    <section class="mb-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="d-flex align-items-center">
                <span class="material-icons text-danger me-2">history</span>
                <h4 class="fw-bold mb-0">Recent Initiatives (7 days)</h4>
            </div>
            <a asp-controller="Initiative" asp-action="History" class="text-danger text-decoration-none fw-bold small">
                View All <span class="material-icons fs-6 align-middle">arrow_forward</span>
            </a>
        </div>

        <div class="card border-0 shadow-sm" style="border-radius: 15px;">
            <div class="card-body p-0">
                @if (Model.RecentSubmissions.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="border-0 ps-4">Title</th>
                                    <th class="border-0">Time</th>
                                    <th class="border-0">Status</th>
                                    <th class="border-0 pe-4 text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.RecentSubmissions)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center gap-3">
                                                <div class="rounded-circle d-flex align-items-center justify-content-center fw-bold text-white" 
                                                     style="width:40px;height:40px;background:linear-gradient(135deg, #b91c1c, #991b1b);">
                                                    @(item.Title?.Length > 0 ? item.Title.Substring(0, 1).ToUpper() : "S")
                                                </div>
                                                <span class="fw-medium">@item.Title</span>
                                            </div>
                                        </td>
                                        <td class="text-muted">@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            @switch (item.Status)
                                            {
                                                case IdeaTrack.Models.InitiativeStatus.Draft:
                                                    <span class="badge bg-secondary">Draft</span>
                                                    break;
                                                case IdeaTrack.Models.InitiativeStatus.Pending:
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                    break;
                                                case IdeaTrack.Models.InitiativeStatus.Approved:
                                                    <span class="badge bg-success">Approved</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-info">@item.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td class="pe-4 text-end">
                                            <a asp-controller="Initiative" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                                <span class="material-icons" style="font-size: 16px;">visibility</span>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <span class="material-icons text-muted" style="font-size: 64px;">inbox</span>
                        <p class="text-muted mt-2">No initiatives in the past 7 days</p>
                        <a asp-controller="Initiative" asp-action="Create" class="btn btn-danger rounded-pill px-4">
                            <span class="material-icons align-middle me-1">add</span> Create New Initiative
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>

</div>
