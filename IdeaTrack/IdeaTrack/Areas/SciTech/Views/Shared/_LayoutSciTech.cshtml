@using IdeaTrack.Data
@using Microsoft.EntityFrameworkCore
@inject ApplicationDbContext _context
@{
    var currentArea = ViewContext.RouteData.Values["area"]?.ToString();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

    // Fetch data for global dropdowns
    var currentYear = _context.AcademicYears.FirstOrDefault(y => y.IsCurrent);
    var allYears = _context.AcademicYears.OrderByDescending(y => y.Name).ToList();
    var activePeriod = _context.InitiativePeriods.FirstOrDefault(p => p.IsActive);
    var allPeriods = _context.InitiativePeriods
        .Include(p => p.AcademicYear)
        .OrderByDescending(p => p.StartDate)
        .Take(10) // Limit for dropdown
        .ToList();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - PKHCN Portal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <style>
        :root {
            --brand-red: #b91c1c;
            --brand-red-dark: #991b1b;
            --brand-bg-subtle: #fef2f2;
        }
        body { font-family: 'Inter', sans-serif; background-color: #f8fafc; }
        .font-display { font-family: 'Space Grotesk', sans-serif; }
        
        /* Sidebar */
        .sidebar { width: 260px; min-height: 100vh; background: white; border-right: 1px solid #e2e8f0; }
        .sidebar-header { padding: 24px; border-bottom: 1px solid #f1f5f9; }
        .nav-link { 
            color: #475569; padding: 12px 16px; margin: 4px 12px; border-radius: 8px; font-weight: 500; transition: all 0.2s; 
        }
        .nav-link:hover { background-color: #f1f5f9; color: #1e293b; }
        .nav-link.active { background-color: var(--brand-bg-subtle); color: var(--brand-red); font-weight: 600; }
        .nav-link i { width: 24px; text-align: center; margin-right: 8px; font-size: 1.1em; }
        
        /* Header */
        .topbar { background: white; height: 72px; padding: 0 32px; border-bottom: 1px solid #e2e8f0; }
        .global-filter { background: #f8fafc; border: 1px solid #e2e8f0; padding: 6px 12px; border-radius: 8px; }
        
        /* Content */
        .main-content { padding: 32px; }
    </style>
    @RenderSection("Styles", required: false)
</head>

<body>
    <div class="d-flex min-vh-100">

        <!-- SIDEBAR -->
        <aside class="sidebar d-flex flex-column flex-shrink-0 fixed-start">
            <div class="sidebar-header">
                <div class="d-flex align-items-center gap-2 text-decoration-none">
                    <div class="bg-danger text-white rounded p-1 d-flex">
                        <i class="fa-solid fa-flask"></i>
                    </div>
                    <div>
                        <h6 class="mb-0 fw-bold font-display text-dark">IdeaTrack</h6>
                        <small class="text-muted" style="font-size: 0.75rem;">SciTech Dept.</small>
                    </div>
                </div>
            </div>

            <nav class="nav flex-column mt-3 flex-grow-1">
                
                <!-- RETURN TO HOME -->
                <a class="nav-link" href="/" style="color: #fbbf24; font-weight: 600;">
                    <i class="fa-solid fa-house"></i> Return to Home
                </a>
                <hr class="my-2 mx-3">
                
                <!-- OVERVIEW -->
                <small class="text-uppercase text-muted fw-bold px-4 mb-2 mt-2" style="font-size: 0.7rem;">Overview</small>
                <a class="nav-link @(currentController == "Council" && currentAction == "Index" ? "active" : "")"
                   href="@Url.Action("Index", "Council", new { area = "SciTech" })">
                    <i class="fa-solid fa-chart-pie"></i> Dashboard
                </a>
                <a class="nav-link @(currentController == "Port" && currentAction == "Index" ? "active" : "")"
                   href="@Url.Action("Index", "Port", new { area = "SciTech" })">
                    <i class="fa-solid fa-list-check"></i> Initiatives
                </a>

                <!-- MANAGEMENT -->
                <small class="text-uppercase text-muted fw-bold px-4 mb-2 mt-4" style="font-size: 0.7rem;">Management</small>
                
                <a class="nav-link @(currentController == "Configuration" && currentAction == "AcademicYear" ? "active" : "")"
                   href="@Url.Action("AcademicYear", "Configuration", new { area = "SciTech" })">
                    <i class="fa-regular fa-calendar"></i> Academic Years
                </a>
                
                <a class="nav-link @(currentController == "Configuration" && currentAction == "InitiativePeriod" ? "active" : "")"
                   href="@Url.Action("InitiativePeriod", "Configuration", new { area = "SciTech" })">
                    <i class="fa-solid fa-timeline"></i> Periods
                </a>
                
                <a class="nav-link @(currentController == "Configuration" && currentAction == "InitiativeCategory" ? "active" : "")"
                   href="@Url.Action("InitiativeCategory", "Configuration", new { area = "SciTech" })">
                    <i class="fa-solid fa-layer-group"></i> Categories
                </a>

                <!-- EVALUATION -->
                <small class="text-uppercase text-muted fw-bold px-4 mb-2 mt-4" style="font-size: 0.7rem;">Evaluation</small>
                
                <a class="nav-link @(currentController == "Template" ? "active" : "")"
                   href="@Url.Action("Index", "Template", new { area = "SciTech" })">
                    <i class="fa-solid fa-clipboard-check"></i> Scoring Criteria
                </a>
                
                <a class="nav-link @(currentController == "Council" && currentAction == "ManageBoards" ? "active" : "")"
                   href="@Url.Action("ManageBoards", "Council", new { area = "SciTech" })">
                    <i class="fa-solid fa-people-group"></i> Councils
                </a>
                
                <!-- SYSTEM -->
                <small class="text-uppercase text-muted fw-bold px-4 mb-2 mt-4" style="font-size: 0.7rem;">System</small>
                
                <a class="nav-link @(currentController == "User" ? "active" : "")"
                   href="@Url.Action("Index", "User", new { area = "SciTech" })">
                    <i class="fa-solid fa-users-gear"></i> Users
                </a>

            </nav>
            
            <div class="p-3 border-top">
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="sidebarLogoutForm">
                    <button type="submit" class="nav-link border-0 bg-transparent w-100 text-start text-danger">
                        <i class="fa-solid fa-arrow-right-from-bracket"></i> Sign Out
                    </button>
                </form>
            </div>
        </aside>

        <!-- MAIN CONTENT -->
        <div class="flex-grow-1 d-flex flex-column" style="margin-left: 0;">
            
            <!-- TOPBAR -->
            <header class="topbar d-flex align-items-center justify-content-between sticky-top z-3">
                <div class="d-flex align-items-center gap-3">
                    <!-- Global Filters -->
                    <div class="global-filter d-flex align-items-center gap-2">
                        <i class="fa-regular fa-calendar text-muted"></i>
                        <select class="form-select border-0 bg-transparent py-0 fw-bold text-dark" style="font-size: 0.9rem; width: auto; box-shadow: none;" onchange="window.location.reload()">
                           @if(currentYear != null)
                           {
                               <option selected>@currentYear.Name (Current)</option>
                           }
                           else
                           {
                               <option selected>Select Year</option>
                           }
                           @foreach(var y in allYears.Where(x => !x.IsCurrent)) {
                               <option>@y.Name</option>
                           }
                        </select>
                    </div>

                    <div class="global-filter d-flex align-items-center gap-2">
                        <i class="fa-solid fa-timeline text-muted"></i>
                        <select class="form-select border-0 bg-transparent py-0 fw-bold text-dark" style="font-size: 0.9rem; width: auto; box-shadow: none;" onchange="window.location.reload()">
                           @if(activePeriod != null)
                           {
                               <option selected>@activePeriod.Name (Active)</option>
                           }
                           else 
                           {
                               <option selected>All Periods</option>
                           }
                            @foreach(var p in allPeriods.Where(x => !x.IsActive)) {
                               <option>@p.Name</option>
                           }
                        </select>
                    </div>
                </div>

                <div class="d-flex align-items-center gap-4">
                    <button class="btn btn-light rounded-circle position-relative">
                        <i class="fa-regular fa-bell"></i>
                        <span class="position-absolute top-0 start-100 translate-middle p-1 bg-danger border border-light rounded-circle"></span>
                    </button>
                    
                    <!-- User Dropdown -->
                    <div class="dropdown">
                        <div class="d-flex align-items-center gap-3" data-bs-toggle="dropdown" aria-expanded="false" style="cursor: pointer">
                             <div class="text-end d-none d-md-block">
                                <div class="fw-bold small text-dark">Administrator</div>
                                <small class="text-muted d-block" style="font-size: 0.7rem;">SciTech Dept</small>
                            </div>
                            <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center fw-bold" style="width: 36px; height: 36px;">
                                A
                            </div>
                        </div>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 mt-2">
                            <li>
                                <a class="dropdown-item py-2" asp-area="" asp-controller="User" asp-action="Profile">
                                    <i class="fas fa-user-circle me-2 text-muted"></i>User Profile
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="m-0">
                                    <button type="submit" class="dropdown-item py-2 text-danger">
                                        <i class="fas fa-sign-out-alt me-2"></i>Sign Out
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- PAGE CONTENT -->
            <main class="main-content flex-grow-1 bg-light">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
