@{
    var currentArea = ViewContext.RouteData.Values["area"]?.ToString();
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - PKHCN Portal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <style>
        .gradient-text {
            background: linear-gradient(90deg, #ff7e5f, #feb47b);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
        }

            .gradient-text i {
                background: linear-gradient(90deg, #ff7e5f, #feb47b);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        .sidebar {
            width: 260px;
            min-height: 100vh;
            flex-shrink: 0;
        }

            /* Nav link */
            .sidebar .nav-link {
                color: #334155;
                padding: 10px 12px;
                border-radius: 8px;
                font-weight: 500;
            }

                .sidebar .nav-link:hover {
                    background-color: #f1f5f9;
                }

                /* Active */
                .sidebar .nav-link.active {
                    background-color: #e0e7ff;
                    color: #1d4ed8;
                }

            /* Section title */
            .sidebar .nav-section {
                font-weight: 600;
                letter-spacing: .04em;
            }

        /* Icon fix */
        .material-symbols-outlined {
            line-height: 1;
        }

        /* ===============================
           PAGE HEADER
        ================================ */
        .page-title {
            font-weight: 700;
            letter-spacing: -0.3px;
        }

        .page-subtitle {
            color: #64748b;
            font-size: 0.95rem;
        }

        /* ===============================
           CARD
        ================================ */
        .card {
            border-radius: 14px;
            border: 1px solid #e5e7eb;
        }

            .card.shadow-sm {
                box-shadow: 0 4px 12px rgba(15, 23, 42, 0.05);
            }

        /* ===============================
           TOOLBAR
        ================================ */
        .input-group-text {
            background-color: #ffffff;
            border-right: 0;
        }

        .input-group .form-control,
        .input-group .form-select {
            border-left: 0;
        }

        .form-control::placeholder {
            color: #94a3b8;
            font-size: 0.9rem;
        }

        /* ===============================
           TABLE
        ================================ */
        .table {
            font-size: 0.92rem;
        }

            .table thead th {
                font-size: 0.75rem;
                text-transform: uppercase;
                letter-spacing: 0.04em;
                color: #64748b;
                background-color: #f8fafc;
                border-bottom: 1px solid #e5e7eb;
            }

            .table tbody tr {
                transition: background-color 0.15s ease;
            }

        .table-hover tbody tr:hover {
            background-color: #f1f5f9;
        }

        .table td {
            vertical-align: middle;
            color: #0f172a;
        }

        /* Monospace ID */
        .text-monospace {
            font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
            font-size: 0.85rem;
        }

        /* ===============================
           BADGE (STATUS)
        ================================ */
        .badge {
            font-weight: 500;
            border-radius: 999px;
            font-size: 0.75rem;

        }

            .badge i {
                font-size: 0.85rem;
                vertical-align: -1px;
            }

        /* ===============================
           ACTION BUTTONS
        ================================ */
        .btn-group-sm .btn {
            padding: 4px 8px;
        }

        .btn-outline-secondary {
            color: #475569;
            border-color: #cbd5e1;
        }

            .btn-outline-secondary:hover {
                background-color: #e2e8f0;
            }

        .btn-outline-primary:hover {
            background-color: #2563eb;
            color: #ffffff;
        }

        .topbar {
            top: 0;
            left: 0;
            right: 0;
            height: 127px;
            z-index: 1000;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>

<body class="bg-light">
    <div class="d-flex vh-100">

        <aside class="sidebar bg-white border-end d-flex flex-column">

            <!-- HEADER -->
            <div class="sidebar-header px-3 py-4 border-bottom">
                <h5 class="fw-bold text-primary mb-0">PKHCN Portal</h5>
                <small class="text-muted">Quản lý khoa học</small>
            </div>

            <!-- NAV -->
            <nav class="nav flex-column px-2 mt-2 flex-grow-1">

                <!-- Tổng quan -->
                <a class="nav-link d-flex align-items-center gap-2 @(currentArea == "SciTech" && currentController == "Port" && currentAction == "Index" ? "active" : "")"
                   href="@Url.Action("Index", "Port", new { area = "SciTech" })">
                    <i class="fas fa-tachometer-alt"></i>
                    <span>Tổng quan</span>
                </a>

                <div class="nav-section text-uppercase text-muted small px-2 mt-3 mb-1">
                    Quản lý đề tài
                </div>

                <!-- Đề tài đang thực hiện -->
                <a class="nav-link d-flex align-items-center gap-2 @(currentArea == "SciTech" && currentController == "Port" && currentAction == "Result" ? "active" : "")"
                   href="@Url.Action("Result", "Port", new { area = "SciTech" })">
                    <i class="fas fa-tasks"></i>
                    <span>Đề tài đang thực hiện</span>
                </a>

                <!-- Theo dõi hồ sơ -->
                <a class="nav-link d-flex align-items-center gap-2 @(currentArea == "SciTech" && currentController == "Port" && currentAction == "Follow" ? "active" : "")"
                   href="@Url.Action("Follow", "Port", new { area = "SciTech" })">
                    <i class="fas fa-eye"></i>
                    <span>Theo dõi hồ sơ</span>
                </a>

                <!-- Quy định -->
                <a class="nav-link d-flex align-items-center gap-2 @(currentArea == "SciTech" && currentController == "Port" && currentAction == "Rule" ? "active" : "")"
                   href="@Url.Action("Template", "Port", new { area = "SciTech" })">
                    <i class="fas fa-gavel"></i>
                    <span>Bộ tiêu chí</span>
                </a>

                <!-- Hồ sơ cá nhân -->
                <a class="nav-link d-flex align-items-center gap-2 @(currentArea == "SciTech" && currentController == "Port" && currentAction == "Profile" ? "active" : "")"
                   href="@Url.Action("Profile", "Port", new { area = "SciTech" })">
                    <i class="fas fa-user"></i>
                    <span>Hồ sơ cá nhân</span>
                </a>

                <!-- Người dùng -->
                <a class="nav-link d-flex align-items-center gap-2 @(currentArea == "SciTech" && currentController == "Port" && currentAction == "User" ? "active" : "")"
                   href="@Url.Action("User", "Port", new { area = "SciTech" })">
                    <i class="fas fa-users"></i>
                    <span>Người dùng</span>
                </a>

                <!-- Hội đồng -->
                <a class="nav-link d-flex align-items-center gap-2 @(currentArea == "SciTech" && currentController == "Port" && currentAction == "Councils" ? "active" : "")"
                   href="@Url.Action("Councils", "Port", new { area = "SciTech" })">
                    <i class="fas fa-users"></i> <!-- đổi icon -->
                    <span>Hội đồng</span>
                </a>


            </nav>


        </aside>


        <!-- MAIN -->
        <div class="flex-grow-1 d-flex flex-column">

            <!-- TOPBAR -->
            <header class="topbar bg-white border-bottom px-4 py-3 d-flex justify-content-between" >
                <div></div>
                <div class="d-flex align-items-center gap-3">
                    <span class="material-symbols-outlined">notifications</span>
                    <div class="text-end">
                        <div class="fw-semibold">Nguyễn Văn Admin</div>
                        <small class="text-muted">Chuyên viên PKHCN</small>
                    </div>
                </div>
            </header>

            <!-- CONTENT -->
            <main class="flex-grow-1 p-4 overflow-auto">
                @RenderBody()
            </main>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
