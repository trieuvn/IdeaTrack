@model IdeaTrack.Areas.SciTech.Models.PeriodCreateEditVM

<main class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                    <span class="material-icons align-middle me-1" style="font-size: 18px;">arrow_back</span> Back
                </a>
            </div>

            <div class="card card-custom shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <span class="material-icons align-middle me-2">edit</span>
                        Edit Initiative Period
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-8">
                                <label asp-for="Name" class="form-label fw-medium">
                                    Period Name <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="e.g., Period 1 - 2024-2025" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="AcademicYearId" class="form-label fw-medium">
                                    Academic Year <span class="text-danger">*</span>
                                </label>
                                <select asp-for="AcademicYearId" asp-items="Model.AcademicYears" class="form-select">
                                    <option value="">-- Select --</option>
                                </select>
                                <span asp-validation-for="AcademicYearId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label fw-medium">
                                    Start Date <span class="text-danger">*</span>
                                </label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EndDate" class="form-label fw-medium">
                                    End Date <span class="text-danger">*</span>
                                </label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="IsActive" class="form-check-label fw-medium">
                                    This period is open
                                </label>
                            </div>
                            <small class="text-muted">When opening a new period, other periods will be automatically closed.</small>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4">
                                <span class="material-icons align-middle me-1" style="font-size: 18px;">save</span> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
