@model IdeaTrack.Areas.SciTech.Models.PeriodListVM

<main class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                <span class="material-icons align-middle me-2 text-primary">date_range</span>
                Quản lý Đợt Sáng kiến
            </h2>
            <p class="text-muted mb-0">Mở/đóng đợt tiếp nhận và quản lý cấu hình theo đợt</p>
        </div>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4">
            <span class="material-icons align-middle me-1" style="font-size: 18px;">add</span> Tạo đợt mới
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card card-custom shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Tên đợt</th>
                            <th>Năm học</th>
                            <th>Thời gian</th>
                            <th class="text-center">Danh mục</th>
                            <th class="text-center">Sáng kiến</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-end pe-4">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items.Any())
                        {
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <strong>@item.Name</strong>
                                    </td>
                                    <td>@item.AcademicYearName</td>
                                    <td>
                                        <small>@item.StartDate.ToString("dd/MM/yyyy") - @item.EndDate.ToString("dd/MM/yyyy")</small>
                                    </td>
                                    <td class="text-center">
                                        <a asp-controller="Category" asp-action="Index" asp-route-periodId="@item.Id" class="badge bg-info text-decoration-none">
                                            @item.CategoryCount danh mục
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary">@item.InitiativeCount</span>
                                    </td>
                                    <td class="text-center">
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Đang mở</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-outline-secondary text-muted border">Đóng</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group">
                                            <form asp-action="ToggleActive" asp-route-id="@item.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                @if (item.IsActive)
                                                {
                                                    <button type="submit" class="btn btn-sm btn-outline-warning">
                                                        <span class="material-icons" style="font-size: 16px;">lock</span>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button type="submit" class="btn btn-sm btn-outline-success">
                                                        <span class="material-icons" style="font-size: 16px;">lock_open</span>
                                                    </button>
                                                }
                                            </form>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                <span class="material-icons" style="font-size: 16px;">edit</span>
                                            </a>
                                            @if (item.InitiativeCount == 0)
                                            {
                                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                                      onsubmit="return confirm('Bạn có chắc muốn xóa đợt này?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <span class="material-icons" style="font-size: 16px;">delete</span>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">
                                    <span class="material-icons mb-2" style="font-size: 48px;">inbox</span>
                                    <p class="mb-0">Chưa có đợt sáng kiến nào.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</main>
