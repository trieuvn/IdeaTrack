@model IdeaTrack.Areas.SciTech.Models.CategoryCreateEditVM

<main class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-4">
                <a asp-action="Index" asp-route-periodId="@Model.PeriodId" class="btn btn-outline-secondary rounded-pill">
                    <span class="material-icons align-middle me-1" style="font-size: 18px;">arrow_back</span> Quay lại
                </a>
            </div>

            <div class="card card-custom shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <span class="material-icons align-middle me-2">edit</span>
                        Chỉnh sửa Danh mục
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-8">
                                <label asp-for="Name" class="form-label fw-medium">
                                    Tên danh mục <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="PeriodId" class="form-label fw-medium">
                                    Thuộc đợt <span class="text-danger">*</span>
                                </label>
                                <select asp-for="PeriodId" asp-items="Model.Periods" class="form-select">
                                    <option value="">-- Chọn đợt --</option>
                                </select>
                                <span asp-validation-for="PeriodId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-medium">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                        </div>

                        <hr class="my-4" />

                        <div class="alert alert-warning">
                            <strong><span class="material-icons align-middle me-1" style="font-size: 18px;">warning</span> Lưu ý:</strong>
                            Thay đổi Hội đồng/Tiêu chí chỉ ảnh hưởng đến các sáng kiến mới được duyệt. Các sáng kiến đã phân công sẽ giữ nguyên.
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="BoardId" class="form-label fw-medium">
                                    <span class="material-icons align-middle me-1 text-info" style="font-size: 18px;">groups</span>
                                    Hội đồng chấm
                                </label>
                                <select asp-for="BoardId" asp-items="Model.Boards" class="form-select">
                                    <option value="">-- Chưa cấu hình --</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="TemplateId" class="form-label fw-medium">
                                    <span class="material-icons align-middle me-1 text-warning" style="font-size: 18px;">grade</span>
                                    Bộ tiêu chí chấm
                                </label>
                                <select asp-for="TemplateId" asp-items="Model.Templates" class="form-select">
                                    <option value="">-- Chưa cấu hình --</option>
                                </select>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" asp-route-periodId="@Model.PeriodId" class="btn btn-outline-secondary">Hủy</a>
                            <button type="submit" class="btn btn-primary px-4">
                                <span class="material-icons align-middle me-1" style="font-size: 18px;">save</span> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
