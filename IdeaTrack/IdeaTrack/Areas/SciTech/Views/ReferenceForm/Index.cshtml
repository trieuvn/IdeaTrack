@model IdeaTrack.Areas.SciTech.Models.ReferenceFormListVM
@{
    ViewData["Title"] = "Reference Forms";
    Layout = "~/Areas/SciTech/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-file-alt me-2"></i>Reference Forms
            </h4>
            <a asp-action="Create" asp-route-periodId="@Model.SelectedPeriodId" class="btn btn-light btn-sm">
                <i class="fas fa-plus me-1"></i>Add Form
            </a>
        </div>
        
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Period Filter -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <label class="form-label">Filter by initiative period:</label>
                    <select id="periodFilter" class="form-select">
                        <option value="">-- All periods --</option>
                        @foreach (var period in Model.Periods)
                        {
                            <option value="@period.Value" selected="@(Model.SelectedPeriodId?.ToString() == period.Value)">
                                @period.Text
                            </option>
                        }
                    </select>
                </div>
            </div>

            @if (Model.SelectedPeriodName != null)
            {
                <div class="alert alert-info mb-3">
                    <i class="fas fa-info-circle me-1"></i>
                    Showing forms for period: <strong>@Model.SelectedPeriodName</strong>
                </div>
            }

            @if (Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 5%">#</th>
                                <th style="width: 25%">Form Name</th>
                                <th style="width: 20%">Initiative Period</th>
                                <th style="width: 10%">File Type</th>
                                <th style="width: 15%">Upload Date</th>
                                <th style="width: 15%">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var index = 1; }
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@(index++)</td>
                                    <td>
                                        <div class="fw-semibold">@item.FormName</div>
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <small class="text-muted">@item.Description</small>
                                        }
                                    </td>
                                    <td>@item.PeriodName</td>
                                    <td>
                                        <span class="badge bg-secondary text-uppercase">
                                            @(item.FileType ?? "N/A")
                                        </span>
                                    </td>
                                    <td>
                                        <small>@item.UploadedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@item.FileUrl" target="_blank" class="btn btn-outline-success" title="Download">
                                                <i class="fas fa-download"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                                  onsubmit="return confirm('Are you sure you want to delete this form?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-folder-open fa-4x text-muted mb-3"></i>
                    <p class="text-muted">No forms available</p>
                    <a asp-action="Create" asp-route-periodId="@Model.SelectedPeriodId" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Add First Form
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('periodFilter').addEventListener('change', function() {
            var periodId = this.value;
            if (periodId) {
                window.location.href = '@Url.Action("Index")' + '?periodId=' + periodId;
            } else {
                window.location.href = '@Url.Action("Index")';
            }
        });
    </script>
}
