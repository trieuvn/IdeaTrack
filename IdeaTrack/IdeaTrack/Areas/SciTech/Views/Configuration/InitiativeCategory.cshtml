@model List<IdeaTrack.Models.InitiativeCategory>

@{
    ViewData["Title"] = "Categories";
    var periods = ViewBag.Periods as List<IdeaTrack.Models.InitiativePeriod>;
    var selectedPeriodId = (int?)ViewBag.SelectedPeriodId;
    var currentPeriod = periods?.FirstOrDefault(p => p.Id == selectedPeriodId);
    
    var boards = ViewBag.Boards as List<IdeaTrack.Models.Board>;
    var templates = ViewBag.Templates as List<IdeaTrack.Models.EvaluationTemplate>;
}

<style>
    .font-display { font-family: 'Space Grotesk', sans-serif; }
    .btn-brand { background-color: #b91c1c; color: white; border: none; }
    .btn-brand:hover { background-color: #991b1b; color: white; }
    .category-row { transition: background-color 0.1s; }
    .category-row:hover { background-color: #fef2f2; }
</style>

<div class="container-fluid px-5 py-4">
    <!-- Header -->
    <div class="row align-items-end mb-4 gy-3">
        <div class="col-md-6">
            <h1 class="font-display fw-bold mb-1" style="font-size: 2.5rem;">Categories</h1>
            <p class="text-secondary mb-0">Define which categories are available for initiatives in this period.</p>
        </div>
        <div class="col-md-6">
            <div class="d-flex flex-wrap justify-content-md-end gap-2 align-items-center">
                <div class="bg-white border rounded-3 p-1 px-2 shadow-sm d-flex align-items-center">
                    <span class="small text-muted text-uppercase fw-bold me-2">Period:</span>
                    <select class="form-select border-0 py-1 bg-transparent fw-bold" style="width:auto; min-width:200px" onchange="window.location.href='?periodId='+this.value">
                        @if (periods != null)
                        {
                            foreach (var p in periods)
                            {
                                <!option value="@p.Id" @(p.Id == selectedPeriodId ? "selected" : "")>
                                    @p.Name [@p.AcademicYear.Name]
                                </!option>
                            }
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Toolbar -->
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-3 d-flex justify-content-between align-items-center">
            <div class="d-flex gap-2">
                 <button class="btn btn-outline-secondary rounded-3" data-bs-toggle="modal" data-bs-target="#cloneModal">
                    <i class="fa-solid fa-copy me-2"></i> Clone from Previous Period
                </button>
            </div>
            <button class="btn btn-brand px-4 rounded-3" data-bs-toggle="modal" data-bs-target="#createCatModal">
                <i class="fa-solid fa-plus me-2"></i> New Category
            </button>
        </div>
    </div>

    <!-- List -->
    <div class="card border-0 shadow-sm rounded-4">
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3">Category Name</th>
                        <th>Assigned Board</th>
                        <th>Scoring Template</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr class="category-row">
                                <td class="ps-4">
                                    <span class="fw-bold text-dark">@item.Name</span>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <small class="d-block text-muted">@item.Description</small>
                                    }
                                </td>
                                <td>
                                    @if(item.Board != null)
                                    {
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="bg-primary-subtle text-primary rounded-circle p-1 d-flex justify-content-center align-items-center" style="width:24px;height:24px">
                                                <i class="fa-solid fa-users fa-xs"></i>
                                            </div>
                                            <span class="small fw-semibold">@item.Board.BoardName</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">Unassigned</span>
                                    }
                                </td>
                                <td>
                                    @if(item.Template != null)
                                    {
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="bg-info-subtle text-info-emphasis rounded-circle p-1 d-flex justify-content-center align-items-center" style="width:24px;height:24px">
                                                <i class="fa-solid fa-clipboard-check fa-xs"></i>
                                            </div>
                                            <span class="small fw-semibold">@item.Template.TemplateName</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Missing Template</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a href="@Url.Action("CategoryDetails", "Configuration", new { area = "SciTech", id = item.Id })" class="btn btn-sm btn-light text-primary rounded-circle me-1" title="Xem chi tiết">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                    <button class="btn btn-sm btn-light text-danger rounded-circle" onclick="deleteCat(@item.Id)" title="Xóa">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-5 text-muted">No categories in this period. Use "Clone" to copy from last year.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createCatModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content rounded-4 border-0">
            <div class="modal-header border-0">
                <h5 class="modal-title fw-bold">Add Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body pt-0">
                <form asp-action="CreateCategory" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="periodId" value="@selectedPeriodId" />
                    
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Name</label>
                        <input type="text" name="name" class="form-control" required placeholder="e.g. Software Development">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-muted">Assign Board (Council)</label>
                        <select name="boardId" class="form-select">
                            <option value="">-- Select Board --</option>
                            @if(boards != null)
                            {
                                foreach(var b in boards) { <option value="@b.Id">@b.BoardName</option> }
                            }
                        </select>
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label small fw-bold text-muted">Assign Scoring Template</label>
                        <select name="templateId" class="form-select">
                            <option value="">-- Select Template --</option>
                            @if(templates != null)
                            {
                                foreach(var t in templates) { <option value="@t.Id">@t.TemplateName</option> }
                            }
                        </select>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-brand">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Clone Modal -->
<div class="modal fade" id="cloneModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content rounded-4 border-0">
             <div class="modal-header border-0 bg-light rounded-top-4">
                <h6 class="modal-title fw-bold text-uppercase text-secondary">
                    <i class="fa-solid fa-copy me-2"></i> Clone Configuration
                </h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="small text-muted">This will copy all categories (along with their Board & Template configuration) from the selected source period into the current period: <strong>@currentPeriod?.Name</strong>.</p>
                
                <form asp-action="CloneCategories" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="targetPeriodId" value="@selectedPeriodId" />
                    
                    <div class="mb-4">
                        <label class="form-label fw-bold small text-muted">Source Period</label>
                        <select name="sourcePeriodId" class="form-select form-select-lg">
                            @if(periods != null)
                            {
                                foreach(var p in periods)
                                {
                                    if(p.Id != selectedPeriodId)
                                    {
                                        <option value="@p.Id">@p.Name [@p.AcademicYear.Name]</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark btn-lg">
                            Clone Now
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function deleteCat(id) {
        if(!confirm('Delete this category?')) return;
        fetch('/SciTech/Configuration/DeleteCategory', {
             method: 'POST',
             headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: 'id=' + id
        }).then(res => res.ok ? window.location.reload() : res.text().then(alert));
    }
</script>
