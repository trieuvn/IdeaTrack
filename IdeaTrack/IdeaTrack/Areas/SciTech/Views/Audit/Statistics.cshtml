@model IdeaTrack.Areas.SciTech.Controllers.AuditStatistics
@{
    ViewData["Title"] = "Thống kê nhật ký";
    Layout = "~/Areas/SciTech/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">
            <i class="fas fa-chart-bar text-primary me-2"></i>Thống Kê Nhật Ký
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-primary text-white">
                <div class="card-body text-center">
                    <h3 class="display-4 fw-bold">@Model.TotalLogs.ToString("N0")</h3>
                    <p class="mb-0">Tổng bản ghi</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-success text-white">
                <div class="card-body text-center">
                    <h3 class="display-4 fw-bold">@Model.LogsToday.ToString("N0")</h3>
                    <p class="mb-0">Hôm nay</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-info text-white">
                <div class="card-body text-center">
                    <h3 class="display-4 fw-bold">@Model.LogsThisWeek.ToString("N0")</h3>
                    <p class="mb-0">Tuần này</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Top Actions -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="fas fa-bolt me-1"></i>Top Hành động</h6>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        @foreach (var action in Model.TopActions)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @action.Action
                                <span class="badge bg-primary rounded-pill">@action.Count</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Top Tables -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="fas fa-database me-1"></i>Top Bảng dữ liệu</h6>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        @foreach (var table in Model.TopTables)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <code>@table.Table</code>
                                <span class="badge bg-success rounded-pill">@table.Count</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Top Users -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="fas fa-users me-1"></i>Người dùng tích cực</h6>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        @foreach (var user in Model.TopUsers)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <a asp-action="Index" asp-route-userId="@user.UserId">@user.UserName</a>
                                <span class="badge bg-info rounded-pill">@user.Count</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
