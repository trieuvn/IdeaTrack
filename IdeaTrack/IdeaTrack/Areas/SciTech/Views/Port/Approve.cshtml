@using IdeaTrack.Models
@using IdeaTrack.Areas.SciTech.Models
@model InitiativeDetailVM

@{

    string statusBadgeClass = Model.Status switch
    {
        InitiativeStatus.Draft => "bg-secondary text-white",
        InitiativeStatus.Pending => "bg-warning text-dark",
        InitiativeStatus.Faculty_Approved => "bg-info text-white",
        InitiativeStatus.Evaluating => "bg-primary text-white",
        InitiativeStatus.Revision_Required => "bg-warning-subtle text-warning",
        InitiativeStatus.Approved => "bg-success text-white",
        InitiativeStatus.Rejected => "bg-danger text-white",
        _ => "bg-secondary text-white"
    };

    // Department Icons
    string deptIcon = "fa-building";
    string deptColor = "text-secondary";

    switch (Model.Code)
    {
        case "IT":
            deptIcon = "fa-laptop-code"; deptColor = "text-primary";
            break;
        case "DTVT":
            deptIcon = "fa-bolt"; deptColor = "text-danger";
            break;
        case "KHCN":
            deptIcon = "fa-microscope"; deptColor = "text-success";
            break;
        case "CK":
            deptIcon = "fa-cogs"; deptColor = "text-warning";
            break;
        case "XD":
            deptIcon = "fa-hard-hat"; deptColor = "text-secondary";
            break;
        case "MT":
            deptIcon = "fa-leaf"; deptColor = "text-info";
            break;
        case "KT":
            deptIcon = "fa-chart-line"; deptColor = "text-primary";
            break;
        case "QTKD":
            deptIcon = "fa-briefcase"; deptColor = "text-primary";
            break;
        case "LUAT":
            deptIcon = "fa-gavel"; deptColor = "text-warning";
            break;
        case "NN":
            deptIcon = "fa-seedling"; deptColor = "text-success";
            break;
        default:
            deptIcon = "fa-building"; deptColor = "text-secondary";
            break;
    }
}

<!-- HEADER -->
<div class="d-flex flex-column flex-lg-row justify-content-between gap-3 mb-4">
    <div>
        <span class="badge @statusBadgeClass mb-2">
            <i class="fas fa-hourglass-half me-1"></i>@Model.Status
        </span>

        <h2 class="fw-bold mb-1">
            <i class="fas fa-lightbulb me-2 text-warning"></i>@Model.Title
        </h2>

        <div class="d-flex align-items-center gap-3">
            <p class="text-muted mb-0">
                <i class="fas fa-fingerprint me-1 text-info"></i>Code: <sof>@Model.InitiativeCode</sof>
                <span class="mx-2">|</span>
                <i class="fas fa-calendar-alt me-1 text-secondary"></i>@Model.SubmittedDate.ToString("dd/MM/yyyy")
            </p>

             <!-- TOGGLE HIDE INFO -->
            <form asp-action="ToggleHidePersonalInfo" asp-controller="Port" asp-area="SciTech" asp-route-id="@Model.Id" method="post" style="display:inline;">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-sm @(Model.HidePersonalInfo ? "btn-dark" : "btn-outline-dark")" title="@(Model.HidePersonalInfo ? "Reveal Author Info" : "Hide Author Info")">
                    <i class="fa-solid @(Model.HidePersonalInfo ? "fa-eye-slash" : "fa-eye") me-1"></i>
                    @(Model.HidePersonalInfo ? "Info Hidden" : "Info Visible")
                </button>
            </form>
        </div>
    </div>
</div>

<div class="row g-4">

    <!-- LEFT COLUMN -->
    <div class="col-lg-8">

        <!-- INFO CARD -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light fw-bold">
                <i class="fas fa-info-circle me-1 text-primary"></i>General Information
            </div>

            <div class="card-body row g-4">
                <div class="col-md-6">
                    <small class="text-muted">Proposer</small>
                    <p class="fw-semibold mb-0"><i class="fas fa-user-tie me-1 text-primary"></i>@Model.ProposerName</p>
                </div>

                <div class="col-md-6">
                    <small class="text-muted">Department</small>
                    <p class="fw-semibold mb-0"><i class="fas @deptIcon @deptColor me-1"></i>@Model.DepartmentName</p>
                </div>

                @if (Model.CoAuthors != null && Model.CoAuthors.Any())
                {
                    <div class="col-12">
                        <small class="text-muted">Co-authors</small>
                        <div class="d-flex flex-wrap gap-2 mt-1">
                            @foreach (var coauthor in Model.CoAuthors)
                            {
                                <span class="badge bg-light text-dark border">
                                    <i class="fas fa-user me-1"></i>@coauthor.FullName
                                </span>
                            }
                        </div>
                    </div>
                }

                <div class="col-md-6">
                    <small class="text-muted">Category</small>
                    <p class="fw-semibold mb-0"><i class="fas fa-brain me-1 text-info"></i>@Model.Category</p>
                </div>

                <div class="col-md-6">
                    <small class="text-muted d-block mb-1">Submitted Date</small>
                    <p class="fw-semibold mb-0 gradient-text">
                        <i class="fas fa-clock me-1"></i>
                        @Model.SubmittedDate.ToString("dd/MM/yyyy")
                    </p>
                </div>
                <div class="col-md-6">
                    <small class="text-muted">Proposed Budget</small>
                    <p class="fw-bold text-primary fs-5 mb-0"><i class="fas fa-dollar-sign me-1 text-success"></i>@Model.Budget.ToString("N0") VND</p>
                </div>

            </div>
        </div>

        <!-- DESCRIPTION & FILES -->
        <div class="accordion mb-4" id="abstractAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button fw-semibold" data-bs-toggle="collapse" data-bs-target="#description">
                        <i class="fas fa-align-left me-2 text-primary"></i>Description
                    </button>
                </h2>
                <div id="description" class="accordion-collapse collapse show">
                    <div class="accordion-body text-muted">
                        @Model.Description
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed fw-semibold" data-bs-toggle="collapse" data-bs-target="#files">
                        <i class="fas fa-paperclip me-2 text-secondary"></i>Attachments
                    </button>
                </h2>
                <div id="files" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <ul class="list-group list-group-flush">
                            @foreach (var file in Model.Files ?? new List<InitiativeFileVM>())
                            {
                                var ext = System.IO.Path.GetExtension(file.FileName).ToLower();
                                string iconClass = "fa-file";
                                string textColor = "text-secondary";

                                switch (ext)
                                {
                                    case ".pdf":
                                        iconClass = "fa-file-pdf";
                                        textColor = "text-danger";
                                        break;
                                    case ".xlsx":
                                    case ".xls":
                                        iconClass = "fa-file-excel";
                                        textColor = "text-success";
                                        break;
                                    case ".docx":
                                    case ".doc":
                                        iconClass = "fa-file-word";
                                        textColor = "text-primary";
                                        break;
                                    case ".pptx":
                                    case ".ppt":
                                        iconClass = "fa-file-powerpoint";
                                        textColor = "text-warning";
                                        break;
                                }

                                <li class="list-group-item d-flex justify-content-between align-items-center py-2">
                                    <!-- Tên file với icon -->
                                    <div class="d-flex align-items-center">
                                        <i class="fas @iconClass @textColor me-2"></i>
                                        <span class="text-truncate" style="max-width: 250px;">@file.FileName</span>
                                    </div>

                                    <!-- Nút hành động -->
                                    <div class="d-flex gap-2">
                                        <a href="@Url.Action("DownloadFile", "Port", new { fileName = Uri.EscapeDataString(file.FileName) })"
                                           class="btn btn-sm btn-outline-primary d-flex align-items-center">
                                            <i class="fas fa-download me-1"></i> Download
                                        </a>
                                        
                                       @{
                                            var relativePath = file.FilePath.Replace("/uploads/initiatives/", "");
                                        }
                                        <a href="/SciTech/ViewerPage?file=@Uri.EscapeDataString(relativePath)"
                                           class="btn btn-sm btn-outline-success d-flex align-items-center" target="_blank">
                                            <i class="fas fa-eye me-1"></i> Xem File
                                        </a>

                                    </div>
                                </li>

                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- RIGHT COLUMN -->
    <div class="col-lg-4">
        <div class="card shadow border-primary">
            <div class="card-header fw-bold text-primary">
                <i class="fas fa-pen-alt me-1"></i>Decision Panel
            </div>

            <div class="card-body">
                <form method="post" id="decisionForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    
                    <!-- NOTES -->
                    <label class="form-label fw-semibold">
                        <i class="fas fa-sticky-note me-1 text-warning"></i>
                        Notes / Request Content
                    </label>

                    <textarea name="requestContent" id="requestContent"
                              class="form-control mb-3"
                              rows="4"
                              placeholder="Enter content for revision, reason for re-evaluation, or conclusion..."></textarea>

                    <!-- DEADLINE (Js toggle) -->
                    <div id="deadlineWrapper" class="d-none mb-3">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-calendar-alt me-1 text-info"></i>
                            Deadline
                        </label>
                        <input type="date" name="deadline" id="deadline" class="form-control">
                    </div>

                    <!-- ACTIONS -->
                    <div class="d-grid gap-2">
                        @if (Model.Status == InitiativeStatus.Faculty_Approved)
                        {
                            <!-- ACCEPT & ASSIGN (For Faculty Approved) -->
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#acceptAssignModal">
                                <i class="fas fa-check-circle me-1"></i>Accept & Assign
                            </button>
                            
                            <!-- REJECT (For Faculty Approved) -->
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                <i class="fas fa-times-circle me-1"></i>Reject
                            </button>
                        }

                        @if (Model.Status == InitiativeStatus.Evaluating)
                        {
                            <!-- RE-EVALUATE -->
                            <button type="button" class="btn btn-warning text-white" data-bs-toggle="modal" data-bs-target="#reEvaluateModal">
                                <i class="fas fa-sync-alt me-1"></i>Request Re-evaluation
                            </button>

                             <!-- FINAL DECISION (Approve/Reject) -->
                            <button type="button" class="btn btn-outline-success fw-bold" data-bs-toggle="modal" data-bs-target="#finalApproveModal">
                                <i class="fas fa-award me-1"></i>Final Approve
                            </button>

                            <button type="button" class="btn btn-outline-danger fw-bold" data-bs-toggle="modal" data-bs-target="#finalRejectModal">
                                <i class="fas fa-times-circle me-1"></i>Final Reject
                            </button>

                            <!-- REVISION REQUEST -->
                            <button type="button" id="btnShowDeadline" class="btn btn-outline-secondary">
                                <i class="fas fa-undo me-1"></i>Request Revision
                            </button>
                            
                            <button type="button" id="btnReject" class="btn btn-danger d-none" data-bs-toggle="modal" data-bs-target="#sendRevisionModal">
                                <i class="fas fa-paper-plane me-1"></i>Send Revision Request
                            </button>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- ============ CONFIRMATION MODALS ============ -->

<!-- Accept & Assign Modal -->
<div class="modal fade" id="acceptAssignModal" tabindex="-1" aria-labelledby="acceptAssignModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="acceptAssignModalLabel">
                    <i class="fas fa-check-circle me-2"></i>Accept & Assign Initiative
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Are you sure you want to <strong>accept</strong> this initiative and assign it to a council for evaluation?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancel
                </button>
                <form asp-action="ApproveInitiative" asp-controller="Port" asp-area="SciTech" asp-route-id="@Model.Id" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="requestContent" id="modalAcceptContent" />
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check me-1"></i>Confirm Accept
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal (For Faculty Approved) -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="rejectModalLabel">
                    <i class="fas fa-times-circle me-2"></i>Reject Initiative
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Are you sure you want to <strong>reject</strong> this initiative? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancel
                </button>
                <form asp-action="RejectInitiative" asp-controller="Port" asp-area="SciTech" asp-route-id="@Model.Id" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="requestContent" id="modalRejectContent" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-check me-1"></i>Confirm Reject
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Re-Evaluate Modal -->
<div class="modal fade" id="reEvaluateModal" tabindex="-1" aria-labelledby="reEvaluateModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="reEvaluateModalLabel">
                    <i class="fas fa-sync-alt me-2"></i>Request Re-evaluation
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Are you sure you want to request a <strong>next round of re-evaluation</strong> for this initiative?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancel
                </button>
                <form asp-action="RequestReEvaluation" asp-controller="Port" asp-area="SciTech" asp-route-id="@Model.Id" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="requestContent" id="modalReEvalContent" />
                    <button type="submit" class="btn btn-warning text-white">
                        <i class="fas fa-check me-1"></i>Confirm Re-evaluation
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Final Approve Modal -->
<div class="modal fade" id="finalApproveModal" tabindex="-1" aria-labelledby="finalApproveModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="finalApproveModalLabel">
                    <i class="fas fa-award me-2"></i>Final Approval
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-trophy fa-3x text-success"></i>
                </div>
                <p class="mb-0 text-center">This will <strong>FINALLY APPROVE</strong> the initiative. This is the last step in the approval process.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancel
                </button>
                <form asp-action="MakeFinalDecision" asp-controller="Port" asp-area="SciTech" asp-route-id="@Model.Id" asp-route-decision="Approve" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="requestContent" id="modalFinalApproveContent" />
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check me-1"></i>Confirm Final Approve
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Final Reject Modal -->
<div class="modal fade" id="finalRejectModal" tabindex="-1" aria-labelledby="finalRejectModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="finalRejectModalLabel">
                    <i class="fas fa-times-circle me-2"></i>Final Rejection
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-ban fa-3x text-danger"></i>
                </div>
                <p class="mb-0 text-center">This will <strong>FINALLY REJECT</strong> the initiative. This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancel
                </button>
                <form asp-action="MakeFinalDecision" asp-controller="Port" asp-area="SciTech" asp-route-id="@Model.Id" asp-route-decision="Reject" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="requestContent" id="modalFinalRejectContent" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-check me-1"></i>Confirm Final Reject
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Send Revision Request Modal -->
<div class="modal fade" id="sendRevisionModal" tabindex="-1" aria-labelledby="sendRevisionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-secondary text-white">
                <h5 class="modal-title" id="sendRevisionModalLabel">
                    <i class="fas fa-paper-plane me-2"></i>Send Revision Request
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Are you sure you want to send a <strong>revision request</strong> to the author?</p>
                <div id="revisionValidationError" class="alert alert-danger mt-3 d-none">
                    <i class="fas fa-exclamation-triangle me-1"></i>
                    <span id="revisionErrorText"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Cancel
                </button>
                <form asp-action="RejectInitiative" asp-controller="Port" asp-area="SciTech" asp-route-id="@Model.Id" method="post" style="display:inline;" id="revisionForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="requestContent" id="modalRevisionContent" />
                    <input type="hidden" name="deadline" id="modalRevisionDeadline" />
                    <button type="button" class="btn btn-primary" onclick="submitRevisionRequest()">
                        <i class="fas fa-paper-plane me-1"></i>Confirm Send
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Show deadline input when clicking Request Revision
    var btnShowDeadline = document.getElementById("btnShowDeadline");
    if (btnShowDeadline) {
        btnShowDeadline.addEventListener("click", function() {
            var wrapper = document.getElementById("deadlineWrapper");
            var btnReject = document.getElementById("btnReject");
            
            if (wrapper.classList.contains("d-none")) {
                wrapper.classList.remove("d-none");
                btnReject.classList.remove("d-none");
                this.classList.add("d-none");
            }
        });
    }

    // Copy notes to modal hidden inputs when modals open
    document.querySelectorAll('.modal').forEach(function(modal) {
        modal.addEventListener('show.bs.modal', function() {
            var content = document.getElementById('requestContent').value;
            var deadline = document.getElementById('deadline') ? document.getElementById('deadline').value : '';
            
            // Update all hidden inputs in modals
            var hiddenInputs = this.querySelectorAll('input[name="requestContent"]');
            hiddenInputs.forEach(function(input) {
                input.value = content;
            });
            
            var deadlineInputs = this.querySelectorAll('input[name="deadline"]');
            deadlineInputs.forEach(function(input) {
                input.value = deadline;
            });
        });
    });

    // Validate and submit revision request
    function submitRevisionRequest() {
        var content = document.getElementById("requestContent").value;
        var deadline = document.getElementById("deadline").value;
        var errorDiv = document.getElementById("revisionValidationError");
        var errorText = document.getElementById("revisionErrorText");
        
        if (!content || !content.trim()) {
            errorDiv.classList.remove("d-none");
            errorText.textContent = "Please enter revision request content!";
            return;
        }
        if (!deadline) {
            errorDiv.classList.remove("d-none");
            errorText.textContent = "Please select a deadline!";
            return;
        }
        
        // Copy values and submit
        document.getElementById("modalRevisionContent").value = content;
        document.getElementById("modalRevisionDeadline").value = deadline;
        document.getElementById("revisionForm").submit();
    }
</script>
