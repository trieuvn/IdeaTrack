@using IdeaTrack.Models
@using IdeaTrack.Areas.SciTech.Models
@model InitiativeDetailVM

@{
    string statusBadgeClass = Model.Status switch
    {
        InitiativeStatus.Draft => "bg-secondary text-white",
        InitiativeStatus.Pending => "bg-warning text-dark",
        InitiativeStatus.Faculty_Approved => "bg-info text-white",
        InitiativeStatus.Evaluating => "bg-primary text-white",
        InitiativeStatus.Revision_Required => "bg-warning-subtle text-warning",
        InitiativeStatus.Approved => "bg-success text-white",
        InitiativeStatus.Rejected => "bg-danger text-white",
        _ => "bg-secondary text-white"
    };

    // Icon và màu cho Department
    string deptIcon = "fa-building";
    string deptColor = "text-secondary";

    switch (Model.Code)
    {
        case "CNTT":
            deptIcon = "fa-laptop-code"; deptColor = "text-primary";
            break;
        case "DTVT": // Điện tử Viễn thông
            deptIcon = "fa-bolt"; deptColor = "text-danger";
            break;
        case "KHCN": // Khoa học Công nghệ
            deptIcon = "fa-microscope"; deptColor = "text-success";
            break;
        case "CK": // Cơ khí
            deptIcon = "fa-cogs"; deptColor = "text-warning";
            break;
        case "XD": // Xây dựng
            deptIcon = "fa-hard-hat"; deptColor = "text-secondary";
            break;
        case "MT": // Môi trường
            deptIcon = "fa-leaf"; deptColor = "text-info";
            break;
        case "KT": // Kinh tế
            deptIcon = "fa-chart-line"; deptColor = "text-primary";
            break;
        case "QTKD": // Quản trị Kinh doanh
            deptIcon = "fa-briefcase"; deptColor = "text-primary";
            break;
        case "LUAT":
            deptIcon = "fa-gavel"; deptColor = "text-warning";
            break;
        case "NN": // Nông nghiệp
            deptIcon = "fa-seedling"; deptColor = "text-success";
            break;
        default:
            deptIcon = "fa-building"; deptColor = "text-secondary";
            break;
    }
}

<!-- HEADER -->
<div class="d-flex flex-column flex-lg-row justify-content-between gap-3 mb-4">
    <div>
        <span class="badge @statusBadgeClass mb-2">
            <i class="fas fa-hourglass-half me-1"></i>@Model.Status
        </span>

        <h2 class="fw-bold mb-1">
            <i class="fas fa-lightbulb me-2 text-warning"></i>@Model.Title
        </h2>

        <p class="text-muted mb-0">
            <i class="fas fa-fingerprint me-1 text-info"></i>Mã hồ sơ: <strong>@Model.InitiativeCode</strong>
            <span class="mx-2">|</span>
            <i class="fas fa-calendar-alt me-1 text-secondary"></i>@Model.SubmittedDate.ToString("dd/MM/yyyy")
        </p>
    </div>
</div>

<div class="row g-4">

    <!-- LEFT COLUMN -->
    <div class="col-lg-8">

        <!-- INFO CARD -->
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light fw-bold">
                <i class="fas fa-info-circle me-1 text-primary"></i>Thông tin chung
            </div>

            <div class="card-body row g-4">
                <div class="col-md-6">
                    <small class="text-muted">Chủ nhiệm đề tài</small>
                    <p class="fw-semibold mb-0"><i class="fas fa-user-tie me-1 text-primary"></i>@Model.ProposerName</p>
                </div>

                <div class="col-md-6">
                    <small class="text-muted">Đơn vị thực hiện</small>
                    <p class="fw-semibold mb-0"><i class="fas @deptIcon @deptColor me-1"></i>@Model.DepartmentName</p>
                </div>

                <div class="col-md-6">
                    <small class="text-muted">Lĩnh vực</small>
                    <p class="fw-semibold mb-0"><i class="fas fa-brain me-1 text-info"></i>@Model.Category</p>
                </div>

                <div class="col-md-6">
                    <small class="text-muted d-block mb-1">Thời gian thực hiện</small>
                    <p class="fw-semibold mb-0 gradient-text">
                        <i class="fas fa-clock me-1"></i>
                        @Model.SubmittedDate.ToString("dd/MM/yyyy")
                    </p>
                </div>
                <div class="col-md-6">
                     <small class="text-muted">Kinh phí đề xuất</small>
                    <p class="fw-bold text-primary fs-5 mb-0"><i class="fas fa-dollar-sign me-1 text-success"></i>@Model.Budget.ToString("N0") VNĐ</p>
                </div>

            </div>
        </div>

        <!-- DESCRIPTION & FILES -->
        <div class="accordion mb-4" id="abstractAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button fw-semibold" data-bs-toggle="collapse" data-bs-target="#description">
                        <i class="fas fa-align-left me-2 text-primary"></i>Mô tả nội dung
                    </button>
                </h2>
                <div id="description" class="accordion-collapse collapse show">
                    <div class="accordion-body text-muted">
                        @Model.Description
                    </div>
                </div>
            </div>

            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed fw-semibold" data-bs-toggle="collapse" data-bs-target="#files">
                        <i class="fas fa-paperclip me-2 text-secondary"></i>Tài liệu đính kèm
                    </button>
                </h2>
                <div id="files" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <ul class="list-group list-group-flush">
                            @foreach (var file in Model.Files ?? new List<InitiativeFileVM>())
                            {
                                var ext = System.IO.Path.GetExtension(file.FileName).ToLower();
                                string iconClass = "fa-file";
                                string textColor = "text-secondary";

                                switch (ext)
                                {
                                    case ".pdf":
                                        iconClass = "fa-file-pdf";
                                        textColor = "text-danger";
                                        break;
                                    case ".xlsx":
                                    case ".xls":
                                        iconClass = "fa-file-excel";
                                        textColor = "text-success";
                                        break;
                                    case ".docx":
                                    case ".doc":
                                        iconClass = "fa-file-word";
                                        textColor = "text-primary";
                                        break;
                                    case ".pptx":
                                    case ".ppt":
                                        iconClass = "fa-file-powerpoint";
                                        textColor = "text-warning";
                                        break;
                                }

                                <li class="list-group-item d-flex justify-content-between">
                                    <span><i class="fas @iconClass @textColor me-2"></i>@file.FileName</span>
                                    <a href="@Url.Action("DownloadFile", "Port", new { fileName = file.FileName })" class="text-decoration-none">
                                        <i class="fas fa-download me-1 text-primary"></i>Tải
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- RIGHT COLUMN -->
    <div class="col-lg-4">
        <div class="card shadow border-primary">
            <div class="card-header fw-bold text-primary">
                <i class="fas fa-pen-alt me-1"></i>Quyết định PKHCN
            </div>

            <div class="card-body">
                <form method="post" id="decisionForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    
                    <!-- GHI CHÚ -->
                    <label class="form-label fw-semibold">
                        <i class="fas fa-sticky-note me-1 text-warning"></i>
                        Ghi chú / Nội dung yêu cầu
                    </label>

                    <textarea name="requestContent" id="requestContent"
                              class="form-control mb-3"
                              rows="4"
                              placeholder="Nhập nội dung yêu cầu chỉnh sửa, lý do đánh giá lại, hoặc kết luận..."></textarea>

                    <!-- DEADLINE (Js toggle) -->
                    <div id="deadlineWrapper" class="d-none mb-3">
                        <label class="form-label fw-semibold">
                            <i class="fas fa-calendar-alt me-1 text-info"></i>
                            Hạn chỉnh sửa
                        </label>
                        <input type="date" name="deadline" id="deadline" class="form-control">
                    </div>

                    <!-- ACTIONS -->
                    <div class="d-grid gap-2">
                        <!-- DUYỆT -->
                        <button type="submit" asp-action="ApproveInitiative" asp-controller="Port" asp-area="SciTech"
                                class="btn btn-success" onclick="return confirm('Xác nhận duyệt hồ sơ này?');">
                            <i class="fas fa-check-circle me-1"></i>Duyệt hồ sơ / Phân công
                        </button>
                        
                        <!-- YÊU CẦU CHẤM LẠI (New) -->
                        <button type="submit" asp-action="RequestReEvaluation" asp-controller="Port" asp-area="SciTech"
                                class="btn btn-warning text-white" onclick="return confirm('Xác nhận yêu cầu Hội đồng chấm lại vòng tiếp theo?');">
                            <i class="fas fa-sync-alt me-1"></i>Yêu cầu chấm lại
                        </button>

                         <!-- QUYẾT ĐỊNH CUỐI CÙNG (Approve/Reject) -->
                        <button type="submit" asp-action="MakeFinalDecision" asp-route-decision="Approve"
                                class="btn btn-outline-success fw-bold" onclick="return confirm('Xác nhận PHÊ DUYỆT chính thức sáng kiến này?');">
                            <i class="fas fa-award me-1"></i>Phê duyệt (Quyết định cuối)
                        </button>

                        <button type="submit" asp-action="MakeFinalDecision" asp-route-decision="Reject"
                                class="btn btn-outline-danger fw-bold" onclick="return confirm('Xác nhận TỪ CHỐI chính thức sáng kiến này?');">
                            <i class="fas fa-times-circle me-1"></i>Từ chối (Quyết định cuối)
                        </button>

                        <!-- YÊU CẦU CHỈNH SỬA (Reject) -->
                        <button type="button" id="btnShowDeadline" class="btn btn-outline-secondary">
                            <i class="fas fa-undo me-1"></i>Yêu cầu chỉnh sửa
                        </button>
                        
                        <button type="submit" asp-action="RejectInitiative" asp-controller="Port" asp-area="SciTech"
                                id="btnReject" class="btn btn-danger d-none" onclick="return validateReject();">
                            <i class="fas fa-paper-plane me-1"></i>Gửi yêu cầu chỉnh sửa
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("btnShowDeadline").addEventListener("click", function() {
        var wrapper = document.getElementById("deadlineWrapper");
        var btnReject = document.getElementById("btnReject");
        
        if (wrapper.classList.contains("d-none")) {
            wrapper.classList.remove("d-none");
            btnReject.classList.remove("d-none");
            this.classList.add("d-none"); // Hide "Show" button
        }
    });

    function validateReject() {
        var content = document.getElementById("requestContent").value;
        var deadline = document.getElementById("deadline").value;
        
        if (!content || !content.trim()) {
            alert("Vui lòng nhập nội dung yêu cầu chỉnh sửa!");
            return false;
        }
        if (!deadline) {
            alert("Vui lòng chọn hạn chỉnh sửa!");
            return false;
        }
        return confirm('Xác nhận gửi yêu cầu chỉnh sửa cho tác giả?');
    }
</script>
