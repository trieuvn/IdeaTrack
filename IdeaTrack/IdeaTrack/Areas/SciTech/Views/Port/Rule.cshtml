@using IdeaTrack.Models
@model List<EvaluationCriteria>

<div class="card shadow-sm mb-4">
    <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-start gap-3">
        <div>
            <h2 class="fw-bold mb-1">Quản lý Tiêu chí & Trọng số</h2>
            <p class="text-muted mb-0">
                Tổng trọng số của tất cả tiêu chí phải bằng <strong>100%</strong> để kích hoạt chấm điểm.
            </p>
        </div>
        
    </div>
</div>

<!-- SUMMARY -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <small class="text-muted">Tổng số tiêu chí</small>
                <h3 class="fw-bold mb-0" id="totalCriteria">0</h3>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <small class="text-muted">Tổng trọng số</small>
                    <span class="badge bg-success" id="weightStatus">Hợp lệ</span>
                </div>
                <h3 class="fw-bold text-success mb-0">
                    <span id="totalWeight">0</span>%
                </h3>
                <div class="progress mt-2" style="height:6px">
                    <div id="weightProgress" class="progress-bar bg-success" style="width:0%"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <small class="text-muted">Cập nhật lần cuối</small>
                <h6 class="fw-bold mb-0">@DateTime.Now.ToString("HH:mm – dd/MM/yyyy")</h6>
                <small class="text-muted">bởi Admin</small>
            </div>
        </div>
    </div>
</div>

<!-- ACTION -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h5 class="fw-bold mb-0">Danh sách tiêu chí</h5>
    <button type="button" class="btn btn-primary" onclick="addCriteriaRow()">
        <i class="fa-solid fa-circle-plus me-1"></i>Thêm tiêu chí
    </button>
</div>
<form asp-controller="SciTech"
      asp-action="Rule"
      method="post"
      id="ruleForm">
<!-- TABLE -->
<div class="card shadow-sm mb-4">
    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Tên tiêu chí</th>
                    <th>Mô tả</th>
                    <th style="width:30%">Trọng số (%)</th>
                    <th class="text-end">Thao tác</th>
                </tr>
            </thead>

            <tbody id="criteriaTable">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>
                                <input class="form-control form-control-sm"
                                       name="criteria[@i].CriteriaName"
                                       value="@Model[i].CriteriaName" />
                            </td>

                            <td>
                                <input class="form-control form-control-sm"
                                       name="criteria[@i].Description"
                                       value="@Model[i].Description" />
                            </td>

                            <td>
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <strong class="text-primary">
                                        @* Xóa ID weightLabel, dùng class weight-label *@
                                        <span class="weight-label">@Model[i].MaxScore.ToString("F2")</span>%
                                    </strong>

                                    @* Thêm class weight-input và đổi hàm oninput thành syncWeight *@
                                    <input type="number"
                                           class="form-control form-control-sm text-center weight-input"
                                           style="width:70px"
                                           name="criteria[@i].MaxScore"
                                           value="@Model[i].MaxScore.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)"
                                           min="0" max="100" step="0.01"
                                           oninput="syncWeight(this)" />
                                </div>

                                @* Đổi hàm oninput thành syncRange *@
                                <input type="range"
                                       min="0" max="100" step="0.01"
                                       value="@Model[i].MaxScore.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)"
                                       class="form-range weight-range"
                                       oninput="syncRange(this)" />
                            </td>

                            <td class="text-end">
                                <button type="button" class="btn btn-sm btn-outline-danger" onclick="removeRow(this)">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>

    <div class="card-footer d-flex justify-content-between">
        <small class="text-muted">
            Hiển thị <span id="countRow">0</span> tiêu chí
        </small>
        <a href="#" class="fw-semibold text-decoration-none">Khôi phục mặc định</a>
    </div>
</div>

<!-- PREVIEW -->
<div class="alert alert-secondary">
    <i class="fa-solid fa-eye me-1"></i>
    <strong>Cách tính điểm:</strong>
    <span id="previewFormula"></span>
</div>

<!-- FOOTER ACTION -->
<div class="d-flex justify-content-end gap-3">
    <button class="btn btn-outline-secondary">Hủy</button>
        <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-floppy-disk me-1"></i>Lưu thay đổi
        </button>

</div>
</form>
        <script>
    let rowIndex = @Model.Count;

    /* =========================
       UTILITY: CLAMP
    ========================== */
    function clamp(value) {
        value = Number(value || 0);
        if (value < 0) return 0;
        if (value > 100) return 100;
        return Number(value.toFixed(2)); // ép 2 chữ số thập phân
    }

    /* =========================
       SYNC INPUT <-> RANGE
    ========================== */
        function syncWeight(input) {
        const td = input.closest("td");
        const range = td.querySelector(".weight-range");
        const label = td.querySelector(".weight-label");

        // Nếu người dùng xóa trống ô thì coi như là 0
        let val = input.value.replace(',', '.');
        let value = Number(val || 0);

        // Chặn ngay lập tức nếu gõ quá 100
        if (value > 100) {
            value = 100;
            input.value = 100;
        }

        if (range) range.value = value;
        if (label) label.innerText = value.toFixed(2);

        updateSummary();
    }

    function syncRange(range) {
        const td = range.closest("td");
        const input = td.querySelector(".weight-input");
        const label = td.querySelector(".weight-label");
        const value = clamp(range.value);

        if (input) input.value = value;
        if (label) label.innerText = value.toFixed(2);

        updateSummary();
    }

    /* =========================
       ADD / REMOVE ROW
    ========================== */
    function addCriteriaRow() {
        const table = document.getElementById("criteriaTable");

        table.insertAdjacentHTML("beforeend", `
        <tr>
            <td>
                <input class="form-control form-control-sm"
                       name="criteria[${rowIndex}].CriteriaName"
                       placeholder="Tên tiêu chí" />
            </td>

            <td>
                <input class="form-control form-control-sm"
                       name="criteria[${rowIndex}].Description"
                       placeholder="Mô tả" />
            </td>

            <td>
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <strong class="text-primary">
                        <span class="weight-label">0.00</span>%
                    </strong>

                    <input type="number"
                           name="criteria[${rowIndex}].MaxScore"
                           value="0"
                           min="0"
                           max="100"
                           step="0.01"
                           class="form-control form-control-sm text-center weight-input"
                           style="width:70px"
                           oninput="syncWeight(this)" />
                </div>

                <input type="range"
                       value="0"
                       min="0"
                       max="100"
                       step="0.01"
                       class="form-range weight-range"
                       oninput="syncRange(this)" />
            </td>

            <td class="text-end">
                <button type="button"
                        class="btn btn-sm btn-outline-danger"
                        onclick="removeRow(this)">
                    <i class="fa-solid fa-trash"></i>
                </button>
            </td>
        </tr>
        `);

        rowIndex++;
        syncAllRowsFromInput();
        updateSummary();
    }

    function removeRow(btn) {
        btn.closest("tr").remove();
        updateSummary();
    }

    /* =========================
       SYNC ALL ROWS ON PAGE LOAD
    ========================== */
    function syncAllRowsFromInput() {
        document.querySelectorAll(".weight-input").forEach(input => {
            const td = input.closest("td");
            const range = td.querySelector(".weight-range");
            const label = td.querySelector(".weight-label");
            const value = clamp(input.value);

            if (range) range.value = value;
            if (label) label.innerText = value.toFixed(2);
        });
    }

    /* =========================
       UPDATE SUMMARY
    ========================== */
       function updateSummary() {
        const inputs = document.querySelectorAll(".weight-input");
        const count = inputs.length;

        let sum = 0;
        inputs.forEach(x => {
            // Thay thế dấu phẩy thành dấu chấm để JS tính toán đúng
            let val = x.value.replace(',', '.');
            sum += clamp(val);
        });

        const totalWeight = sum;

        document.getElementById("totalCriteria").innerText = count;
        document.getElementById("countRow").innerText = count;
        document.getElementById("totalWeight").innerText = totalWeight.toFixed(2);

        // Cập nhật Progress Bar
        const progress = document.getElementById("weightProgress");
        const percent = Math.min(totalWeight, 100);
        progress.style.width = percent + "%";

        // Đổi màu progress bar nếu vượt quá 100
        if (totalWeight > 100) {
            progress.className = "progress-bar bg-danger";
        } else {
            progress.className = "progress-bar bg-success";
        }

        const valid = Math.abs(totalWeight - 100) < 0.01; // So sánh số thực
        const weightStatus = document.getElementById("weightStatus");
        weightStatus.innerText = valid ? "Hợp lệ" : "Chưa hợp lệ";
        weightStatus.className = "badge " + (valid ? "bg-success" : "bg-danger");

        document.getElementById("previewFormula").innerText =
            [...document.querySelectorAll(".weight-label")]
                .map(x => `(${x.innerText}%)`)
                .join(" + ");
    }

    /* =========================
       INIT ON DOM CONTENT LOADED
    ========================== */
    document.addEventListener("DOMContentLoaded", () => {
        syncAllRowsFromInput();
        updateSummary();
    });
</script>

