        <table class="table table-hover align-middle mb-0">

            <!-- TABLE HEADER -->
            <thead class="table-light">
                <tr>
                    <th>
                        <i class="fas fa-hashtag text-muted me-1"></i>
                        Mã hồ sơ
                    </th>
                    <th>
                        <i class="fas fa-file-alt text-muted me-1"></i>
                        Tên đề tài
                    </th>
                    <th>
                        <i class="fas fa-user-tie text-muted me-1"></i>
                        Chủ nhiệm
                    </th>
                    <th>
                        <i class="fas fa-university text-muted me-1"></i>
                        Khoa
                    </th>
                    <th>
                        <i class="fas fa-calendar-alt text-muted me-1"></i>
                        Ngày gửi
                    </th>
                    <th>
                        <i class="fas fa-check-circle text-muted me-1"></i>
                        Trạng thái
                    </th>
                    <th class="text-end">
                        <i class="fas fa-cogs text-muted"></i>
                        Tác vụ
                    </th>
                </tr>
            </thead>

