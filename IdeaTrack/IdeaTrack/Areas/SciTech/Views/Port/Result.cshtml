@using IdeaTrack.Areas.SciTech.Models
@model InitiativeResultVM

@{
    ViewData["Title"] = "Evaluation Result";
    var passThreshold = 50; 
}

<!-- PAGE HEADER -->
<div class="d-flex flex-wrap justify-content-between align-items-start gap-3 mb-4">
    <div>
        <h2 class="fw-bold mb-1">
            <i class="fa-solid fa-users-gear text-primary me-2"></i>
            Council Evaluation Results
        </h2>
        <p class="text-muted mb-0">
            Code: <span class="fw-semibold">@Model.InitiativeCode</span>
            | Title: <span class="fw-semibold">@Model.Title</span>
            | Proposer: <span class="fw-semibold">@Model.ProposerName</span>
            @if (Model.CoAuthors != null && Model.CoAuthors.Any())
            {
                <span class="ms-2">
                    <i class="fa-solid fa-users text-muted"></i>
                    Co-authors: @string.Join(", ", Model.CoAuthors.Select(c => c.FullName))
                </span>
            }
        </p>
    </div>

    <div class="d-flex gap-2">
        <a href="javascript:history.back()" class="btn btn-outline-secondary">
            <i class="fa-solid fa-arrow-left me-1"></i> Back
        </a>

        <!-- TOGGLE HIDE INFO -->
        <form asp-action="ToggleHidePersonalInfo" asp-controller="Port" asp-area="SciTech" asp-route-id="@Model.Id" method="post" style="display:inline;">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn @(Model.HidePersonalInfo ? "btn-dark" : "btn-outline-dark")" title="@(Model.HidePersonalInfo ? "Reveal Author Info" : "Hide Author Info")">
                <i class="fa-solid @(Model.HidePersonalInfo ? "fa-eye-slash" : "fa-eye") me-1"></i>
                @(Model.HidePersonalInfo ? "Approve: Hidden" : "Approve: Visible")
            </button>
        </form>
        
        <!-- ACTION BUTTONS (Pending_Final Only) -->
        @if (Model.Status == "Pending_Final")
        {
            <button type="button" class="btn btn-warning text-white" data-bs-toggle="modal" data-bs-target="#restartModal">
                <i class="fa-solid fa-rotate-left me-1"></i> Restart Evaluation
            </button>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rejectModal">
                <i class="fa-solid fa-xmark me-1"></i> Reject
            </button>
            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#approveModal">
                <i class="fa-solid fa-check me-1"></i> Approve
            </button>
        }
    </div>
</div>

<!-- SUMMARY CARDS -->
<div class="row g-3 mb-4">
    <!-- CARD 1: AVERAGE SCORE -->
    <div class="col-md-4">
        <div class="card shadow-sm h-100 position-relative overflow-hidden">
            <i class="fa-solid fa-chart-line position-absolute end-0 top-0 m-3 fs-1 text-primary opacity-25"></i>
            <div class="card-body">
                <small class="text-muted text-uppercase">Average Score</small>
                <div class="d-flex align-items-end gap-2 mt-2">
                    <h2 class="text-primary fw-bold mb-0">@Model.AverageScore.ToString("0.0")</h2>
                    <span class="text-muted">/100</span>
                </div>
                <div class="progress mt-3" style="height:6px;">
                    <div class="progress-bar bg-primary" style="width: @(Model.AverageScore)%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- CARD 2: STATUS / RANK -->
    <div class="col-md-4">
        <div class="card shadow-sm h-100 position-relative overflow-hidden">
            @{
                var isPass = Model.AverageScore >= passThreshold;
                var resultColor = isPass ? "text-success" : "text-danger";
                var resultIcon = isPass ? "fa-circle-check" : "fa-circle-xmark";
            }
            <i class="fa-solid @resultIcon position-absolute end-0 top-0 m-3 fs-1 opacity-25 @resultColor"></i>
            <div class="card-body">
                <small class="text-muted text-uppercase">Current Rank</small>
                <h4 class="fw-bold @resultColor mt-2">
                    @Model.Rank
                </h4>
                <p class="text-muted mb-0">Status: @Model.Status</p>
            </div>
        </div>
    </div>

    <!-- CARD 3: CONSENSUS RATE -->
    <div class="col-md-4">
        <div class="card shadow-sm h-100 position-relative overflow-hidden">
            <i class="fa-solid fa-users position-absolute end-0 top-0 m-3 fs-1 text-info opacity-25"></i>
            <div class="card-body">
                <small class="text-muted text-uppercase">Consensus Rate</small>
                <h4 class="fw-bold mt-2">
                    @Model.ConsensusRate.ToString("0")% <small class="text-muted">(@Model.CompletedCount/@Model.TotalMembers)</small>
                </h4>
                <div class="progress mt-3" style="height:6px;">
                    <div class="progress-bar bg-info" style="width: @Model.ConsensusRate%"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- MAIN CONTENT -->
<div class="row g-4">
    <!-- LEFT: SCORE TABLE -->
    <div class="col-lg-7">
        <div class="card shadow-sm h-100">
            <div class="card-header d-flex justify-content-between align-items-center bg-light">
                <h5 class="fw-bold mb-0">
                    <i class="fa-solid fa-table me-1"></i>
                    Detailed Member Scores
                </h5>
                <button class="btn btn-sm btn-outline-primary" onclick="resetFeedbackView()">
                    <i class="fa-solid fa-users me-1"></i> View All Feedback
                </button>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Member</th>
                            <th class="text-center">Role</th>
                            <th class="text-end">Total Score</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var m in Model.MemberScores)
                        {
                            <tr class="@(m.IsCompleted ? "" : "opacity-50")">
                                <td>
                                    <div class="fw-semibold">@m.MemberName</div>
                                    <small class="text-muted">@m.Role</small>
                                </td>
                                <td class="text-center">
                                    @{
                                        string roleBadge = m.Role.Contains("Chair") ? "bg-danger" : "bg-primary";
                                    }
                                    <span class="badge @roleBadge rounded-pill">@m.Role</span>
                                </td>
                                <td class="text-end fw-bold fs-5">
                                    @if(m.IsCompleted)
                                    {
                                        <span class="text-primary">@m.TotalScore.ToString("0.0")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if(m.IsCompleted)
                                    {
                                        <span class="badge bg-success-subtle text-success">Submitted</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning-subtle text-warning">Pending</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if(m.IsCompleted)
                                    {
                                        <button class="btn btn-sm btn-outline-secondary rounded-circle" onclick="showMemberFeedback(@m.MemberId)" title="View Details">
                                            <i class="fa-solid fa-eye"></i>
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- RIGHT: CONSOLIDATED FEEDBACK -->
    <div class="col-lg-5">
        <div class="card shadow-sm h-100">
            <div class="card-header bg-light fw-bold d-flex justify-content-between align-items-center">
                <span>
                    <i class="fa-solid fa-comments me-2"></i>
                    <span id="feedback-title">Consolidated Feedback</span>
                </span>
            </div>
            <div class="card-body bg-white" style="max-height: 600px; overflow-y:auto;" id="feedback-container">
                <!-- PROS -->
                <div class="alert alert-success border-0 bg-success-subtle mb-3">
                    <h6 class="alert-heading fw-bold text-success mb-2">
                        <i class="fa-solid fa-circle-check me-2"></i>Strengths
                    </h6>
                    <p class="mb-0 small text-dark" id="feedback-strengths" style="white-space: pre-wrap;">@Model.ConsolidatedStrengths</p>
                </div>

                <!-- CONS -->
                <div class="alert alert-danger border-0 bg-danger-subtle mb-3">
                    <h6 class="alert-heading fw-bold text-danger mb-2">
                        <i class="fa-solid fa-circle-exclamation me-2"></i>Limitations
                    </h6>
                    <p class="mb-0 small text-dark" id="feedback-limitations" style="white-space: pre-wrap;">@Model.ConsolidatedLimitations</p>
                </div>

                <!-- RECOMMENDATION -->
                <div class="alert alert-info border-0 bg-info-subtle mb-0">
                    <h6 class="alert-heading fw-bold text-info mb-2">
                        <i class="fa-solid fa-lightbulb me-2"></i>Recommendation
                    </h6>
                    <p class="mb-0 small text-dark" id="feedback-recommendations" style="white-space: pre-wrap;">@Model.ConsolidatedRecommendations</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- DATA STORE FOR JS -->
<script>
    var memberData = @Html.Raw(Json.Serialize(Model.MemberScores));
    
    // Default Consolidated Data
    var consolidatedData = {
        name: "Consolidated Feedback",
        strengths: `@Html.Raw(Model.ConsolidatedStrengths?.Replace("`", "'"))`,
        limitations: `@Html.Raw(Model.ConsolidatedLimitations?.Replace("`", "'"))`,
        recommendations: `@Html.Raw(Model.ConsolidatedRecommendations?.Replace("`", "'"))`
    };

    function showMemberFeedback(memberId) {
        var member = memberData.find(m => m.memberId === memberId);
        if (member) {
            updateFeedbackView(member.memberName + "'s Feedback", member.strengths, member.limitations, member.recommendations);
        }
    }

    function resetFeedbackView() {
        updateFeedbackView(consolidatedData.name, consolidatedData.strengths, consolidatedData.limitations, consolidatedData.recommendations);
    }

    function updateFeedbackView(title, s, l, r) {
        document.getElementById('feedback-title').innerText = title;
        document.getElementById('feedback-strengths').innerText = s || "No comments.";
        document.getElementById('feedback-limitations').innerText = l || "No comments.";
        document.getElementById('feedback-recommendations').innerText = r || "No comments.";
    }
</script>

<!-- MODALS -->
<!-- 1. APPROVE MODAL -->
<div class="modal fade" id="approveModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="MakeFinalDecision" asp-route-id="@Model.Id" method="post">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="fa-solid fa-check-circle me-2"></i>Confirm Approval</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to <strong>APPROVE</strong> this initiative?</p>
                    <p class="small text-muted">This will finalize the result and create a permanent record.</p>
                    
                    <input type="hidden" name="decision" value="Approve" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">Confirm Approve</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- 2. REJECT MODAL -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="MakeFinalDecision" asp-route-id="@Model.Id" method="post">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title"><i class="fa-solid fa-times-circle me-2"></i>Confirm Rejection</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to <strong>REJECT</strong> this initiative?</p>
                    <p class="small text-muted">This action cannot be undone efficiently.</p>
                    <input type="hidden" name="decision" value="Reject" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Confirm Reject</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- 3. RESTART MODAL -->
<div class="modal fade" id="restartModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="RestartEvaluation" asp-route-id="@Model.Id" method="post">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title"><i class="fa-solid fa-rotate-left me-2"></i>Restart Evaluation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to <strong>RESTART</strong> the evaluation process?</p>
                    <div class="alert alert-warning">
                        <i class="fa-solid fa-triangle-exclamation me-1"></i>
                        <strong>Warning:</strong> All current scores and comments from the council will be deleted permanently.
                    </div>
                    <p>The status will be set to <strong>Re-Evaluating</strong>.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Confirm Restart</button>
                </div>
            </form>
        </div>
    </div>
</div>
