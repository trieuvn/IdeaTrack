                <h3 class="fw-bold mb-0">105</h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-primary text-white shadow-sm">
            <div class="card-body">
                <i class="fa-solid fa-chart-pie fs-4"></i>
                <p class="small mb-1">Tỷ lệ hoàn thành</p>
                <h3 class="fw-bold mb-0">87.5%</h3>
            </div>
        </div>
    </div>
</div>

<!-- FILTER -->
<div class="card shadow-sm mb-4">
    <div class="card-header fw-semibold">
        <i class="fa-solid fa-filter me-1"></i>Bộ lọc tìm kiếm
    </div>
    <div class="card-body row g-3">
        <div class="col-md-3">
            <label class="form-label">Từ ngày</label>
            <input type="date" class="form-control" value="2023-01-01">
        </div>
        <div class="col-md-3">
            <label class="form-label">Đến ngày</label>
            <input type="date" class="form-control" value="2023-12-31">
        </div>
        <div class="col-md-3">
            <label class="form-label">Trạng thái</label>
            <select class="form-select">
                <option>Tất cả</option>
                <option>Đang xử lý</option>
                <option>Đã duyệt</option>
                <option>Từ chối</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Loại hồ sơ</label>
            <select class="form-select">
                <option>Tất cả</option>
                <option>Đề tài khoa học</option>
                <option>Sáng kiến</option>
                <option>Dự án</option>
            </select>
        </div>
    </div>
    <div class="card-footer text-end">
        <button class="btn btn-primary">
            <i class="fa-solid fa-magnifying-glass me-1"></i>Áp dụng
        </button>
    </div>
</div>

