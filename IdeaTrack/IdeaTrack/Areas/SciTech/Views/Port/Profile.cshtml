@{
    ViewData["Title"] = "Post-Faculty Files";
}

@section Styles {
    <link rel="stylesheet" href="~/css/table.css">
}

<!-- ================= PAGE HEADER ================= -->
<div class="d-flex justify-content-between align-items-start mb-4">
    <div>
        <h2 class="fw-bold mb-1 d-flex align-items-center">
            <i class="fas fa-folder-open text-primary fs-4 me-2"></i>
            Post-Faculty Files
        </h2>
        <p class="text-muted mb-0 d-flex align-items-center">
            <i class="fas fa-info-circle me-1"></i>
            List of initiative files approved by Faculty Councils.
        </p>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-outline-success">
            <i class="fas fa-file-excel me-1"></i>
            Import Excel
        </button>
        <button class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i>
            Create File
        </button>
    </div>
</div>

<!-- ================= TOOLBAR ================= -->
<div class="card mb-4 shadow-sm">
    <div class="card-body row g-3 align-items-center">
        <!-- SEARCH -->
        <div class="col-md-5">
            <label class="form-label small text-muted d-flex align-items-center mb-1">
                <i class="fas fa-search me-1"></i> Search
            </label>
            <div class="input-group">
                <span class="input-group-text bg-light">
                    <i class="fas fa-search text-secondary"></i>
                </span>
                <input class="form-control"
                       placeholder="Enter file code or topic name">
            </div>
        </div>

        <!-- STATUS -->
        <div class="col-md-3">
            <label class="form-label small text-muted d-flex align-items-center mb-1">
                <i class="fas fa-filter me-1"></i> Status
            </label>
            <div class="input-group">
                <span class="input-group-text bg-light">
                    <i class="fas fa-flag text-secondary"></i>
                </span>
                <select class="form-select">
                    <option>All Statuses</option>
                    <option>Approved</option>
                    <option>Pending Processing</option>
                    <option>Returned for Revision</option>
                </select>
            </div>
        </div>

        <!-- FACULTY -->
        <div class="col-md-2">
            <label class="form-label small text-muted d-flex align-items-center mb-1">
                <i class="fas fa-building me-1"></i> Faculty / Institute
            </label>
            <select class="form-select">
                <option>All Faculties</option>
                <option>IT</option>
                <option>Electrical - Electronics</option>
                <option>Economics</option>
                <option>Environment</option>
                <option>Education</option>
            </select>
        </div>
    </div>
</div>

<!-- ================= TABLE ================= -->
<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <!-- HEADER -->
            <thead class="table-light">
                <tr>
                    <th><i class="fas fa-hashtag me-1 text-muted"></i>Code</th>
                    <th><i class="fas fa-file-alt me-1 text-muted"></i>Topic Name</th>
                    <th><i class="fas fa-user-tie me-1 text-muted"></i>Principal Investigator</th>
                    <th><i class="fas fa-layer-group me-1 text-muted"></i>Faculty</th>
                    <th><i class="fas fa-calendar-alt me-1 text-muted"></i>Date Sent</th>
                    <th><i class="fas fa-check-circle me-1 text-muted"></i>Status</th>
                    <th class="text-end"><i class="fas fa-cogs me-1 text-muted"></i>Actions</th>
                </tr>
            </thead>

            <!-- BODY -->
            <tbody>
                <!-- IT -->
                <tr>
                    <td class="text-monospace fw-semibold">
                        <i class="fas fa-tag me-1 text-secondary"></i>T2023-IT-01
                    </td>
                    <td class="fw-medium text-primary">
                        <i class="fas fa-robot me-1"></i>Research on AI for Urban Traffic
                    </td>
                    <td><i class="fas fa-user-circle me-1"></i>Dr. Nguyen Van A</td>
                    <td>
                        <i class="fas fa-microchip text-primary me-1"></i>IT
                    </td>
                    <td><i class="fas fa-clock me-1"></i>20/10/2023</td>
                    <td>
                        <span class="badge bg-success-subtle text-success">
                            <i class="fas fa-check-circle me-1"></i>Approved
                        </span>
                    </td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary"><i class="fas fa-eye"></i></button>
                            <button class="btn btn-outline-primary"><i class="fas fa-edit"></i></button>
                        </div>
                    </td>
                </tr>

                <!-- ECONOMICS -->
                <tr>
                    <td class="text-monospace fw-semibold">
                        <i class="fas fa-tag me-1 text-secondary"></i>T2023-KT-05
                    </td>
                    <td class="fw-medium text-primary">
                        <i class="fas fa-chart-line me-1"></i>Digital Marketing Strategy for SME
                    </td>
                    <td><i class="fas fa-user-circle me-1"></i>MSc. Tran Thi B</td>
                    <td>
                        <i class="fas fa-chart-line text-success me-1"></i>Economics
                    </td>
                    <td><i class="fas fa-clock me-1"></i>22/10/2023</td>
                    <td>
                        <span class="badge bg-warning-subtle text-warning">
                            <i class="fas fa-hourglass-half me-1"></i>Pending Processing
                        </span>
                    </td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary"><i class="fas fa-eye"></i></button>
                            <button class="btn btn-outline-primary"><i class="fas fa-edit"></i></button>
                        </div>
                    </td>
                </tr>

                <!-- ELECTRONICS -->
                <tr>
                    <td class="text-monospace fw-semibold">
                        <i class="fas fa-tag me-1 text-secondary"></i>T2023-DT-11
                    </td>
                    <td class="fw-medium text-primary">
                        <i class="fas fa-bolt me-1"></i>IoT Application in Smart Agriculture
                    </td>
                    <td><i class="fas fa-user-circle me-1"></i>Dr. Pham Van C</td>
                    <td>
                        <i class="fas fa-bolt text-warning me-1"></i>Electrical - Electronics
                    </td>
                    <td><i class="fas fa-clock me-1"></i>25/10/2023</td>
                    <td>
                        <span class="badge bg-success-subtle text-success">
                            <i class="fas fa-check-circle me-1"></i>Approved
                        </span>
                    </td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary"><i class="fas fa-eye"></i></button>
                            <button class="btn btn-outline-primary"><i class="fas fa-edit"></i></button>
                        </div>
                    </td>
                </tr>

                <!-- ENVIRONMENT -->
                <tr>
                    <td class="text-monospace fw-semibold">
                        <i class="fas fa-tag me-1 text-secondary"></i>T2023-MT-07
                    </td>
                    <td class="fw-medium text-primary">
                        <i class="fas fa-leaf me-1"></i>Industrial Zone Environmental Impact Assessment
                    </td>
                    <td><i class="fas fa-user-circle me-1"></i>MSc. Le Thi D</td>
                    <td>
                        <i class="fas fa-leaf text-success me-1"></i>Environment
                    </td>
                    <td><i class="fas fa-clock me-1"></i>26/10/2023</td>
                    <td>
                        <span class="badge bg-danger-subtle text-danger">
                            <i class="fas fa-undo me-1"></i>Returned for Revision
                        </span>
                    </td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary"><i class="fas fa-eye"></i></button>
                            <button class="btn btn-outline-primary"><i class="fas fa-edit"></i></button>
                        </div>
                    </td>
                </tr>

                <!-- EDUCATION -->
                <tr>
                    <td class="text-monospace fw-semibold">
                        <i class="fas fa-tag me-1 text-secondary"></i>T2023-GD-03
                    </td>
                    <td class="fw-medium text-primary">
                        <i class="fas fa-graduation-cap me-1"></i>Innovation in Higher Education Teaching Methods
                    </td>
                    <td><i class="fas fa-user-circle me-1"></i>MSc. Tran Van F</td>
                    <td>
                        <i class="fas fa-graduation-cap text-info me-1"></i>Education
                    </td>
                    <td><i class="fas fa-clock me-1"></i>29/10/2023</td>
                    <td>
                        <span class="badge bg-success-subtle text-success">
                            <i class="fas fa-check-circle me-1"></i>Approved
                        </span>
                    </td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary"><i class="fas fa-eye"></i></button>
                            <button class="btn btn-outline-primary"><i class="fas fa-edit"></i></button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
