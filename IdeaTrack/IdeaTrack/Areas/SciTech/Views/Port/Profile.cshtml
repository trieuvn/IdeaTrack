@{
    ViewData["Title"] = "Hồ sơ sau cấp Khoa";
}

@section Styles {
    <link rel="stylesheet" href="~/css/table.css">
}

<!-- ================= PAGE HEADER ================= -->
<div class="d-flex justify-content-between align-items-start mb-4">
    <div>
        <h2 class="fw-bold mb-1 d-flex align-items-center">
            <i class="fas fa-folder-open text-primary fs-4 me-2"></i>
            Hồ sơ Sau Cấp Khoa
        </h2>
        <p class="text-muted mb-0 d-flex align-items-center">
            <i class="fas fa-info-circle me-1"></i>
            Danh sách các hồ sơ đề tài đã được Hội đồng Khoa phê duyệt
        </p>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-outline-success">
            <i class="fas fa-file-excel me-1"></i>
            Nhập Excel
        </button>
        <button class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i>
            Tạo hồ sơ
        </button>
    </div>
</div>

<!-- ================= TOOLBAR ================= -->
<div class="card mb-4 shadow-sm">
    <div class="card-body row g-3 align-items-center">

        <!-- SEARCH -->
        <div class="col-md-5">
            <label class="form-label small text-muted d-flex align-items-center mb-1">
                <i class="fas fa-search me-1"></i> Tìm kiếm
            </label>
            <div class="input-group">
                <span class="input-group-text bg-light">
                    <i class="fas fa-search text-secondary"></i>
                </span>
                <input class="form-control"
                       placeholder="Nhập mã hồ sơ hoặc tên đề tài">
            </div>
        </div>

        <!-- STATUS -->
        <div class="col-md-3">
            <label class="form-label small text-muted d-flex align-items-center mb-1">
                <i class="fas fa-filter me-1"></i> Trạng thái
            </label>
            <div class="input-group">
                <span class="input-group-text bg-light">
                    <i class="fas fa-flag text-secondary"></i>
                </span>
                <select class="form-select">
                    <option>Tất cả trạng thái</option>
                    <option>Đã duyệt</option>
                    <option>Chờ xử lý</option>
                    <option>Trả về chỉnh sửa</option>
                </select>
            </div>
        </div>

        <!-- FACULTY -->
        <div class="col-md-2">
            <label class="form-label small text-muted d-flex align-items-center mb-1">
                <i class="fas fa-building me-1"></i> Khoa / Viện
            </label>
            <select class="form-select">
                <option>Khoa / Viện</option>
                <option>CNTT</option>
                <option>Điện – Điện tử</option>
                <option>Kinh tế</option>
                <option>Môi trường</option>
                <option>Giáo dục</option>
            </select>
        </div>

    </div>
</div>

<!-- ================= TABLE ================= -->
<div class="card shadow-sm">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">

            <!-- HEADER -->
            <thead class="table-light">
                <tr>
                    <th><i class="fas fa-hashtag me-1 text-muted"></i>Mã</th>
                    <th><i class="fas fa-file-alt me-1 text-muted"></i>Tên đề tài</th>
                    <th><i class="fas fa-user-tie me-1 text-muted"></i>Chủ nhiệm</th>
                    <th><i class="fas fa-layer-group me-1 text-muted"></i>Khoa</th>
                    <th><i class="fas fa-calendar-alt me-1 text-muted"></i>Ngày gửi</th>
                    <th><i class="fas fa-check-circle me-1 text-muted"></i>Trạng thái</th>
                    <th class="text-end"><i class="fas fa-cogs me-1 text-muted"></i>Tác vụ</th>
                </tr>
            </thead>

            <!-- BODY -->
            <tbody>

                <!-- CNTT -->
                <tr>
                    <td class="text-monospace fw-semibold">
                        <i class="fas fa-tag me-1 text-secondary"></i>T2023-CNTT-01
                    </td>
                    <td class="fw-medium text-primary">
                        <i class="fas fa-robot me-1"></i>Nghiên cứu AI trong giao thông đô thị
                    </td>
                    <td><i class="fas fa-user-circle me-1"></i>TS. Nguyễn Văn A</td>
                    <td>
                        <i class="fas fa-microchip text-primary me-1"></i>CNTT
                    </td>
                    <td><i class="fas fa-clock me-1"></i>20/10/2023</td>
                    <td>
                        <span class="badge bg-success-subtle text-success">
                            <i class="fas fa-check-circle me-1"></i>Đã duyệt
                        </span>
                    </td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary"><i class="fas fa-eye"></i></button>
                            <button class="btn btn-outline-primary"><i class="fas fa-edit"></i></button>
                        </div>
                    </td>
                </tr>

                <!-- KINH TẾ -->
                <tr>
                    <td class="text-monospace fw-semibold">
                        <i class="fas fa-tag me-1 text-secondary"></i>T2023-KT-05
                    </td>
                    <td class="fw-medium text-primary">
                        <i class="fas fa-chart-line me-1"></i>Chiến lược Digital Marketing cho SME
                    </td>
                    <td><i class="fas fa-user-circle me-1"></i>ThS. Trần Thị B</td>
                    <td>
                        <i class="fas fa-chart-line text-success me-1"></i>Kinh tế
                    </td>
                    <td><i class="fas fa-clock me-1"></i>22/10/2023</td>
                    <td>
                        <span class="badge bg-warning-subtle text-warning">
                            <i class="fas fa-hourglass-half me-1"></i>Chờ xử lý
                        </span>
                    </td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary"><i class="fas fa-eye"></i></button>
                            <button class="btn btn-outline-primary"><i class="fas fa-edit"></i></button>
                        </div>
                    </td>
                </tr>

                <!-- ĐIỆN – ĐIỆN TỬ -->
                <tr>
                    <td class="text-monospace fw-semibold">
                        <i class="fas fa-tag me-1 text-secondary"></i>T2023-DT-11
                    </td>
                    <td class="fw-medium text-primary">
                        <i class="fas fa-bolt me-1"></i>Ứng dụng IoT trong nông nghiệp thông minh
                    </td>
                    <td><i class="fas fa-user-circle me-1"></i>TS. Phạm Văn C</td>
                    <td>
                        <i class="fas fa-bolt text-warning me-1"></i>Điện – Điện tử
                    </td>
                    <td><i class="fas fa-clock me-1"></i>25/10/2023</td>
                    <td>
                        <span class="badge bg-success-subtle text-success">
                            <i class="fas fa-check-circle me-1"></i>Đã duyệt
                        </span>
                    </td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary"><i class="fas fa-eye"></i></button>
                            <button class="btn btn-outline-primary"><i class="fas fa-edit"></i></button>
                        </div>
                    </td>
                </tr>

                <!-- MÔI TRƯỜNG -->
                <tr>
                    <td class="text-monospace fw-semibold">
                        <i class="fas fa-tag me-1 text-secondary"></i>T2023-MT-07
                    </td>
                    <td class="fw-medium text-primary">
                        <i class="fas fa-leaf me-1"></i>Đánh giá tác động môi trường KCN
                    </td>
                    <td><i class="fas fa-user-circle me-1"></i>ThS. Lê Thị D</td>
                    <td>
                        <i class="fas fa-leaf text-success me-1"></i>Môi trường
                    </td>
                    <td><i class="fas fa-clock me-1"></i>26/10/2023</td>
                    <td>
                        <span class="badge bg-danger-subtle text-danger">
                            <i class="fas fa-undo me-1"></i>Trả về chỉnh sửa
                        </span>
                    </td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary"><i class="fas fa-eye"></i></button>
                            <button class="btn btn-outline-primary"><i class="fas fa-edit"></i></button>
                        </div>
                    </td>
                </tr>

                <!-- GIÁO DỤC -->
                <tr>
                    <td class="text-monospace fw-semibold">
                        <i class="fas fa-tag me-1 text-secondary"></i>T2023-GD-03
                    </td>
                    <td class="fw-medium text-primary">
                        <i class="fas fa-graduation-cap me-1"></i>Đổi mới phương pháp giảng dạy đại học
                    </td>
                    <td><i class="fas fa-user-circle me-1"></i>ThS. Trần Văn F</td>
                    <td>
                        <i class="fas fa-graduation-cap text-info me-1"></i>Giáo dục
                    </td>
                    <td><i class="fas fa-clock me-1"></i>29/10/2023</td>
                    <td>
                        <span class="badge bg-success-subtle text-success">
                            <i class="fas fa-check-circle me-1"></i>Đã duyệt
                        </span>
                    </td>
                    <td class="text-end">
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-secondary"><i class="fas fa-eye"></i></button>
                            <button class="btn btn-outline-primary"><i class="fas fa-edit"></i></button>
                        </div>
                    </td>
                </tr>

            </tbody>
        </table>
    </div>
</div>
