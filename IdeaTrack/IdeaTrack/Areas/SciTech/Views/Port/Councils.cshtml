@model BoardManagementVM
@using IdeaTrack.Areas.SciTech.Controllers
@using IdeaTrack.Models


    <div class="mb-4">
        <h1 class="fw-bold mb-1">Quản lý Hội đồng</h1>
        <p class="text-muted mb-0">Thiết lập và quản lý thành viên các hội đồng đánh giá.</p>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center border-bottom">
                    <h6 class="fw-bold mb-0 text-uppercase small">Danh sách Hội đồng</h6>
                    <button class="btn btn-sm btn-primary rounded-pill px-3" onclick="openBoardModal()" style="width: 120px;">
                        <i class="fa-solid fa-plus me-1"></i> Tạo mới
                    </button>
                </div>

                <div class="card-body p-2 d-flex flex-column gap-2" style="max-height: 75vh; overflow-y: auto;">
                    <div class="px-2 mb-2">
                        <div class="input-group input-group-sm">
                            <span class="input-group-text bg-light border-end-0"><i class="fa-solid fa-search text-muted"></i></span>
                            <input class="form-control border-start-0 bg-light shadow-none" id="searchBoard" placeholder="Tìm tên hội đồng...">
                        </div>
                    </div>

                    @if (Model.Boards != null && Model.Boards.Any())
                    {
                        @foreach (var board in Model.Boards)
                        {
                            var isActive = board.Id == Model.SelectedBoardId;
                            <a href="/SciTech/Port/Councils/@board.Id" class="text-decoration-none board-item-link">
                                <div class="card-item p-3 rounded-3 border transition-all @(isActive ? "active-card" : "hover-light")">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div class="board-title @(isActive ? "text-primary fw-bold" : "text-dark fw-semibold")">
                                            <i class="fa-solid fa-users-rectangle me-2"></i>@board.BoardName
                                        </div>
                                        <span class="badge @(board.IsActive ? "bg-success-subtle text-success" : "bg-light text-muted") border">
                                            @(board.IsActive ? "Hoạt động" : "Kết thúc")
                                        </span>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center small text-muted">
                                        <span><i class="fa-regular fa-calendar me-1"></i> @board.FiscalYear</span>
                                        <span><i class="fa-solid fa-user-group me-1"></i> @(board.Members?.Count ?? 0) TV</span>
                                    </div>
                                </div>
                            </a>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm h-100 border-0 overflow-hidden">
                @if (Model.SelectedBoard != null)
                {
                    <div class="card-header bg-white py-3 border-bottom">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h4 class="fw-bold mb-1 text-primary">@Model.SelectedBoard.BoardName</h4>
                                <p class="text-muted mb-0 small">@Model.SelectedBoard.Description</p>
                                <div class="mt-2">
                                    <span class="badge bg-primary-subtle text-primary border border-primary-subtle px-3 py-2">
                                        Năm tài khóa: @Model.SelectedBoard.FiscalYear
                                    </span>
                                </div>
                            </div>
                            <div class="d-flex gap-2">
                                
                                <button class="btn btn-outline-danger btn-sm rounded-pill" style=" width: 100px; "  onclick="deleteBoard(@Model.SelectedBoard.Id)">
                                    <i class="fa-solid fa-trash me-1"></i> Xóa HĐ
                                </button>
                                <button class="btn btn-primary btn-sm rounded-pill px-3" onclick="openAddMemberModal(@Model.SelectedBoard.Id)" style="width: 120px;">
                                    <i class="fa-solid fa-user-plus me-1"></i> Thêm TV
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 py-3 border-0 small text-uppercase fw-bold text-muted">Thành viên</th>
                                    <th class="py-3 border-0 small text-uppercase fw-bold text-muted">Chuyên môn</th>
                                    <th class="py-3 border-0 small text-uppercase fw-bold text-muted" style="width: 180px;">Vai trò</th>
                                    <th class="text-end pe-4 py-3 border-0 small text-uppercase fw-bold text-muted">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var member in Model.SelectedBoard.Members ?? new List<BoardMember>())
                                {
                                    <tr id="member-row-@member.Id" class="animate-fade-in">
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm me-3 bg-light rounded-circle d-flex align-items-center justify-content-center fw-bold text-primary">
                                                    @(string.IsNullOrEmpty(member.User?.FullName) ? "?" : member.User.FullName.Substring(0, 1).ToUpper())
                                                </div>
                                                <div>
                                                    <div class="fw-bold text-dark">@member.User?.FullName</div>
                                                    <div class="text-muted small">@member.User?.Email</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="fw-medium small">@member.User?.Degree</div>
                                            <div class="text-muted small">@member.User?.Department?.Name</div>
                                        </td>
                                        <td>
                                            <select class="form-select form-select-sm role-select shadow-none" data-id="@member.Id">
                                                @foreach (BoardRole r in Enum.GetValues(typeof(BoardRole)))
                                                {
                                                    <option value="@((int)r)" selected="@(member.Role == r)">
                                                        @(r == BoardRole.Chairman ? "Chủ tịch" : r == BoardRole.Secretary ? "Thư ký" : "Ủy viên")
                                                    </option>
                                                }
                                            </select>
                                        </td>
                                        <td class="text-end pe-4">
                                            <button class="btn btn-sm btn-outline-danger border-0 btn-remove-member" data-id="@member.Id">
                                                <i class="fa-solid fa-trash-can"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="card-body d-flex flex-column align-items-center justify-content-center text-muted py-5">
                        <i class="fa-solid fa-users-viewfinder fa-3x opacity-25 mb-3"></i>
                        <h5 class="fw-bold">Chưa chọn hội đồng</h5>
                        <p class="small">Chọn một hội đồng từ danh sách bên trái để quản lý.</p>
                    </div>
                }
            </div>
        </div>
    </div>

<div class="modal fade" id="saveBoardModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-bottom-0">
                <h5 class="fw-bold mb-0" id="modalTitle">Thông tin Hội đồng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="boardForm">
                <div class="modal-body">
                    <input type="hidden" id="boardId" name="Id" value="0" />
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Tên Hội đồng</label>
                        <input type="text" class="form-control shadow-none" id="boardName" name="BoardName" required placeholder="Ví dụ: Hội đồng Khoa học 2024">
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Năm tài khóa</label>
                        <input type="number" class="form-control shadow-none" id="fiscalYear" name="FiscalYear" value="@DateTime.Now.Year" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold">Mô tả</label>
                        <textarea class="form-control shadow-none" id="description" name="Description" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer border-top-0">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4">Lưu dữ liệu</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="addMemberModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-bottom-0">
                <h5 class="fw-bold mb-0">Thêm Thành viên vào Hội đồng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-4 shadow-sm">
                    <span class="input-group-text bg-white border-end-0"><i class="fa-solid fa-magnifying-glass text-muted"></i></span>
                    <input type="text" class="form-control border-start-0 shadow-none" id="searchUserInput"
                           placeholder="Tìm theo tên, email hoặc mã nhân viên...">
                </div>

                <div id="userSearchResult" class="list-group list-group-flush border rounded-3"
                     style="max-height: 400px; overflow-y: auto;">
                    <div class="text-center py-5 text-muted">
                        <i class="fa-solid fa-search fa-2x mb-2 opacity-25"></i>
                        <p>Nhập từ khóa để tìm kiếm nhân sự</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-top-0">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

<script>
    // ===============================
    // 0. API ROUTES (CHUẨN AREA)
    // ===============================
    const API = {
        deleteBoard: '@Url.Action("DeleteBoard", "Port", new { area = "SciTech" })',
        addMember: '@Url.Action("AddMember", "Port", new { area = "SciTech" })',
        removeMember: '@Url.Action("RemoveMember", "Port", new { area = "SciTech" })',
        searchUsers: '@Url.Action("SearchUsers", "Port", new { area = "SciTech" })',
        saveBoard: '@Url.Action("SaveBoard", "Port", new { area = "SciTech" })',
        updateRole: '@Url.Action("UpdateMemberRole", "Port", new { area = "SciTech" })'
    };

    // ===============================
    // 1. BIẾN TOÀN CỤC
    // ===============================
    let currentBoardId = 0;
    let searchTimeout = null;

    // ===============================
    // 2. HÀM ĐỘC LẬP
    // ===============================
    function openBoardModal(id = 0, name = '', year = new Date().getFullYear(), desc = '') {
        $('#boardId').val(id);
        $('#boardName').val(name);
        $('#fiscalYear').val(year);
        $('#description').val(desc);

        $('#modalTitle').text(id === 0 ? 'Tạo Hội đồng mới' : 'Cập nhật Hội đồng');

        new bootstrap.Modal(document.getElementById('saveBoardModal')).show();
    }

    function deleteBoard(id) {
        if (!confirm('CẢNH BÁO: Xóa hội đồng sẽ xóa tất cả thành viên liên quan. Bạn chắc chắn chứ?')) return;

        $.post(API.deleteBoard, { id })
            .done(res => {
                if (res.success) {
                    location.href = '@Url.Action("Councils", "Port", new { area = "SciTech" })';
                } else {
                    alert(res.message || 'Không thể xóa hội đồng');
                }
            });
    }

        function openAddMemberModal(boardId) {
        currentBoardId = boardId;
        $('#searchUserInput').val(''); // Reset ô nhập liệu

        // GỌI HÀM NÀY ĐỂ HIỂN THỊ DỮ LIỆU NGAY LẬP TỨC
        fetchUsers("");

        new bootstrap.Modal(document.getElementById('addMemberModal')).show();
    }
    function addMember(userId) {
        $.post(API.addMember, {
            boardId: currentBoardId,
            userId: userId
        }).done(res => {
            if (res.success) location.reload();
            else alert(res.message || 'Không thể thêm thành viên');
        });
    }

    // ===============================
    // 3. DOM READY
    // ===============================
    $(function () {

        // 🔍 Tìm kiếm hội đồng
        $('#searchBoard').on('keyup', function () {
            const value = $(this).val().toLowerCase();
            $('.board-item-link').each(function () {
                const title = $(this).find('.board-title').text().toLowerCase();
                $(this).toggle(title.includes(value));
            });
        });

        // 🔁 Cập nhật vai trò thành viên
        $('.role-select').on('change', function () {
            $.post(API.updateRole, {
                memberId: $(this).data('id'),
                role: $(this).val()
            });
        });

        // ❌ Xóa thành viên
        $('.btn-remove-member').on('click', function () {
            const memberId = $(this).data('id');
            if (!confirm('Gỡ thành viên này khỏi hội đồng?')) return;

            $.post(API.removeMember, { memberId })
                .done(res => {
                    if (res.success) {
                        $('#member-row-' + memberId).fadeOut(300);
                    }
                });
        });

        // 👤 Tìm kiếm nhân sự
        $('#searchUserInput').on('keyup', function () {
            const term = $(this).val();
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
        fetchUsers(term);
    }, 400);
            if (term.length < 2) return;

            searchTimeout = setTimeout(() => {
                $('#userSearchResult').html(
                    '<div class="text-center py-5">' +
                    '<div class="spinner-border text-primary spinner-border-sm"></div>' +
                    '</div>'
                );

                $.get(API.searchUsers, { term })
                    .done(data => {
                        let html = '';

                        if (!data || data.length === 0) {
                            html = '<div class="text-center py-5 text-muted">Không tìm thấy nhân sự</div>';
                        } else {
                            data.forEach(user => {
                                html += `
                                    <div class="list-group-item d-flex justify-content-between align-items-center py-3">
                                        <div>
                                            <div class="fw-bold">${user.fullName}</div>
                                            <div class="small text-muted">${user.email}</div>
                                        </div>
                                        <button class="btn btn-sm btn-primary rounded-pill px-3"
                                                onclick="addMember(${user.id})">
                                            Chọn
                                        </button>
                                    </div>`;
                            });
                        }

                        $('#userSearchResult').html(html);
                    });
            }, 400);
        });

        // 💾 Submit form tạo / cập nhật hội đồng
        $('#boardForm').on('submit', function (e) {
            e.preventDefault();

            $.post(API.saveBoard, $(this).serialize())
                .done(res => {
                    if (res.success) location.reload();
                    else alert('Lỗi: ' + res.message);
                });
        });
    });
        function fetchUsers(term = "") {
        // Hiển thị loading trong khi chờ
        $('#userSearchResult').html(
            '<div class="text-center py-5"><div class="spinner-border text-primary spinner-border-sm"></div></div>'
        );

        $.get(API.searchUsers, { term: term })
            .done(data => {
                let html = '';
                if (!data || data.length === 0) {
                    html = '<div class="text-center py-5 text-muted">Không tìm thấy nhân sự</div>';
                } else {
                    data.forEach(user => {
                        html += `
                            <div class="list-group-item d-flex justify-content-between align-items-center py-3">
                                <div>
                                    <div class="fw-bold">${user.fullName}</div>
                                    <div class="small text-muted">${user.email} - ${user.departmentName || ''}</div>
                                </div>
                                <button class="btn btn-sm btn-primary rounded-pill px-3" onclick="addMember(${user.id})">
                                    Chọn
                                </button>
                            </div>`;
                    });
                }
                $('#userSearchResult').html(html);
            });
    }

</script>
