<main class="container-fluid py-4">

    <!-- BREADCRUMB -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb small">
            <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="#">Quản trị</a></li>
            <li class="breadcrumb-item active fw-semibold">Quản lý Hội đồng</li>
        </ol>
    </nav>

    <!-- HEADER -->
    <div class="mb-4">
        <h1 class="fw-bold mb-1">Quản lý Hội đồng</h1>
        <p class="text-muted mb-0">
            Thiết lập và quản lý thành viên các hội đồng đánh giá.
        </p>
    </div>

    <div class="row g-4">

        <!-- LEFT: COUNCIL LIST -->
        <div class="col-lg-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h6 class="fw-bold mb-0">Danh sách Hội đồng</h6>
                    <button class="btn btn-sm btn-outline-primary">
                        <i class="fa-solid fa-plus"></i>
                    </button>
                </div>

                <div class="card-body d-flex flex-column gap-3">

                    <!-- Search -->
                    <div class="input-group">
                        <span class="input-group-text bg-light">
                            <i class="fa-solid fa-search"></i>
                        </span>
                        <input class="form-control" placeholder="Tìm hội đồng...">
                    </div>

                    <!-- Active Council -->
                    <div class="border border-primary rounded p-3 bg-primary bg-opacity-10">
                        <div class="d-flex justify-content-between">
                            <div class="fw-bold">
                                <i class="fa-solid fa-laptop-code me-1 text-primary"></i>
                                Hội đồng CNTT 2023
                            </div>
                            <span class="badge bg-success" style="margin-top:70px;">Hoạt động</span>
                        </div>
                        <div class="text-muted small mt-1">
                            <i class="fa-regular fa-calendar"></i> 20/10/2023 ·
                            <i class="fa-solid fa-users"></i> 5 thành viên
                        </div>
                    </div>

                    <!-- Other councils -->
                    <div class="border rounded p-3 hover-shadow-sm">
                        <div class="d-flex justify-content-between">
                            <div class="fw-medium">Hội đồng Kinh tế 2024</div>
                            <span class="badge bg-warning text-dark" style="margin-top:70px;">Dự thảo</span>
                        </div>
                        <div class="text-muted small mt-1">
                            <i class="fa-regular fa-calendar"></i> 01/01/2024 ·
                            <i class="fa-solid fa-users"></i> 7 thành viên
                        </div>
                    </div>

                    <div class="border rounded p-3 opacity-75">
                        <div class="d-flex justify-content-between">
                            <div class="fw-medium">Hội đồng KHCB 2022</div>
                            <span class="badge bg-secondary" style="margin-top:70px;">Đã kết thúc</span>
                        </div>
                        <div class="text-muted small mt-1">
                            <i class="fa-regular fa-calendar"></i> 15/05/2022 ·
                            <i class="fa-solid fa-users"></i> 4 thành viên
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- RIGHT: COUNCIL DETAIL -->
        <div class="col-lg-8">
            <div class="card shadow-sm h-100">

                <!-- Council Info -->
                <div class="card-header bg-white">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h4 class="fw-bold mb-1">
                                Hội đồng CNTT 2023
                                <button class="btn btn-sm btn-link text-primary">
                                    <i class="fa-solid fa-pen"></i>
                                </button>
                            </h4>
                            <p class="text-muted small mb-2">
                                Đánh giá các sáng kiến thuộc lĩnh vực Công nghệ thông tin.
                            </p>
                            <div class="small text-muted">
                                <i class="fa-regular fa-calendar"></i>
                                20/10/2023 – 20/12/2023 |
                                <i class="fa-solid fa-user-tie"></i>
                                TS. Nguyễn Văn A (Chủ tịch)
                            </div>
                        </div>

                        <button class="btn btn-outline-secondary btn-sm">
                            <i class="fa-solid fa-gear"></i> Cấu hình
                        </button>
                    </div>
                </div>

                <!-- Member Toolbar -->
                <div class="card-body border-bottom">
                    <div class="d-flex flex-wrap gap-3 justify-content-between">
                        <h6 class="fw-bold mb-0">Thành viên Hội đồng</h6>

                        <div class="d-flex gap-2">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text bg-light">
                                    <i class="fa-solid fa-search"></i>
                                </span>
                                <input class="form-control" placeholder="Tìm thành viên">
                            </div>
                            <button class="btn btn-primary btn-sm">
                                <i class="fa-solid fa-user-plus"></i> Thêm
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Members Table -->
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Thành viên</th>
                                <th>Chức danh / Đơn vị</th>
                                <th>Vai trò</th>
                                <th class="text-end">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>
                                    <div class="fw-semibold">Nguyễn Văn A</div>
                                    <small class="text-muted">nguyenva@university.edu.vn</small>
                                </td>
                                <td>
                                    <div class="fw-medium">Tiến sĩ</div>
                                    <small class="text-muted">Khoa CNTT</small>
                                </td>
                                <td>
                                    <select class="form-select form-select-sm bg-danger-subtle text-danger fw-semibold">
                                        <option selected>Chủ tịch</option>
                                        <option>Thư ký</option>
                                        <option>Ủy viên</option>
                                    </select>
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-primary">
                                        <i class="fa-solid fa-pen"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <div class="fw-semibold">Trần Thị B</div>
                                    <small class="text-muted">trantb@university.edu.vn</small>
                                </td>
                                <td>
                                    <div class="fw-medium">Thạc sĩ</div>
                                    <small class="text-muted">Phòng Đào tạo</small>
                                </td>
                                <td>
                                    <select class="form-select form-select-sm bg-primary-subtle text-primary fw-semibold">
                                        <option>Chủ tịch</option>
                                        <option selected>Thư ký</option>
                                        <option>Ủy viên</option>
                                    </select>
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-primary">
                                        <i class="fa-solid fa-pen"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <div class="fw-semibold">Lê Văn C</div>
                                    <small class="text-muted">levanc@university.edu.vn</small>
                                </td>
                                <td>
                                    <div class="fw-medium">PGS</div>
                                    <small class="text-muted">Khoa CNTT</small>
                                </td>
                                <td>
                                    <select class="form-select form-select-sm">
                                        <option>Chủ tịch</option>
                                        <option>Thư ký</option>
                                        <option selected>Ủy viên</option>
                                    </select>
                                </td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-primary">
                                        <i class="fa-solid fa-pen"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>

                <!-- Footer -->
                <div class="card-footer d-flex justify-content-between small text-muted">
                    Hiển thị 3 / 5 thành viên
                    <div>
                        <button class="btn btn-sm btn-outline-secondary" disabled>Trước</button>
                        <button class="btn btn-sm btn-outline-secondary">Sau</button>
                    </div>
                </div>

            </div>
        </div>

    </div>
</main>
